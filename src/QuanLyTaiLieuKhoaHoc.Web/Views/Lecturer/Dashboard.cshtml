<!-- Subject Statistics -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card-custom">
            <div class="card-header-custom">
                <h5 class="mb-0">
                    <i class="fas fa-chart-bar me-2"></i>
                    Thống kê tài liệu theo chuyên ngành
                </h5>
            </div>
            <div class="card-body">
                <canvas id="subjectStatsChart" height="100"></canvas>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    $(document).ready(function() {
        // Subject statistics chart
        const ctx = document.getElementById('subjectStatsChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Lập trình', 'Cơ sở dữ liệu', 'AI/ML', 'Mạng máy tính', 'Hệ điều hành', 'Phần mềm'],
                datasets: [{
                    label: 'Số lượng tài liệu',
                    data: [45, 32, 28, 19, 15, 22],
                    backgroundColor: [
                        'rgba(37, 99, 235, 0.8)',
                        'rgba(16, 185, 129, 0.8)',
                        'rgba(245, 158, 11, 0.8)',
                        'rgba(239, 68, 68, 0.8)',
                        'rgba(139, 92, 246, 0.8)',
                        'rgba(6, 182, 212, 0.8)'
                    ],
                    borderColor: [
                        'rgba(37, 99, 235, 1)',
                        'rgba(16, 185, 129, 1)',
                        'rgba(245, 158, 11, 1)',
                        'rgba(239, 68, 68, 1)',
                        'rgba(139, 92, 246, 1)',
                        'rgba(6, 182, 212, 1)'
                    ],
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });
        
        // Add click handlers for favorite buttons
        $('.btn-outline-warning').on('click', function() {
            var $this = $(this);
            var $icon = $this.find('i');
            
            if ($icon.hasClass('fas')) {
                $icon.removeClass('fas').addClass('far');
                $this.removeClass('btn-outline-warning').addClass('btn-outline-secondary');
                AppUtils.showToast('Đã bỏ khỏi danh sách yêu thích', 'info');
            } else {
                $icon.removeClass('far').addClass('fas');
                $this.removeClass('btn-outline-secondary').addClass('btn-outline-warning');
                AppUtils.showToast('Đã thêm vào danh sách yêu thích', 'success');
            }
        });
    });
</script>
}
