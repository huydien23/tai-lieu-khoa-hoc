@{
    ViewData["Title"] = "Dashboard Giảng viên";
}

<!-- Dashboard Header -->
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="h2 fw-bold mb-2">
                <i class="fas fa-chalkboard-teacher me-3 text-primary"></i>
                Dashboard Giảng viên
            </h1>
            <p class="text-muted mb-0">Truy cập tài liệu nghiên cứu và giảng dạy</p>
        </div>
    </div>
</div>

<!-- Key Statistics -->
<div class="row g-4 mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="stats-card">
            <div class="stats-icon text-primary">
                <i class="fas fa-book-open"></i>
            </div>
            <div class="stats-number">45</div>
            <div class="stats-label">Tài liệu theo chuyên môn</div>
            <small class="text-muted">
                <i class="fas fa-laptop-code me-1"></i>Công nghệ thông tin
            </small>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="stats-card">
            <div class="stats-icon text-success">
                <i class="fas fa-download"></i>
            </div>
            <div class="stats-number">89</div>
            <div class="stats-label">Đã tải xuống</div>
            <small class="text-success">
                <i class="fas fa-arrow-up me-1"></i>+15 tuần này
            </small>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="stats-card">
            <div class="stats-icon text-info">
                <i class="fas fa-bookmark"></i>
            </div>
            <div class="stats-number">12</div>
            <div class="stats-label">Đã đánh dấu</div>
            <small class="text-muted">
                <i class="fas fa-star me-1"></i>Yêu thích
            </small>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="stats-card">
            <div class="stats-icon text-warning">
                <i class="fas fa-share-alt"></i>
            </div>
            <div class="stats-number">6</div>
            <div class="stats-label">Đã chia sẻ</div>
            <small class="text-muted">
                <i class="fas fa-users me-1"></i>Với sinh viên
            </small>
        </div>
    </div>
</div>

<!-- Dashboard Content with Tab Layout -->
<div class="row g-4">
    <!-- Tab Navigation (Left) -->
    <div class="col-lg-3">
        <div class="card-custom">
            <div class="card-header-custom">
                <h6 class="mb-0">
                    <i class="fas fa-layer-group me-2"></i>
                    Truy cập nhanh
                </h6>
            </div>
            <div class="card-body p-0">
                <div class="nav flex-column nav-pills dashboard-nav" id="v-pills-tab" role="tablist">
                    <button class="nav-link active" id="v-pills-overview-tab" data-bs-toggle="pill"
                        data-bs-target="#v-pills-overview" type="button" role="tab">
                        <i class="fas fa-chart-pie me-2"></i>Tổng quan
                    </button>
                    <button class="nav-link" id="v-pills-documents-tab" data-bs-toggle="pill"
                        data-bs-target="#v-pills-documents" type="button" role="tab">
                        <i class="fas fa-book me-2"></i>Tài liệu
                    </button>
                    <button class="nav-link" id="v-pills-favorites-tab" data-bs-toggle="pill"
                        data-bs-target="#v-pills-favorites" type="button" role="tab">
                        <i class="fas fa-star me-2"></i>Yêu thích
                    </button>
                    <button class="nav-link" id="v-pills-shared-tab" data-bs-toggle="pill"
                        data-bs-target="#v-pills-shared" type="button" role="tab">
                        <i class="fas fa-share-alt me-2"></i>Đã chia sẻ
                    </button>
                </div>
            </div>
        </div>
    </div>
    <!-- Tab Content (Right) -->
    <div class="col-lg-9">
        <div class="tab-content" id="v-pills-tabContent">
            <!-- Overview Tab -->
            <div class="tab-pane fade show active" id="v-pills-overview" role="tabpanel">
                <div class="row g-4">
                    <!-- Recently Accessed -->
                    <div class="col-12">
                        <div class="card-custom">
                            <div class="card-header-custom">
                                <h6 class="mb-0">
                                    <i class="fas fa-history me-2"></i>
                                    Tài liệu truy cập gần đây
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="document-card">
                                            <div class="document-icon">
                                                <i class="fas fa-file-pdf text-danger"></i>
                                            </div>
                                            <div class="document-info">
                                                <h6 class="document-title">Lập trình Web nâng cao</h6>
                                                <p class="document-meta">PDF • 2.5 MB • 2 ngày trước</p>
                                                <div class="document-actions">
                                                    <button class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-eye me-1"></i>Xem
                                                    </button>
                                                    @if (User.IsInRole("GiangVien") || User.IsInRole("ThuThu"))
                                                    {
                                                        <button class="btn btn-sm btn-outline-success">
                                                            <i class="fas fa-download me-1"></i>Tải
                                                        </button>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="document-card">
                                            <div class="document-icon">
                                                <i class="fas fa-file-word text-primary"></i>
                                            </div>
                                            <div class="document-info">
                                                <h6 class="document-title">Nghiên cứu về AI</h6>
                                                <p class="document-meta">DOCX • 1.8 MB • 1 tuần trước</p>
                                                <div class="document-actions">
                                                    <button class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-eye me-1"></i>Xem
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-success">
                                                        <i class="fas fa-download me-1"></i>Tải
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr />
                                <div class="row">
                                    <div class="col-md-6">
                                        <h6 class="fw-bold mb-2"><i class="fas fa-layer-group me-2"></i>Thống kê theo
                                            chuyên ngành</h6>
                                        <table class="table table-bordered table-sm">
                                            <thead>
                                                <tr>
                                                    <th>Chuyên ngành</th>
                                                    <th>Số lượng</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.ThongKeTheoChuyenNganh)
                                                {
                                                    <tr>
                                                        <td>@item.Key</td>
                                                        <td>@item.Value</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="col-md-6">
                                        <h6 class="fw-bold mb-2"><i class="fas fa-book me-2"></i>Thống kê theo loại tài
                                            liệu</h6>
                                        <table class="table table-bordered table-sm">
                                            <thead>
                                                <tr>
                                                    <th>Loại tài liệu</th>
                                                    <th>Số lượng</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.ThongKeTheoLoaiTaiLieu)
                                                {
                                                    <tr>
                                                        <td>@item.Key</td>
                                                        <td>@item.Value</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Recommended Documents -->
                <div class="col-12">
                    <div class="card-custom">
                        <div class="card-header-custom">
                            <h6 class="mb-0">
                                <i class="fas fa-lightbulb me-2"></i>
                                Tài liệu đề xuất
                            </h6>
                        </div>
                        <div class="card-body">
                            <p class="text-muted">Dựa trên chuyên môn Công nghệ thông tin của bạn</p>
                            <div class="d-flex flex-wrap gap-2">
                                <span class="badge bg-primary">Machine Learning</span>
                                <span class="badge bg-success">Web Development</span>
                                <span class="badge bg-info">Data Science</span>
                                <span class="badge bg-warning">Artificial Intelligence</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Documents Tab -->
        <div class="tab-pane fade" id="v-pills-documents" role="tabpanel">
            <div class="card-custom">
                <div class="card-header-custom">
                    <h6 class="mb-0">
                        <i class="fas fa-book me-2"></i>
                        Tài liệu theo chuyên môn
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <input type="search" class="form-control" placeholder="Tìm kiếm tài liệu...">
                    </div>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="document-card">
                                <div class="document-icon">
                                    <i class="fas fa-file-pdf text-danger"></i>
                                </div>
                                <div class="document-info">
                                    <h6 class="document-title">Cơ sở dữ liệu nâng cao</h6>
                                    <p class="document-meta">PDF • 3.2 MB • TS. Nguyễn A</p>
                                    <div class="document-actions">
                                        <button class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye me-1"></i>Xem
                                        </button>
                                        <button class="btn btn-sm btn-outline-success">
                                            <i class="fas fa-download me-1"></i>Tải
                                        </button>
                                        <button class="btn btn-sm btn-outline-warning">
                                            <i class="fas fa-star me-1"></i>Lưu
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Favorites Tab -->
        <div class="tab-pane fade" id="v-pills-favorites" role="tabpanel">
            <div class="card-custom">
                <div class="card-header-custom">
                    <h6 class="mb-0">
                        <i class="fas fa-star me-2"></i>
                        Tài liệu yêu thích
                    </h6>
                </div>
                <div class="card-body">
                    <p class="text-muted">Danh sách các tài liệu bạn đã đánh dấu yêu thích</p>
                    <div class="text-center py-4">
                        <i class="fas fa-star fa-3x text-muted mb-3"></i>
                        <p class="text-muted">Chưa có tài liệu yêu thích nào</p>
                    </div>
                </div>
            </div>
        </div>
        <!-- Shared Tab -->
        <div class="tab-pane fade" id="v-pills-shared" role="tabpanel">
            <div class="card-custom">
                <div class="card-header-custom">
                    <h6 class="mb-0">
                        <i class="fas fa-share-alt me-2"></i>
                        Tài liệu đã chia sẻ
                    </h6>
                </div>
                <div class="card-body">
                    <p class="text-muted">Các tài liệu bạn đã chia sẻ với sinh viên</p>
                    <div class="d-grid gap-2">
                        <a href="#" class="btn btn-outline-primary">
                            <i class="fas fa-share me-2"></i>Chia sẻ tài liệu mới
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
