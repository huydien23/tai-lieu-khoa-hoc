@model QuanLyTaiLieuKhoaHoc.Web.Models.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard Giảng viên";
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/lecturer-dashboard.css" />
}

<!-- Modern Dashboard Header -->
<div class="page-header" data-aos="fade-down" data-aos-delay="100">
    <div class="d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
            <div class="header-icon me-3">
                <i class="fas fa-chalkboard-teacher"></i>
            </div>
            <div>
                <h1 class="mb-2">Dashboard Giảng viên</h1>
                <p class="text-muted mb-0">Tra cứu và khám phá tài liệu nghiên cứu, giảng dạy</p>
            </div>
        </div>
        <div class="header-actions">
            <div class="current-time">
                <i class="fas fa-clock"></i>
                <span id="current-time"></span>
            </div>
            <div class="user-info">
                <div class="user-name">
                    <i class="fas fa-user me-2"></i>
                    @((ViewBag.CurrentUser as QuanLyTaiLieuKhoaHoc.Web.Models.NguoiDung)?.HoTen ?? "Giảng viên")
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modern Quick Search Section -->
<div class="row mb-4" data-aos="fade-up" data-aos-delay="200">
    <div class="col-12">
        <form action="/TaiLieu" method="get" class="search-form">
            <h5>
                <i class="fas fa-search me-2 text-primary"></i>
                Tìm kiếm nhanh
            </h5>
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="input-group input-group-lg">
                        <input type="text" name="timKiem" class="form-control" 
                               placeholder="Nhập từ khóa tìm kiếm tài liệu..." 
                               value="@(ViewBag.TimKiem ?? "")">
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-search me-2"></i>Tìm kiếm
                        </button>
                    </div>
                </div>
                <div class="col-md-3">
                    <select name="maChuyenNganh" class="form-select">
                        <option value="">-- Tất cả chuyên ngành --</option>
                        @if (ViewBag.ChuyenNganh != null)
                        {
                            @foreach (var item in ViewBag.ChuyenNganh as SelectList ?? new SelectList(new List<object>()))
                            {
                                <option value="@item.Value" selected="@(item.Selected)">
                                    @item.Text
                                </option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <select name="maLoaiTaiLieu" class="form-select">
                        <option value="">-- Tất cả loại --</option>
                        @if (ViewBag.LoaiTaiLieu != null)
                        {
                            @foreach (var item in ViewBag.LoaiTaiLieu as SelectList ?? new SelectList(new List<object>()))
                            {
                                <option value="@item.Value" selected="@(item.Selected)">
                                    @item.Text
                                </option>
                            }
                        }
                    </select>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Modern Key Statistics -->
<div class="row g-4 mb-4">
    <div class="col-xl-3 col-md-6" data-aos="fade-up" data-aos-delay="100">
        <div class="stats-card">
            <div class="stats-icon text-primary"><i class="fas fa-book-open"></i></div>
            <div class="stats-number" data-count="@Model.TaiLieuMoiTrongThang">0</div>
            <div class="stats-label">TÀI LIỆU MỚI</div>
            <small class="text-muted">
                <i class="fas fa-calendar me-1"></i>Đã thêm trong tháng này
            </small>
        </div>
    </div>
    <div class="col-xl-3 col-md-6" data-aos="fade-up" data-aos-delay="200">
        <div class="stats-card">
            <div class="stats-icon text-success"><i class="fas fa-download"></i></div>
            <div class="stats-number" data-count="@Model.TongSoLuotTai">0</div>
            <div class="stats-label">ĐÃ TẢI XUỐNG</div>
            <small class="text-success">
                <i class="fas fa-arrow-up me-1"></i>
                @{
                    int tangTruong = Model.LuotTaiTrongTuan - Model.LuotTaiTuanTruoc;
                    string dau = tangTruong >= 0 ? "+" : "-";
                    string mau = tangTruong >= 0 ? "text-success" : "text-danger";
                }
                <span class="@mau">@($"{dau}{Math.Abs(tangTruong)} tuần này")</span>
            </small>
        </div>
    </div>
    <div class="col-xl-3 col-md-6" data-aos="fade-up" data-aos-delay="300">
        <div class="stats-card">
            <div class="stats-icon text-info"><i class="fas fa-bookmark"></i></div>
            <div class="stats-number" data-count="@Model.SoLuongYeuThich">0</div>
            <div class="stats-label">ĐÃ ĐÁNH DẤU</div>
            <small class="text-muted">
                <i class="fas fa-star me-1"></i>Tài liệu yêu thích
            </small>
        </div>
    </div>
    <div class="col-xl-3 col-md-6" data-aos="fade-up" data-aos-delay="400">
        <div class="stats-card">
            <div class="stats-icon text-warning"><i class="fas fa-eye"></i></div>
            <div class="stats-number" data-count="@Model.SoLuotXemGanDay">0</div>
            <div class="stats-label">ĐÃ XEM</div>
            <small class="text-muted">
                <i class="fas fa-history me-1"></i>Xem gần đây
            </small>
        </div>
    </div>
</div>

<!-- Dashboard Content with Tab Layout -->
<div class="row g-4">
    <!-- Modern Sidebar Navigation -->
    <div class="col-lg-3" data-aos="fade-right" data-aos-delay="100">
        <div class="card-custom">
            <div class="card-header-custom">
                <h6 class="mb-0">
                    <i class="fas fa-layer-group me-2"></i>
                    Truy cập nhanh
                </h6>
            </div>
            <div class="card-body p-0">
                <div class="nav flex-column nav-pills dashboard-nav" id="v-pills-tab" role="tablist">
                    <button class="nav-link active" id="v-pills-overview-tab" data-bs-toggle="pill"
                        data-bs-target="#v-pills-overview" type="button" role="tab">
                        <i class="fas fa-chart-pie me-2"></i><span class="menu-text">Tổng quan</span>
                    </button>
                    <button class="nav-link" id="v-pills-favorites-tab" data-bs-toggle="pill"
                        data-bs-target="#v-pills-favorites" type="button" role="tab">
                        <i class="fas fa-star me-2"></i><span class="menu-text">Yêu thích</span>
                    </button>
                    <button class="nav-link" id="v-pills-recent-tab" data-bs-toggle="pill"
                        data-bs-target="#v-pills-recent" type="button" role="tab">
                        <i class="fas fa-history me-2"></i><span class="menu-text">Xem gần đây</span>
                    </button>
                    <button class="nav-link" id="v-pills-downloaded-tab" data-bs-toggle="pill"
                        data-bs-target="#v-pills-downloaded" type="button" role="tab">
                        <i class="fas fa-download me-2"></i><span class="menu-text">Đã tải</span>
                    </button>
                    <button class="nav-link" id="v-pills-profile-tab" data-bs-toggle="pill"
                        data-bs-target="#v-pills-profile" type="button" role="tab">
                        <i class="fas fa-user me-2"></i><span class="menu-text">Thông tin tài khoản</span>
                    </button>
                    <button class="nav-link" id="v-pills-settings-tab" data-bs-toggle="pill"
                        data-bs-target="#v-pills-settings" type="button" role="tab">
                        <i class="fas fa-cog me-2"></i><span class="menu-text">Cài đặt tài khoản</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <!-- Tab Content (Right) -->
    <div class="col-lg-9">
        <div class="tab-content" id="v-pills-tabContent" data-aos="fade-left" data-aos-delay="200">
            <!-- Overview Tab -->
            <div class="tab-pane fade show active" id="v-pills-overview" role="tabpanel">
                <div class="row g-4">
                    <!-- Tài liệu mới nhất -->
                    <div class="col-12" data-aos="fade-up" data-aos-delay="100">
                        <div class="card-custom">
                            <div class="card-header-custom d-flex justify-content-between align-items-center">
                                <h6 class="mb-0">
                                    <i class="fas fa-clock me-2"></i>
                                    Tài liệu mới nhất
                                </h6>
                                <a href="/TaiLieu" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-external-link-alt me-1"></i>Xem tất cả
                                </a>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    @if (Model.TaiLieuXemGanDay != null && Model.TaiLieuXemGanDay.Any())
                                    {
                                        foreach (var item in Model.TaiLieuXemGanDay.Take(3))
                                        {
                                            <div class="col-md-4">
                                                <div class="document-card">
                                                    <div class="document-icon">
                                                        <i class="fas fa-file-pdf text-danger"></i>
                                                    </div>
                                                    <div class="document-info">
                                                        <h6 class="document-title">@item.TenTaiLieu</h6>
                                                        <p class="document-meta">
                                                            @item.LoaiFile?.ToUpper() • 
                                                            @(item.KichThuocFile >= 1024 ? $"{Math.Round(item.KichThuocFile / 1024.0, 1)} MB" : $"{item.KichThuocFile} KB") • 
                                                            @item.TacGia 
                                                        </p>
                                                        <div class="document-actions">
                                                            <a href="/TaiLieu/Details/@item.MaTaiLieu" class="btn btn-sm btn-outline-primary">
                                                                <i class="fas fa-eye me-1"></i>Xem
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <div class="col-12">
                                            <div class="empty-state">
                                                <div class="empty-icon">
                                                    <i class="fas fa-file-alt"></i>
                                                </div>
                                                <h5>Chưa có tài liệu nào</h5>
                                                <p>Bạn chưa xem tài liệu nào gần đây. Hãy khám phá thư viện để tìm tài liệu phù hợp.</p>
                                                <a href="/TaiLieu" class="empty-action-btn">
                                                    <i class="fas fa-search me-2"></i>Khám phá tài liệu
                                                </a>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Thống kê -->
                    <div class="col-12" data-aos="fade-up" data-aos-delay="200">
                        <div class="card-custom">
                            <div class="card-header-custom">
                                <h6 class="mb-0">
                                    <i class="fas fa-chart-bar me-2"></i>
                                    Thống kê hoạt động
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <!-- Thống kê theo chuyên ngành -->
                                    <div class="col-md-6">
                                        <h6 class="fw-bold mb-3">
                                            <i class="fas fa-layer-group me-2"></i>Thống kê theo chuyên ngành
                                        </h6>
                                        @if (Model.ThongKeTheoChuyenNganh != null && Model.ThongKeTheoChuyenNganh.Any())
                                        {
                                            <div class="list-group list-group-flush">
                                                @foreach (var item in Model.ThongKeTheoChuyenNganh)
                                                {
                                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                                        <span>@item.Key</span>
                                                        <span class="badge bg-primary rounded-pill">@item.Value</span>
                                                    </div>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <p class="text-muted">Chưa có dữ liệu thống kê chuyên ngành</p>
                                        }
                                    </div>
                                    <!-- Thống kê theo loại tài liệu -->
                                    <div class="col-md-6">
                                        <h6 class="fw-bold mb-3">
                                            <i class="fas fa-book me-2"></i>Thống kê theo loại tài liệu
                                        </h6>
                                        @if (Model.ThongKeTheoLoaiTaiLieu != null && Model.ThongKeTheoLoaiTaiLieu.Any())
                                        {
                                            <div class="list-group list-group-flush">
                                                @foreach (var item in Model.ThongKeTheoLoaiTaiLieu)
                                                {
                                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                                        <span>@item.Key</span>
                                                        <span class="badge bg-success rounded-pill">@item.Value</span>
                                                    </div>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <p class="text-muted">Chưa có dữ liệu thống kê loại tài liệu</p>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Favorites Tab -->
            <div class="tab-pane fade" id="v-pills-favorites" role="tabpanel">
                <div class="card-custom" data-aos="fade-up" data-aos-delay="100">
                    <div class="card-header-custom">
                        <h6 class="mb-0">
                            <i class="fas fa-star me-2"></i>
                            Tài liệu yêu thích
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            @if (Model.TaiLieuYeuThich != null && Model.TaiLieuYeuThich.Any())
                            {
                                foreach (var item in Model.TaiLieuYeuThich)
                                {
                                    <div class="col-md-6">
                                        <div class="document-card">
                                            <div class="document-icon">
                                                <i class="fas fa-file-pdf text-danger"></i>
                                            </div>
                                            <div class="document-info">
                                                @if (item.TaiLieu != null)
                                                {
                                                    <h6 class="document-title">@item.TaiLieu.TenTaiLieu</h6>
                                                }
                                                else
                                                {
                                                    <h6 class="document-title">Không rõ tên tài liệu</h6>
                                                }
                                                <p class="document-meta">
                                                    @(item.TaiLieu?.LoaiFile?.ToUpper() ?? "FILE") • 
                                                    @((item.TaiLieu?.KichThuocFile ?? 0L) >= 1024 ? $"{Math.Round((item.TaiLieu?.KichThuocFile ?? 0L) / 1024.0, 1)} MB" : $"{item.TaiLieu?.KichThuocFile ?? 0L} KB") • 
                                                    @item.TaiLieu?.TacGia 
                                                </p>
                                                <div class="document-actions">
                                                    <a href="/TaiLieu/Details/@item.MaTaiLieu" class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-eye me-1"></i>Xem
                                                    </a>
                                                    <form asp-action="BoYeuThich" asp-controller="TaiLieu" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@item.Id" />
                                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                                            <i class="fas fa-heart-broken me-1"></i>Bỏ thích
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="col-12">
                                    <div class="empty-state">
                                        <div class="empty-icon">
                                            <i class="fas fa-heart"></i>
                                        </div>
                                        <h5>Chưa có tài liệu yêu thích</h5>
                                        <p>Bạn chưa đánh dấu tài liệu nào làm yêu thích. Hãy khám phá và đánh dấu những tài liệu hữu ích.</p>
                                        <a href="/TaiLieu" class="empty-action-btn">
                                            <i class="fas fa-search me-2"></i>Khám phá tài liệu
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent View Tab -->
            <div class="tab-pane fade" id="v-pills-recent" role="tabpanel">
                <div class="card-custom">
                    <div class="card-header-custom">
                        <h6 class="mb-0">
                            <i class="fas fa-history me-2"></i>
                            Tài liệu xem gần đây
                        </h6>
                    </div>
                    <div class="card-body">
                        @if (Model.TaiLieuXemGanDay != null && Model.TaiLieuXemGanDay.Any())
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var item in Model.TaiLieuXemGanDay)
                                {
                                    <div class="list-group-item">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1">@item.TenTaiLieu</h6>
                                                <small class="text-muted">
                                                    @item.TacGia • @item.LoaiFile?.ToUpper() • 
                                                    @(item.KichThuocFile > 0 ? (item.KichThuocFile >= 1024 ? $"{Math.Round(item.KichThuocFile / 1024.0, 1)} MB" : $"{item.KichThuocFile} KB") : "0 KB")
                                                </small>
                                            </div>
                                            <a href="/TaiLieu/Details/@item.MaTaiLieu" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye me-1"></i>Xem lại
                                            </a>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted text-center">Bạn chưa xem tài liệu nào gần đây.</p>
                        }
                    </div>
                </div>
            </div>

            <!-- Downloaded Tab -->
            <div class="tab-pane fade" id="v-pills-downloaded" role="tabpanel">
                <div class="card-custom">
                    <div class="card-header-custom">
                        <h6 class="mb-0">
                            <i class="fas fa-download me-2"></i>
                            Tài liệu đã tải
                        </h6>
                    </div>
                    <div class="card-body">
                        <p class="text-muted">Các tài liệu bạn đã tải gần đây</p>
                        <div class="d-grid gap-2">
                            @if (Model.TaiLieuXemGanDay != null && Model.TaiLieuXemGanDay.Any())
                            {
                                foreach (var item in Model.TaiLieuXemGanDay)
                                {
                                    <div class="border rounded p-3 mb-2 document-card">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1">@item?.TenTaiLieu ?? "Không rõ"</h6>
                                                <small class="text-muted">
                                                    @item?.TacGia ?? "Tác giả không rõ"
                                                    • @item?.LoaiFile?.ToUpper() ?? "?"
                                                    • @(item?.KichThuocFile > 0 ? (item.KichThuocFile >= 1024 ? $"{Math.Round(item.KichThuocFile / 1024.0, 1)} MB" : $"{item.KichThuocFile} KB") : "0 KB")
                                                </small>
                                            </div>
                                            <a href="/TaiLieu/Details/@item?.MaTaiLieu" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye me-1"></i>Xem lại
                                            </a>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="text-muted">Bạn chưa tải tài liệu nào gần đây.</p>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Thông tin tài khoản Tab -->
            <div class="tab-pane fade" id="v-pills-profile" role="tabpanel">
                <div class="card-custom">
                    <div class="card-header-custom">
                        <h6 class="mb-0">
                            <i class="fas fa-id-card me-2"></i>
                            Thông tin tài khoản
                        </h6>
                    </div>
                    <div class="card-body">
                        @await Html.PartialAsync("~/Views/Lecturer/Profile.cshtml", ViewBag.CurrentUser as QuanLyTaiLieuKhoaHoc.Web.Models.NguoiDung)
                    </div>
                </div>
            </div>

            <!-- Cài đặt tài khoản Tab -->
            <div class="tab-pane fade" id="v-pills-settings" role="tabpanel">
                <div class="card-custom">
                    <div class="card-header-custom">
                        <h6 class="mb-0">
                            <i class="fas fa-cog me-2"></i>
                            Cài đặt tài khoản
                        </h6>
                    </div>
                    <div class="card-body">
                        <form asp-action="UpdateUser" asp-controller="Lecturer" method="post">
                            @Html.AntiForgeryToken()
                            <div class="mb-3">
                                <label class="form-label">Họ tên</label>
                                <input type="text" class="form-control" name="HoTen" placeholder="Nhập họ tên mới" value="@((ViewBag.CurrentUser as QuanLyTaiLieuKhoaHoc.Web.Models.NguoiDung)?.HoTen)">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Mã số</label>
                                <input type="text" class="form-control" name="MaSo" placeholder="Nhập mã số mới" value="@((ViewBag.CurrentUser as QuanLyTaiLieuKhoaHoc.Web.Models.NguoiDung)?.MaSo)">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Số điện thoại</label>
                                <input type="text" class="form-control" name="SoDienThoai" placeholder="Nhập số điện thoại mới" value="@((ViewBag.CurrentUser as QuanLyTaiLieuKhoaHoc.Web.Models.NguoiDung)?.SoDienThoai)">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Mật khẩu hiện tại</label>
                                <input type="password" class="form-control" name="MatKhauHienTai" placeholder="Nhập mật khẩu hiện tại">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Mật khẩu mới</label>
                                <input type="password" class="form-control" name="MatKhauMoi" placeholder="Nhập mật khẩu mới">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Nhập lại mật khẩu mới</label>
                                <input type="password" class="form-control" name="NhapLaiMatKhauMoi" placeholder="Nhập lại mật khẩu mới">
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Lưu thay đổi
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Initialize dashboard functionality
    document.addEventListener('DOMContentLoaded', function() {
        initializeDashboard();
    });

    function initializeDashboard() {
        // Initialize AOS
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true
        });

        // Start real-time clock
        updateCurrentTime();
        setInterval(updateCurrentTime, 1000);

        // Animate counters
        animateCounters();
    }

    function updateCurrentTime() {
        const now = new Date();
        const timeString = now.toLocaleTimeString('vi-VN', {
            hour: '2-digit',
            minute: '2-digit',
            second: '2-digit'
        });
        document.getElementById('current-time').textContent = timeString;
    }

    function animateCounters() {
        const counters = document.querySelectorAll('.stats-number[data-count]');
        
        counters.forEach(counter => {
            const target = parseInt(counter.getAttribute('data-count'));
            const duration = 2000; // 2 seconds
            const step = target / (duration / 16); // 60fps
            let current = 0;

            const timer = setInterval(() => {
                current += step;
                if (current >= target) {
                    current = target;
                    clearInterval(timer);
                }
                counter.textContent = Math.floor(current);
            }, 16);
        });
    }
</script>
