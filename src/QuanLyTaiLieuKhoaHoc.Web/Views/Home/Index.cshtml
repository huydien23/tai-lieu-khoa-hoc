@{
    ViewData["Title"] = "Trang chủ";
}

<!-- Hero Section -->
<div class="welcome-section">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">
            <div class="col-lg-8">
                <div class="fade-in">
                    <h1 class="display-4 fw-bold mb-4">
                        <i class="fas fa-book-open me-3"></i>
                        Hệ thống Quản lý Tài liệu Khoa học
                    </h1>
                    <p class="lead mb-0">
                        Khám phá và truy cập kho tàng tài liệu khoa học chất lượng cao
                        <br class="d-none d-md-block">
                        Nơi tri thức hội tụ và phát triển
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Search Section -->
<div class="container mb-section">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <div class="card floating-card glow-on-hover">
                <div class="card-body p-4">
                    <form asp-controller="TimKiem" asp-action="Results" method="get">
                        <div class="input-group input-group-lg">
                            <span class="input-group-text bg-light border-end-0">
                                <i class="fas fa-search text-muted"></i>
                            </span>
                            <input type="text" name="query" class="form-control border-start-0 ps-0"
                                placeholder="Tìm kiếm tài liệu theo từ khóa, tác giả, chủ đề...">
                            <button class="btn btn-primary px-4" type="submit">
                                <i class="fas fa-search me-2"></i>Tìm kiếm
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Featured Documents Section -->
<div class="container">
    <!-- Section Header -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <div>
                    <h2 class="gradient-text mb-2">Tài liệu nổi bật</h2>
                    <p class="text-muted mb-0">Khám phá những tài liệu được quan tâm nhất</p>
                </div>
                <a asp-controller="TaiLieu" asp-action="Index" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-right me-2"></i>Xem tất cả
                </a>
            </div>
        </div>
    </div>

    <!-- Documents Grid -->
    <div class="row g-4">
        @for (int i = 1; i <= 8; i++)
        {
            <div class="col-xl-3 col-lg-4 col-md-6">
                <div class="card floating-card h-100">
                    <div class="card-body d-flex flex-column">
                        <!-- Category Badge -->
                        <div class="mb-3">
                            @if (i % 3 == 1)
                            {
                                <span class="badge bg-primary">
                                    <i class="fas fa-file-alt me-1"></i>Bài báo khoa học
                                </span>
                            }
                            else if (i % 3 == 2)
                            {
                                <span class="badge bg-success">
                                    <i class="fas fa-book me-1"></i>Giáo trình
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-warning">
                                    <i class="fas fa-lightbulb me-1"></i>Đề tài nghiên cứu
                                </span>
                            }
                        </div>

                        <!-- Document Title -->
                        <h6 class="card-title mb-3">
                            <a href="#" class="text-decoration-none">
                                Nghiên cứu ứng dụng Machine Learning trong y học hiện đại @i
                            </a>
                        </h6>

                        <!-- Document Meta -->
                        <div class="document-meta mb-3 flex-grow-1">
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-user text-muted me-2"></i>
                                <span class="small text-muted">PGS.TS. Nguyễn Văn A</span>
                            </div>
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-calendar text-muted me-2"></i>
                                <span class="small text-muted">Năm xuất bản: 2024</span>
                            </div>
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-eye text-muted me-2"></i>
                                <span class="small text-muted">@((i * 247) + 156) lượt xem</span>
                            </div>
                            <div class="d-flex align-items-center">
                                <i class="fas fa-download text-muted me-2"></i>
                                <span class="small text-muted">@((i * 43) + 28) lượt tải</span>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="mt-auto">
                            <div class="d-grid gap-2">
                                <a asp-controller="TaiLieu" asp-action="Details" asp-route-id="@i"
                                    class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-eye me-2"></i>Xem chi tiết
                                </a>
                                <button class="btn btn-success btn-sm" onclick="borrowDocument(@i)">
                                    <i class="fas fa-book-reader me-2"></i>Mượn tài liệu
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Quick Stats Section -->
    <div class="row mt-5 pt-5 border-top">
        <div class="col-12 mb-4 text-center">
            <h3 class="gradient-text">Thống kê hệ thống</h3>
            <p class="text-muted">Những con số ấn tượng về thư viện số của chúng tôi</p>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card text-center floating-card">
                <div class="card-body">
                    <div class="icon-wrapper mx-auto mb-3">
                        <i class="fas fa-book"></i>
                    </div>
                    <h4 class="fw-bold text-primary mb-2">12,543</h4>
                    <p class="text-muted mb-0">Tài liệu</p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card text-center floating-card">
                <div class="card-body">
                    <div class="icon-wrapper mx-auto mb-3">
                        <i class="fas fa-users"></i>
                    </div>
                    <h4 class="fw-bold text-success mb-2">3,247</h4>
                    <p class="text-muted mb-0">Người dùng</p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card text-center floating-card">
                <div class="card-body">
                    <div class="icon-wrapper mx-auto mb-3">
                        <i class="fas fa-download"></i>
                    </div>
                    <h4 class="fw-bold text-warning mb-2">58,921</h4>
                    <p class="text-muted mb-0">Lượt tải</p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card text-center floating-card">
                <div class="card-body">
                    <div class="icon-wrapper mx-auto mb-3">
                        <i class="fas fa-bookmark"></i>
                    </div>
                    <h4 class="fw-bold text-info mb-2">1,834</h4>
                    <p class="text-muted mb-0">Đang mượn</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function borrowDocument(id) {
            // Check if user is logged in
            @if (Context.Session.GetString("Username") == null)
                {
                    <text>
                        if (confirm('Bạn cần đăng nhập để mượn tài liệu. Chuyển đến trang đăng nhập?')) {
                            window.location.href = '/Account/Login';
                                }
                    </text>
            }
                else
                {
                    <text>
                        if (confirm('Bạn có muốn mượn tài liệu này không?')) {
                            showToast('Đã ghi nhận yêu cầu mượn tài liệu!', 'success');
                                    // TODO: Implement actual borrow logic
                                }
                    </text>
            }
                }
    </script>
}
                            