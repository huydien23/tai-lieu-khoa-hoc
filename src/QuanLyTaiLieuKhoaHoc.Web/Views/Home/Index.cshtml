@section Scripts {
    <script>
        $(document).ready(function () {
            // Quick search functionality
            $('#quickSearch').on('keypress', function (e) {
                if (e.which === 13) {
                    performQuickSearch();
                }
            });

            $('.search-container .btn').on('click', function () {
                performQuickSearch();
            });

            function performQuickSearch() {
                var searchTerm = $('#quickSearch').val().trim();
                if (searchTerm) {
                    window.location.href = '/TimKiem?q=' + encodeURIComponent(searchTerm);
                }
            }

            // Animate numbers
            animateNumbers();

            function animateNumbers() {
                $('.stats-number').each(function () {
                    var $this = $(this);
                    var target = parseInt($this.text().replace(/,/g, ''));
                    $this.text('0');

                    $({ counter: 0 }).animate({ counter: target }, {
                        duration: 2000,
                        easing: 'swing',
                        step: function () {
                            $this.text(Math.ceil(this.counter).toLocaleString());
                        },
                        complete: function () {
                            $this.text(target.toLocaleString());
                        }
                    });
                });
            }

            // Add hover effects
            $('.stats-card, .dashboard-card').hover(
                function () {
                    $(this).addClass('shadow-custom');
                },
                function () {
                    $(this).removeClass('shadow-custom');
                }
            );
        });
    </script>
}
