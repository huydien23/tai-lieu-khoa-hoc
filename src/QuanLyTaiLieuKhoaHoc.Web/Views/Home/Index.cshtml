@model QuanLyTaiLieuKhoaHoc.Web.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Trang chủ";
}

<div class="welcome-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="fw-bold">Hệ thống Quản lý Tài liệu Khoa học</h1>
                <p class="lead">Nền tảng hiện đại giúp bạn dễ dàng tìm kiếm, quản lý và chia sẻ tài liệu khoa học một
                    cách hiệu quả.</p>

                <div class="d-flex flex-wrap gap-2 mb-4">
                    <a href="/TaiLieu" class="btn btn-primary">
                        <i class="fas fa-book me-2"></i>Khám phá tài liệu
                    </a>
                    <a href="/TaiLieu" class="btn btn-outline-primary">
                        <i class="fas fa-search me-2"></i>Tìm kiếm nâng cao
                    </a>
                </div>
            </div>
            <div class="col-lg-6 d-none d-lg-block">
                <img src="~/images/hero-illustration.svg" alt="Minh họa tài liệu khoa học" class="img-fluid"
                    onerror="this.style.display='none'">
            </div>
        </div>
    </div>
</div>

<!-- Tìm kiếm nhanh -->
<div class="search-section rounded-lg p-5 mb-5 bg-light">
    <h2 class="fw-bold mb-4 text-center">Tìm kiếm tài liệu</h2>

    <form action="/TaiLieu" method="get" class="mb-4">
        <div class="input-group input-group-lg">
            <input type="text" class="form-control" placeholder="Nhập từ khóa tìm kiếm..." name="q">
            <button class="btn btn-primary" type="submit">
                <i class="fas fa-search me-2"></i>Tìm kiếm
            </button>
        </div>
    </form>

    <div class="popular-keywords text-center">
        <span class="text-muted me-2">Từ khóa phổ biến:</span>
        <a href="/TaiLieu?timKiem=machine+learning" class="badge bg-light text-dark me-2 mb-2">Machine Learning</a>
        <a href="/TaiLieu?timKiem=blockchain" class="badge bg-light text-dark me-2 mb-2">Blockchain</a>
        <a href="/TaiLieu?timKiem=data+science" class="badge bg-light text-dark me-2 mb-2">Data Science</a>
        <a href="/TaiLieu?timKiem=internet+of+things" class="badge bg-light text-dark me-2 mb-2">Internet of Things</a>
        <a href="/TaiLieu?timKiem=cloud+computing" class="badge bg-light text-dark me-2 mb-2">Cloud Computing</a>
    </div>
</div>

<div class="container py-5">
    <div class="row">
        <!-- Main content: left column -->
        <div class="col-lg-8">
            
            <!-- Tài liệu phổ biến -->
            <div class="mb-5">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="fw-bold">Tài liệu phổ biến</h2>
                    <a href="/TaiLieu?sapXep=luot_tai_desc" class="btn btn-outline-primary btn-sm">Xem tất cả</a>
                </div>
                <div class="row g-4">
                    @foreach (var taiLieu in Model.TaiLieuPhoBien)
                    {
                        var moTaTomTat = taiLieu.MoTa.Length > 100 ? taiLieu.MoTa.Substring(0, 100) + "..." : taiLieu.MoTa;
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card shadow-sm rounded-4 h-100 document-card border-0">
                                <div class="card-body d-flex flex-column">
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="fas fa-file-alt fs-4 text-primary me-2"></i>
                                        <h5 class="card-title mb-0 flex-grow-1">@(taiLieu.TenTaiLieu ?? "N/A")</h5>
                                    </div>
                                    <ul class="list-unstyled small text-muted mb-2">
                                        <li><i class="fas fa-user me-1"></i> @(taiLieu.TacGia ?? "N/A")</li>
                                        <li><i class="fas fa-calendar me-1"></i> @taiLieu.NgayTaiLen.ToString("dd/MM/yyyy")</li>
                                        <li><i class="fas fa-book-reader me-1"></i> @taiLieu.LuotMuon lượt mượn</li>
                                        <li><i class="fas fa-tag me-1"></i> @(taiLieu.TenChuyenNganh ?? "N/A")</li>
                                    </ul>
                                    <p class="card-text flex-grow-1">@Html.Raw(moTaTomTat ?? "")</p>
                                    <div class="d-flex justify-content-between align-items-center mt-auto gap-2 flex-wrap">
                                        <span class="badge bg-info text-dark px-3 py-2 flex-shrink-0">@(taiLieu.TenLoaiTaiLieu ?? "")</span>
                                        <a class="btn btn-primary btn-sm rounded-pill d-inline-flex align-items-center gap-1 flex-shrink-0" href="/TaiLieu/Details/@taiLieu.MaTaiLieu" style="white-space:nowrap; min-width:120px;">
                                            <i class="fas fa-eye"></i> <span>Xem tóm tắt</span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <!-- Sidebar: right column -->
        <div class="col-lg-4">
            <div class="sticky-top" style="top: 90px; z-index: 1;">
                <div class="mb-4 shadow-sm rounded-4 bg-white p-4 border border-2" style="background: #f8fbff;">
                    <h5 class="fw-bold text-primary mb-3"><i class="fas fa-chart-bar me-2"></i>Thống kê theo Chuyên
                        ngành</h5>
                    @foreach (var item in Model.ThongKeTheoChuyenNganh)
                    {
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>@item.Key</span>
                            <span class="badge bg-primary">@item.Value</span>
                        </div>
                    }
                    <h5 class="fw-bold text-info mb-3"><i class="fas fa-layer-group me-2"></i>Thống kê theo Loại tài
                        liệu</h5>
                    @foreach (var item in Model.ThongKeTheoLoaiTaiLieu)
                    {
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>@item.Key</span>
                            <span class="badge bg-info">@item.Value</span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>




    <!-- Modal xem tóm tắt tài liệu -->
    @{
        await Html.RenderPartialAsync("_DocumentSummaryModal");
    }
    
</div>

<style>
.document-card {
    transition: box-shadow 0.2s, transform 0.2s;
}
.document-card:hover {
    box-shadow: 0 8px 32px rgba(30, 34, 90, 0.18) !important;
    transform: scale(1.02);
}
.card-title {
    font-size: 1.1rem;
    font-weight: 700;
    color: #1A237E;
}
.badge.bg-info {
    background: #e3f2fd !important;
    color: #1976d2 !important;
    font-weight: 600;
}
.btn-primary, .btn-success {
    font-weight: 600;
}
.document-card .btn, .document-card .btn-primary {
    writing-mode: unset !important;
    transform: unset !important;
    display: inline-flex !important;
    align-items: center;
    gap: 0.25rem;
    white-space: nowrap;
    min-width: 120px;
    max-width: 100%;
    overflow: visible;
}
.document-card .badge {
    max-width: 100%;
    overflow: visible;
    white-space: normal;
}
.document-card .d-flex {
    flex-wrap: wrap !important;
}
</style>
    