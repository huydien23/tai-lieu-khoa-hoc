@model QuanLyTaiLieuKhoaHoc.Web.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Trang chủ";
}

<div class="welcome-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="fw-bold">Hệ thống Quản lý Tài liệu Khoa học</h1>
                <p class="lead">Nền tảng hiện đại giúp bạn dễ dàng tìm kiếm, quản lý và chia sẻ tài liệu khoa học một
                    cách hiệu quả.</p>

                <div class="d-flex flex-wrap gap-2 mb-4">
                    <a href="/TaiLieu" class="btn btn-primary">
                        <i class="fas fa-book me-2"></i>Khám phá tài liệu
                    </a>
                    <a href="/TimKiem" class="btn btn-outline-primary">
                        <i class="fas fa-search me-2"></i>Tìm kiếm nâng cao
                    </a>
                </div>
            </div>
            <div class="col-lg-6 d-none d-lg-block">
                <img src="~/images/hero-illustration.svg" alt="Minh họa tài liệu khoa học" class="img-fluid"
                    onerror="this.style.display='none'">
            </div>
        </div>
    </div>
</div>

<!-- Tìm kiếm nhanh -->
<div class="search-section rounded-lg p-5 mb-5 bg-light">
    <h2 class="fw-bold mb-4 text-center">Tìm kiếm tài liệu</h2>

    <form action="/TimKiem" method="get" class="mb-4">
        <div class="input-group input-group-lg">
            <input type="text" class="form-control" placeholder="Nhập từ khóa tìm kiếm..." name="q">
            <button class="btn btn-primary" type="submit">
                <i class="fas fa-search me-2"></i>Tìm kiếm
            </button>
        </div>
    </form>

    <div class="popular-keywords text-center">
        <span class="text-muted me-2">Từ khóa phổ biến:</span>
        <a href="/TimKiem?q=machine+learning" class="badge bg-light text-dark me-2 mb-2">Machine Learning</a>
        <a href="/TimKiem?q=blockchain" class="badge bg-light text-dark me-2 mb-2">Blockchain</a>
        <a href="/TimKiem?q=data+science" class="badge bg-light text-dark me-2 mb-2">Data Science</a>
        <a href="/TimKiem?q=internet+of+things" class="badge bg-light text-dark me-2 mb-2">Internet of Things</a>
        <a href="/TimKiem?q=cloud+computing" class="badge bg-light text-dark me-2 mb-2">Cloud Computing</a>
    </div>
</div>

<div class="container py-5">
    <!-- Tài liệu mới nhất -->
    <div class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold">Tài liệu mới nhất</h2>
            <a href="/TaiLieu" class="btn btn-outline-primary btn-sm">Xem tất cả</a>
        </div>

        <div class="row g-4">
            @foreach (var taiLieu in Model.TaiLieuMoiNhat)
            {
                var moTaTomTat = taiLieu.MoTa.Length > 100 ? taiLieu.MoTa.Substring(0, 100) + "..." : taiLieu.MoTa;
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@taiLieu.TenTaiLieu</h5>
                            <p class="card-text text-muted small">
                                <i class="fas fa-user me-1"></i>@taiLieu.TenNguoiTaiLen
                            </p>
                            <p class="card-text">@Html.Raw(moTaTomTat)</p>
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="badge bg-primary">@taiLieu.TenLoaiTaiLieu</span>
                                <small class="text-muted">@taiLieu.NgayTaiLen.ToString("dd/MM/yyyy")</small>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-muted small">
                                    <i class="fas fa-download me-1"></i>@taiLieu.LuotTai lượt tải
                                </span>
                                @if (taiLieu.SoLuotDanhGia > 0)
                                {
                                    <span class="text-warning small">
                                        <i class="fas fa-star"></i> @taiLieu.DiemDanhGiaTrungBinh.ToString("F1")
                                    </span>
                                }
                            </div>
                            <div class="mt-3 d-flex gap-2">
                                <button class="btn btn-outline-primary btn-sm" type="button" onclick='showDocumentSummary({
                                            tenTaiLieu: "@taiLieu.TenTaiLieu.Replace("\"", "\\\"")",
                                            tenNguoiTaiLen: "@taiLieu.TenNguoiTaiLen.Replace("\"", "\\\"")",
                                            ngayTaiLen: "@taiLieu.NgayTaiLen.ToString("dd/MM/yyyy HH:mm")",
                                            tenChuyenNganh: "@taiLieu.TenChuyenNganh.Replace("\"", "\\\"")",
                                            tenLoaiTaiLieu: "@taiLieu.TenLoaiTaiLieu.Replace("\"", "\\\"")",
                                            luotTai: "@taiLieu.LuotTai",
                                            kichThuocFile: "@((taiLieu.KichThuocFile / 1024.0).ToString("F1")) KB",
                                            diemDanhGiaTrungBinh: @taiLieu.DiemDanhGiaTrungBinh,
                                            moTa: `@Html.Raw(moTaTomTat.Replace("`", "\\`").Replace("\"", "\\\""))`,
                                            maTaiLieu: "@taiLieu.MaTaiLieu"
                                        })'>
                                    <i class="fas fa-eye me-1"></i>Xem tóm tắt
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Tài liệu phổ biến -->
    <div class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold">Tài liệu phổ biến</h2>
            <a href="/TaiLieu?sapXep=luot_tai_desc" class="btn btn-outline-primary btn-sm">Xem tất cả</a>
        </div>

        <div class="row g-4">
            @foreach (var taiLieu in Model.TaiLieuPhoBien)
            {
                var moTaTomTat = taiLieu.MoTa.Length > 100 ? taiLieu.MoTa.Substring(0, 100) + "..." : taiLieu.MoTa;
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@taiLieu.TenTaiLieu</h5>
                            <p class="card-text text-muted small">
                                <i class="fas fa-user me-1"></i>@taiLieu.TenNguoiTaiLen
                            </p>
                            <p class="card-text">@Html.Raw(moTaTomTat)</p>
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="badge bg-success">@taiLieu.TenChuyenNganh</span>
                                <small class="text-muted">@taiLieu.NgayTaiLen.ToString("dd/MM/yyyy")</small>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-primary small">
                                    <i class="fas fa-fire me-1"></i>@taiLieu.LuotTai lượt tải
                                </span>
                                @if (taiLieu.SoLuotDanhGia > 0)
                                {
                                    <span class="text-warning small">
                                        <i class="fas fa-star"></i> @taiLieu.DiemDanhGiaTrungBinh.ToString("F1")
                                    </span>
                                }
                            </div>
                            <div class="mt-3 d-flex gap-2">
                                <button class="btn btn-outline-primary btn-sm" type="button" onclick='showDocumentSummary({
                                                    tenTaiLieu: "@taiLieu.TenTaiLieu.Replace("\"", "\\\"")",
                                                    tenNguoiTaiLen: "@taiLieu.TenNguoiTaiLen.Replace("\"", "\\\"")",
                                                    ngayTaiLen: "@taiLieu.NgayTaiLen.ToString("dd/MM/yyyy HH:mm")",
                                                    tenChuyenNganh: "@taiLieu.TenChuyenNganh.Replace("\"", "\\\"")",
                                                    tenLoaiTaiLieu: "@taiLieu.TenLoaiTaiLieu.Replace("\"", "\\\"")",
                                                    luotTai: "@taiLieu.LuotTai",
                                                    kichThuocFile: "@((taiLieu.KichThuocFile / 1024.0).ToString("F1")) KB",
                                                    diemDanhGiaTrungBinh: @taiLieu.DiemDanhGiaTrungBinh,
                                                    moTa: `@Html.Raw(moTaTomTat.Replace("`", "\\`").Replace("\"", "\\\""))`,
                                                    maTaiLieu: "@taiLieu.MaTaiLieu"
                                                })'>
                                    <i class="fas fa-eye me-1"></i>Xem tóm tắt
                                </button>
                                <button class="btn btn-outline-success btn-sm" data-bs-toggle="modal"
                                    data-bs-target="#borrowRequestModal" data-tai-lieu-id="@taiLieu.MaTaiLieu">
                                    <i class="fas fa-hand-paper me-1"></i>Gửi yêu cầu mượn
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Thống kê theo chuyên ngành -->
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Thống kê theo Chuyên ngành</h5>
                </div>
                <div class="card-body">
                    @foreach (var item in Model.ThongKeTheoChuyenNganh)
                    {
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>@item.Key</span>
                            <span class="badge bg-primary">@item.Value</span>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Thống kê theo Loại tài liệu</h5>
                </div>
                <div class="card-body">
                    @foreach (var item in Model.ThongKeTheoLoaiTaiLieu)
                    {
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>@item.Key</span>
                            <span class="badge bg-info">@item.Value</span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal gửi yêu cầu mượn tài liệu -->
@{
    await Html.RenderPartialAsync("_BorrowRequestModal");
}

<!-- Modal xem tóm tắt tài liệu -->
@{
    await Html.RenderPartialAsync("_DocumentSummaryModal");
}
