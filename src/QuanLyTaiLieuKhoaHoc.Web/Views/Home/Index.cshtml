@model QuanLyTaiLieuKhoaHoc.Web.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Trang chủ";
}

<div class="welcome-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="fw-bold">Hệ thống Quản lý Tài liệu Khoa học</h1>
                <p class="lead">Nền tảng hiện đại giúp bạn dễ dàng tìm kiếm, quản lý và chia sẻ tài liệu khoa học một
                    cách hiệu quả.</p>

                <div class="d-flex flex-wrap gap-2 mb-4">
                    <a href="/TaiLieu" class="btn btn-primary">
                        <i class="fas fa-book me-2"></i>Khám phá tài liệu
                    </a>
                    <a href="/TaiLieu" class="btn btn-outline-primary">
                        <i class="fas fa-search me-2"></i>Tìm kiếm nâng cao
                    </a>
                </div>
            </div>
            <div class="col-lg-6 d-none d-lg-block">
                <img src="~/images/hero-illustration.svg" alt="Minh họa tài liệu khoa học" class="img-fluid"
                    onerror="this.style.display='none'">
            </div>
        </div>
    </div>
</div>

<!-- Tìm kiếm nhanh -->
<div class="search-section rounded-lg p-5 mb-5 bg-light">
    <h2 class="fw-bold mb-4 text-center">Tìm kiếm tài liệu</h2>

    <form action="/TaiLieu" method="get" class="mb-4">
        <div class="input-group input-group-lg">
            <input type="text" class="form-control" placeholder="Nhập từ khóa tìm kiếm..." name="q">
            <button class="btn btn-primary" type="submit">
                <i class="fas fa-search me-2"></i>Tìm kiếm
            </button>
        </div>
    </form>

    <div class="popular-keywords text-center">
        <span class="text-muted me-2">Từ khóa phổ biến:</span>
        <a href="/TaiLieu?timKiem=machine+learning" class="badge bg-light text-dark me-2 mb-2">Machine Learning</a>
        <a href="/TaiLieu?timKiem=blockchain" class="badge bg-light text-dark me-2 mb-2">Blockchain</a>
        <a href="/TaiLieu?timKiem=data+science" class="badge bg-light text-dark me-2 mb-2">Data Science</a>
        <a href="/TaiLieu?timKiem=internet+of+things" class="badge bg-light text-dark me-2 mb-2">Internet of Things</a>
        <a href="/TaiLieu?timKiem=cloud+computing" class="badge bg-light text-dark me-2 mb-2">Cloud Computing</a>
    </div>
</div>

<div class="container py-5">
    <div class="row">
        <!-- Main content: left column -->
        <div class="col-lg-8">
            <!-- Chia nhóm tài liệu khoa học -->
            <div class="mb-5" id="baibaokhoahoc">
                <h2 class="fw-bold mb-4">Bài báo khoa học</h2>
                <div class="row g-4">
                    @foreach (var baiBao in Model.TaiLieuMoiNhat.Where(x => x.LoaiTaiLieu == "Bài báo khoa học"))
                    {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@baiBao.TieuDe</h5>
                            <p class="card-text text-muted small">
                                <b>Tạp chí/Hội nghị:</b> @baiBao.TapChiHoiNghi <br />
                                <b>Ngày công bố:</b> @baiBao.NgayCongBo?.ToString("dd/MM/yyyy") <br />
                                <b>DOI:</b> @baiBao.DOI <br />
                                <b>ISSN:</b> @baiBao.ISSN <br />
                                <b>Cấp độ:</b> @baiBao.CapDo
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

            <div class="mb-5" id="detainghiencuu">
                <h2 class="fw-bold mb-4">Đề tài nghiên cứu khoa học</h2>
                <div class="row g-4">
                    @foreach (var deTai in Model.TaiLieuMoiNhat.Where(x => x.LoaiTaiLieu == "Đề tài nghiên cứu khoa học"))
                    {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@deTai.TenDeTai</h5>
                            <p class="card-text text-muted small">
                                <b>Mã số đề tài:</b> @(deTai.MaSoDeTai ?? "N/A") <br />
                                <b>Cấp:</b> @deTai.CapDeTai <br />
                                <b>Thời gian thực hiện:</b> @(deTai.ThoiGianThucHien ?? "N/A") <br />
                                <b>Cơ quan chủ trì:</b> @(deTai.CoQuanChuTri ?? "N/A") <br />
                                <b>Chủ nhiệm đề tài:</b> @deTai.ChuNhiemDeTai
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

            <div class="mb-5" id="giaotrinh">
                <h2 class="fw-bold mb-4">Giáo trình - Tài liệu giảng dạy</h2>
                <div class="row g-4">
                    @foreach (var giaoTrinh in Model.TaiLieuMoiNhat.Where(x => x.LoaiTaiLieu == "Giáo trình" || x.LoaiTaiLieu == "Tài liệu giảng dạy"))
                    {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@giaoTrinh.TenGiaoTrinh</h5>
                            <p class="card-text text-muted small">
                                <b>Tác giả/Đồng tác giả:</b> @giaoTrinh.TacGia <br />
                                <b>Môn học liên quan:</b> @giaoTrinh.MonHocLienQuan <br />
                                <b>Đơn vị phát hành:</b> @giaoTrinh.DonViPhatHanh <br />
                                <b>Năm xuất bản:</b> @giaoTrinh.NamXuatBan <br />
                                <b>Số tín chỉ:</b> @giaoTrinh.SoTinChi
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

            <!-- Tài liệu phổ biến -->
            <div class="mb-5">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="fw-bold">Tài liệu phổ biến</h2>
                    <a href="/TaiLieu?sapXep=luot_tai_desc" class="btn btn-outline-primary btn-sm">Xem tất cả</a>
                </div>
                <div class="row g-4">
                    @foreach (var taiLieu in Model.TaiLieuPhoBien)
                    {
                        var moTaTomTat = taiLieu.MoTa.Length > 100 ? taiLieu.MoTa.Substring(0, 100) + "..." : taiLieu.MoTa;
                        <div class="col-md-6 col-lg-4">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title">@(taiLieu.TenTaiLieu ?? "N/A")</h5>
                                    <p class="card-text text-muted small">
                                        <i class="fas fa-user me-1"></i>@(taiLieu.TenNguoiTaiLen ?? "N/A")
                                    </p>
                                    <p class="card-text">@Html.Raw(moTaTomTat ?? "")</p>
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <span class="badge bg-success">@(taiLieu.TenChuyenNganh ?? "N/A")</span>
                                        <small class="text-muted">@taiLieu.NgayTaiLen.ToString("dd/MM/yyyy")</small>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="text-primary small">
                                            <i class="fas fa-fire me-1"></i>@taiLieu.LuotMuon lượt mượn
                                        </span>
                                        @if (taiLieu.SoLuotDanhGia > 0)
                                        {
                                            <span class="text-warning small">
                                                <i class="fas fa-star"></i> @taiLieu.DiemDanhGiaTrungBinh.ToString("F1")
                                            </span>
                                        }
                                    </div>
                                    <div class="mt-3 d-flex gap-2">
                                        <button class="btn btn-outline-primary btn-sm" type="button" onclick='showDocumentSummary({
                                                            tenTaiLieu: "@(taiLieu.TenTaiLieu != null ? taiLieu.TenTaiLieu.Replace("\"", "\\\"") : "N/A")",
                                                            tenNguoiTaiLen: "@(taiLieu.TenNguoiTaiLen != null ? taiLieu.TenNguoiTaiLen.Replace("\"", "\\\"") : "N/A")",
                                                            ngayTaiLen: "@taiLieu.NgayTaiLen.ToString("dd/MM/yyyy HH:mm")",
                                                            tenChuyenNganh: "@(taiLieu.TenChuyenNganh != null ? taiLieu.TenChuyenNganh.Replace("\"", "\\\"") : "N/A")",
                                                            tenLoaiTaiLieu: "@(taiLieu.TenLoaiTaiLieu != null ? taiLieu.TenLoaiTaiLieu.Replace("\"", "\\\"") : "N/A")",
                                                            luotMuon: "@taiLieu.LuotMuon",
                                                            kichThuocFile: "@((taiLieu.KichThuocFile / 1024.0).ToString("F1")) KB",
                                                            diemDanhGiaTrungBinh: @taiLieu.DiemDanhGiaTrungBinh,
                                                            moTa: `@Html.Raw((moTaTomTat ?? "").Replace("`", "\\`").Replace("\"", "\\\""))`,
                                                            maTaiLieu: "@taiLieu.MaTaiLieu"
                                                        })'>
                                            <i class="fas fa-eye me-1"></i>Xem tóm tắt
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <!-- Sidebar: right column -->
        <div class="col-lg-4">
            <div class="sticky-top" style="top: 90px; z-index: 1;">
                <div class="mb-4 shadow-sm rounded-4 bg-white p-4 border border-2" style="background: #f8fbff;">
                    <h5 class="fw-bold text-primary mb-3"><i class="fas fa-chart-bar me-2"></i>Thống kê theo Chuyên ngành</h5>
                    @foreach (var item in Model.ThongKeTheoChuyenNganh)
                    {
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>@item.Key</span>
                            <span class="badge bg-primary">@item.Value</span>
                        </div>
                    }
                    <h5 class="fw-bold text-info mb-3"><i class="fas fa-layer-group me-2"></i>Thống kê theo Loại tài liệu</h5>
                    @foreach (var item in Model.ThongKeTheoLoaiTaiLieu)
                    {
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>@item.Key</span>
                            <span class="badge bg-info">@item.Value</span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>




<!-- Modal xem tóm tắt tài liệu -->
@{
    await Html.RenderPartialAsync("_DocumentSummaryModal");
}
