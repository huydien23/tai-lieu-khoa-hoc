@{
    ViewData["Title"] = "Dashboard Thủ thư";
}

<!-- Admin Header -->
<div class="dashboard-header text-center fade-in-up">
    <div class="row align-items-center">
        <div class="col-md-10 mx-auto">
            <h1 class="display-6 fw-bold mb-3">
                <i class="fas fa-user-shield me-3"></i>
                Dashboard Thủ thư
            </h1>
            <p class="lead mb-4">
                Quản lý toàn bộ hệ thống tài liệu khoa học - Quyền truy cập đầy đủ
            </p>
            <div class="d-flex gap-3 justify-content-center flex-wrap">
                <span class="badge bg-light text-dark fs-6 px-3 py-2">
                    <i class="fas fa-calendar me-2"></i>@DateTime.Now.ToString("dd/MM/yyyy")
                </span>
                <span class="badge bg-light text-dark fs-6 px-3 py-2">
                    <i class="fas fa-clock me-2"></i>@DateTime.Now.ToString("HH:mm")
                </span>
                <span class="badge bg-light text-dark fs-6 px-3 py-2">
                    <i class="fas fa-user me-2"></i>Chào mừng, Thủ thư
                </span>
            </div>
        </div>
    </div>
</div>

<!-- Advanced Stats for Admin -->
<div class="row mb-5">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stats-card primary fade-in-up">
            <div class="stats-icon">
                <i class="fas fa-book-open"></i>
            </div>
            <div class="stats-number">1,245</div>
            <div class="stats-label">Tổng tài liệu</div>
            <div class="mt-2">
                <small class="text-success">
                    <i class="fas fa-arrow-up me-1"></i>+12% tháng này
                </small>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stats-card success fade-in-up">
            <div class="stats-icon">
                <i class="fas fa-exchange-alt"></i>
            </div>
            <div class="stats-number">156</div>
            <div class="stats-label">Đang mượn</div>
            <div class="mt-2">
                <small class="text-warning">
                    <i class="fas fa-exclamation-triangle me-1"></i>12 quá hạn
                </small>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stats-card warning fade-in-up">
            <div class="stats-icon">
                <i class="fas fa-users"></i>
            </div>
            <div class="stats-number">89</div>
            <div class="stats-label">Người dùng hoạt động</div>
            <div class="mt-2">
                <small class="text-info">
                    <i class="fas fa-clock me-1"></i>Tuần này
                </small>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stats-card info fade-in-up">
            <div class="stats-icon">
                <i class="fas fa-download"></i>
            </div>
            <div class="stats-number">2,340</div>
            <div class="stats-label">Lượt tải xuống</div>
            <div class="mt-2">
                <small class="text-success">
                    <i class="fas fa-arrow-up me-1"></i>+25% tuần này
                </small>
            </div>
        </div>
    </div>
</div>

<!-- Admin Quick Actions & Management -->
<div class="row">
    <!-- Quick Management Actions -->
    <div class="col-lg-4 mb-4">
        <div class="card-custom h-100">
            <div class="card-header-custom">
                <h5 class="mb-0">
                    <i class="fas fa-cogs me-2"></i>
                    Quản lý nhanh
                </h5>
            </div>
            <div class="card-body p-4">
                <div class="d-grid gap-3">
                    <a href="/Admin/QuanLyTaiLieu" class="btn btn-primary-custom btn-custom">
                        <i class="fas fa-plus me-2"></i>Thêm tài liệu mới
                    </a>
                    <a href="/Admin/QuanLyNguoiDung" class="btn btn-success-custom btn-custom">
                        <i class="fas fa-user-plus me-2"></i>Thêm người dùng
                    </a>
                    <a href="/MuonTra" class="btn btn-warning-custom btn-custom">
                        <i class="fas fa-handshake me-2"></i>Xử lý mượn/trả
                    </a>
                    <a href="/Admin/BaoCaoThongKe" class="btn btn-danger-custom btn-custom">
                        <i class="fas fa-file-export me-2"></i>Xuất báo cáo
                    </a>
                    <a href="/CaiDat" class="btn btn-secondary btn-custom">
                        <i class="fas fa-cog me-2"></i>Cài đặt hệ thống
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Recent Activities -->
