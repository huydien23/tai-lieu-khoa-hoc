@model IEnumerable<QuanLyTaiLieuKhoaHoc.Web.Models.PhieuMuonTra>
@{
    ViewData["Title"] = "Lịch sử mượn/trả tài liệu";
}
<h2>@ViewData["Title"]</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã phiếu</th>
            <th>Tài liệu</th>
            <th>Ngày mượn</th>
            <th>Ngày trả</th>
            <th>Trạng thái</th>
            <th>Ghi chú</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaPhieu</td>
                <td>@item.TaiLieu?.TenTaiLieu</td>
                <td>@item.NgayMuon:dd/MM/yyyy HH:mm</td>
                <td>@(item.NgayTra.HasValue ? item.NgayTra.Value.ToString("dd/MM/yyyy HH:mm") : "-")</td>
                <td>
                    @switch (item.TrangThai)
                    {
                        case QuanLyTaiLieuKhoaHoc.Web.Models.TrangThaiPhieu.ChoDuyet:
                            <span class="badge bg-warning text-dark">Chờ duyệt</span>
                            break;
                        case QuanLyTaiLieuKhoaHoc.Web.Models.TrangThaiPhieu.DaDuyet:
                            <span class="badge bg-primary">Đã duyệt</span>
                            break;
                        case QuanLyTaiLieuKhoaHoc.Web.Models.TrangThaiPhieu.DaTra:
                            <span class="badge bg-success">Đã trả</span>
                            break;
                        case QuanLyTaiLieuKhoaHoc.Web.Models.TrangThaiPhieu.TuChoi:
                            <span class="badge bg-danger">Từ chối</span>
                            break;
                    }
                </td>
                <td>@item.GhiChu</td>
                <td>
                    @if (item.TrangThai == QuanLyTaiLieuKhoaHoc.Web.Models.TrangThaiPhieu.DaDuyet && !item.NgayTra.HasValue)
                    {
                        <button class="btn btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#traTaiLieuModal" data-maphieu="@item.MaPhieu" data-tentailieu="@item.TaiLieu?.TenTaiLieu">Trả tài liệu</button>
                    }
                    <button class="btn btn-sm btn-info btn-xem-phieu" data-maphieu="@item.MaPhieu">Xem chi tiết</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal trả tài liệu -->
<div class="modal fade" id="traTaiLieuModal" tabindex="-1" aria-labelledby="traTaiLieuModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form id="traTaiLieuForm">
        <div class="modal-header">
          <h5 class="modal-title" id="traTaiLieuModalLabel">Xác nhận trả tài liệu</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
        </div>
        <div class="modal-body">
          <input type="hidden" id="traMaPhieu" name="MaPhieu" />
          <div class="mb-3">
            <label class="form-label">Tên tài liệu</label>
            <input type="text" class="form-control" id="traTenTaiLieu" readonly />
          </div>
          <div class="mb-3">
            <label class="form-label">Ngày trả</label>
            <input type="datetime-local" class="form-control" id="traNgayTra" name="NgayTra" required />
          </div>
          <div class="mb-3">
            <label class="form-label">Ghi chú</label>
            <textarea class="form-control" id="traGhiChu" name="GhiChu" rows="2"></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
          <button type="submit" class="btn btn-primary">Xác nhận trả</button>
        </div>
      </form>
    </div>
  </div>
</div>

<style>
  .modal-backdrop.show { z-index: 1050; }
  .modal { z-index: 1060; }
  .modal-lg { max-width: 900px; }
  .modal-content { max-height: 80vh; overflow-y: auto; }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var traTaiLieuModal = document.getElementById('traTaiLieuModal');
    traTaiLieuModal.addEventListener('show.bs.modal', function (event) {
      var button = event.relatedTarget;
      var maPhieu = button.getAttribute('data-maphieu');
      var tenTaiLieu = button.getAttribute('data-tentailieu');
      document.getElementById('traMaPhieu').value = maPhieu;
      document.getElementById('traTenTaiLieu').value = tenTaiLieu;
      document.getElementById('traNgayTra').value = new Date().toISOString().slice(0, 16);
      document.getElementById('traGhiChu').value = '';
    });

    document.getElementById('traTaiLieuForm').addEventListener('submit', function (e) {
      e.preventDefault();
      var maPhieu = document.getElementById('traMaPhieu').value;
      var ngayTra = document.getElementById('traNgayTra').value;
      var ghiChu = document.getElementById('traGhiChu').value;
      $.post('/Librarian/XacNhanTraTaiLieu', { maPhieu: maPhieu, ngayTra: ngayTra, ghiChu: ghiChu }, function (response) {
        if (response.success) {
          location.reload();
        } else {
          alert(response.message || 'Có lỗi xảy ra khi trả tài liệu!');
        }
      }).fail(function () {
        alert('Lỗi kết nối khi trả tài liệu!');
      });
    });

    $(document).on('click', '.btn-xem-phieu', function () {
      var maPhieu = $(this).data('maphieu');
      $('#xemPhieuModal').remove(); // Xóa modal cũ

      $('body').append(`
        <div class="modal fade" id="xemPhieuModal" tabindex="-1" aria-labelledby="xemPhieuModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-lg">
            <div class="modal-content"></div>
          </div>
        </div>
      `);

      $.get('/PhieuMuonTra/XemPhieu?maPhieu=' + maPhieu)
        .done(function (html) {
          $('#xemPhieuModal .modal-content').html(html);
          var modal = new bootstrap.Modal(document.getElementById('xemPhieuModal'));
          modal.show();
        })
        .fail(function (xhr) {
          alert('Không thể tải nội dung phiếu: ' + xhr.status);
        });
    });
  });
</script>
