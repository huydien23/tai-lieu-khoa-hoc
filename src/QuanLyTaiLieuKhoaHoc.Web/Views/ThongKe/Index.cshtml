@{
    ViewData["Title"] = "Thống kê & Báo cáo";
}

<div class="page-header mb-4">
    <div class="row align-items-center">
        <div class="col">
            <h1 class="page-title">
                <i class="fas fa-chart-bar me-3"></i>Thống kê & Báo cáo
            </h1>
            <p class="page-subtitle">Theo dõi và phân tích hoạt động hệ thống</p>
        </div>
        <div class="col-auto">
            <div class="btn-group" role="group">
                <a asp-action="Reports" class="btn btn-outline-primary">
                    <i class="fas fa-file-alt me-2"></i>Báo cáo
                </a>
                <a asp-action="Charts" class="btn btn-outline-success">
                    <i class="fas fa-chart-line me-2"></i>Biểu đồ
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card stats-card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="card-title h2 mb-1">1,234</h3>
                        <p class="card-text mb-0">Tổng tài liệu</p>
                    </div>
                    <div class="stats-icon">
                        <i class="fas fa-book"></i>
                    </div>
                </div>
                <div class="mt-2 small">
                    <i class="fas fa-arrow-up me-1"></i>
                    <span>+12% so với tháng trước</span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card stats-card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="card-title h2 mb-1">567</h3>
                        <p class="card-text mb-0">Lượt mượn</p>
                    </div>
                    <div class="stats-icon">
                        <i class="fas fa-book-reader"></i>
                    </div>
                </div>
                <div class="mt-2 small">
                    <i class="fas fa-arrow-up me-1"></i>
                    <span>+8% so với tháng trước</span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card stats-card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="card-title h2 mb-1">89</h3>
                        <p class="card-text mb-0">Người dùng</p>
                    </div>
                    <div class="stats-icon">
                        <i class="fas fa-users"></i>
                    </div>
                </div>
                <div class="mt-2 small">
                    <i class="fas fa-arrow-up me-1"></i>
                    <span>+5% so với tháng trước</span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card stats-card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="card-title h2 mb-1">23</h3>
                        <p class="card-text mb-0">Quá hạn</p>
                    </div>
                    <div class="stats-icon">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                </div>
                <div class="mt-2 small">
                    <i class="fas fa-arrow-down me-1"></i>
                    <span>-15% so với tháng trước</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Charts Row -->
<div class="row mb-4">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-line me-2"></i>Xu hướng Mượn tài liệu
                    </h5>
                    <div class="btn-group btn-group-sm" role="group" id="periodToggle">
                        <input type="radio" class="btn-check" name="period" id="week" value="week">
                        <label class="btn btn-outline-primary" for="week">Tuần</label>
                        <input type="radio" class="btn-check" name="period" id="month" value="month" checked>
                        <label class="btn btn-outline-primary" for="month">Tháng</label>
                        <input type="radio" class="btn-check" name="period" id="year" value="year">
                        <label class="btn btn-outline-primary" for="year">Năm</label>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <canvas id="borrowTrendChart" height="300"></canvas>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-chart-pie me-2"></i>Phân bố theo Loại
                </h5>
            </div>
            <div class="card-body">
                <canvas id="documentTypeChart" height="300"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Popular Documents and Categories -->
<div class="row mb-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-fire me-2"></i>Tài liệu Phổ biến
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Tên tài liệu</th>
                                <th>Lượt mượn</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 1; i <= 5; i++)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>
                                        <a href="#" class="text-decoration-none">
                                            Nghiên cứu AI trong y học @i
                                        </a>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">@((50 - i * 8))</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-tags me-2"></i>Chuyên ngành Quan tâm
                </h5>
            </div>
            <div class="card-body">
                <canvas id="categoryChart" height="200"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Export Tools -->
<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">
            <i class="fas fa-download me-2"></i>Xuất Báo cáo
        </h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-3 mb-3">
                <button class="btn btn-outline-success w-100" onclick="exportReport('documents', 'excel')">
                    <i class="fas fa-file-excel me-2"></i>Danh sách Tài liệu
                </button>
            </div>
            <div class="col-md-3 mb-3">
                <button class="btn btn-outline-primary w-100" onclick="exportReport('borrows', 'excel')">
                    <i class="fas fa-file-alt me-2"></i>Thống kê Mượn trả
                </button>
            </div>
            <div class="col-md-3 mb-3">
                <button class="btn btn-outline-info w-100" onclick="exportReport('users', 'excel')">
                    <i class="fas fa-users me-2"></i>Danh sách Người dùng
                </button>
            </div>
            <div class="col-md-3 mb-3">
                <button class="btn btn-outline-danger w-100" onclick="exportReport('overdue', 'pdf')">
                    <i class="fas fa-file-pdf me-2"></i>Tài liệu Quá hạn
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        let borrowTrendChart, documentTypeChart, categoryChart;

        $(document).ready(function () {
            initializeCharts();

            // Period toggle for borrow trend chart
            $('input[name="period"]').on('change', function () {
                updateBorrowTrendChart($(this).val());
            });
        });

        function initializeCharts() {
            // Borrow Trend Chart
            const borrowCtx = document.getElementById('borrowTrendChart').getContext('2d');
            borrowTrendChart = new Chart(borrowCtx, {
                type: 'line',
                data: {
                    labels: ['T1', 'T2', 'T3', 'T4', 'T5', 'T6', 'T7', 'T8', 'T9', 'T10', 'T11', 'T12'],
                    datasets: [{
                        label: 'Lượt mượn',
                        data: [65, 59, 80, 81, 56, 55, 40, 45, 60, 70, 75, 85],
                        borderColor: 'rgb(54, 162, 235)',
                        backgroundColor: 'rgba(54, 162, 235, 0.1)',
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });

            // Document Type Chart
            const typeCtx = document.getElementById('documentTypeChart').getContext('2d');
            documentTypeChart = new Chart(typeCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Bài báo', 'Đề tài', 'Giáo trình'],
                    datasets: [{
                        data: [45, 32, 23],
                        backgroundColor: [
                            'rgb(54, 162, 235)',
                            'rgb(255, 99, 132)',
                            'rgb(255, 205, 86)'
                        ]
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false
                }
            });

            // Category Chart
            const categoryCtx = document.getElementById('categoryChart').getContext('2d');
            categoryChart = new Chart(categoryCtx, {
                type: 'bar',
                data: {
                    labels: ['KHMT', 'Toán', 'Vật lý', 'Hóa học'],
                    datasets: [{
                        label: 'Số tài liệu',
                        data: [45, 32, 28, 25],
                        backgroundColor: [
                            'rgba(54, 162, 235, 0.8)',
                            'rgba(75, 192, 192, 0.8)',
                            'rgba(255, 99, 132, 0.8)',
                            'rgba(255, 205, 86, 0.8)'
                        ]
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        }

        function updateBorrowTrendChart(period) {
            // Fetch new data based on period
            $.get('/ThongKe/BorrowStats', { period: period })
                .done(function (response) {
                    borrowTrendChart.data.datasets[0].data = response.data;
                    borrowTrendChart.update();
                });
        }

        function exportReport(type, format) {
            showLoading('Đang xuất báo cáo...');

            // Simulate export process
            setTimeout(function () {
                hideLoading();
                showToast('Báo cáo đã được xuất thành công!', 'success');

                // In real implementation, trigger download
                // window.location.href = '/ThongKe/ExportReport?type=' + type + '&format=' + format;
            }, 2000);
        }
    </script>
}
    