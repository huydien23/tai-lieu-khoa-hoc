@model TaiLieuListViewModel

@{
    ViewData["Title"] = "Danh sách Tài liệu";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-file-alt me-2"></i>Danh sách Tài liệu Khoa học</h2>
        @if (User.Identity.IsAuthenticated)
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Thêm Tài liệu mới
            </a>
        }
    </div>

    <!-- Search and Filter Section -->
    <div class="card mb-4">
        <div class="card-header">
            <h5><i class="fas fa-search me-2"></i>Tìm kiếm và Lọc</h5>
        </div>
        <div class="card-body">
            <form method="get" asp-action="Index">
                <div class="row">
                    <div class="col-md-4">
                        <label for="timKiem" class="form-label">Từ khóa tìm kiếm:</label>
                        <input type="text" class="form-control" id="timKiem" name="timKiem" 
                               value="@Model.TimKiem" placeholder="Nhập tên tài liệu, mô tả...">
                    </div>
                    <div class="col-md-3">
                        <label for="maChuyenNganh" class="form-label">Chuyên ngành:</label>
                        <select class="form-select" id="maChuyenNganh" name="maChuyenNganh">
                            <option value="">-- Tất cả chuyên ngành --</option>
                            @foreach (var item in ViewBag.ChuyenNganhList as SelectList ?? new SelectList(new List<object>()))
                            {
                                <option value="@item.Value" selected="@(item.Selected)">
                                    @item.Text
                                </option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="maLoaiTaiLieu" class="form-label">Loại tài liệu:</label>
                        <select class="form-select" id="maLoaiTaiLieu" name="maLoaiTaiLieu">
                            <option value="">-- Tất cả loại --</option>
                            @foreach (var item in ViewBag.LoaiTaiLieuList as SelectList ?? new SelectList(new List<object>()))
                            {
                                <option value="@item.Value" selected="@(item.Selected)">
                                    @item.Text
                                </option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="fas fa-search"></i> Tìm
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-refresh"></i> Reset
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Results Info -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <span class="badge bg-info">
                Tìm thấy @Model.TongSoTaiLieu tài liệu
            </span>
            @if (!string.IsNullOrEmpty(Model.TimKiem))
            {
                <span class="badge bg-secondary">
                    Từ khóa: "@Model.TimKiem"
                </span>
            }
        </div>
    </div>

    <!-- Documents Grid View -->
    <div id="documentsGrid" class="documents-view">
        @if (Model.DanhSachTaiLieu.Any())
        {
            <div class="row">
                @foreach (var taiLieu in Model.DanhSachTaiLieu)
                {
                    <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                        <div class="card h-100 document-card">
                            <div class="card-header bg-primary text-white">
                                <h6 class="card-title mb-0">
                                    <i class="fas fa-file-alt me-2"></i>
                                    @taiLieu.TenTaiLieu
                                </h6>
                            </div>
                            <div class="card-body">
                                <p class="card-text">
                                    <small class="text-muted">
                                        <i class="fas fa-user me-1"></i>@taiLieu.TenNguoiTaiLen<br>
                                        <i class="fas fa-calendar me-1"></i>@taiLieu.NgayTaiLen.ToString("dd/MM/yyyy")<br>
                                        <i class="fas fa-download me-1"></i>@taiLieu.LuotTai lượt tải<br>
                                        <i class="fas fa-tag me-1"></i>@taiLieu.TenChuyenNganh
                                    </small>
                                </p>
                                @if (!string.IsNullOrEmpty(taiLieu.MoTa))
                                {
                                    <p class="card-text">
                                        @(taiLieu.MoTa.Length > 100 ? taiLieu.MoTa.Substring(0, 100) + "..." : taiLieu.MoTa)
                                    </p>
                                }
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">
                                        <span class="badge bg-secondary">@taiLieu.TenLoaiTaiLieu</span>
                                    </small>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@taiLieu.MaTaiLieu" 
                                           class="btn btn-outline-primary" title="Xem chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            <a asp-action="Download" asp-route-id="@taiLieu.MaTaiLieu" 
                                               class="btn btn-outline-success" title="Tải xuống">
                                                <i class="fas fa-download"></i>
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-search fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">Không tìm thấy tài liệu nào</h4>
                <p class="text-muted">Thử thay đổi điều kiện tìm kiếm hoặc bộ lọc</p>
            </div>
        }
    </div>

    <!-- Pagination -->
    @if (Model.TongSoTrang > 1)
    {
        <nav aria-label="Phân trang">
            <ul class="pagination justify-content-center">
                @if (Model.TrangHienTai > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" 
                           asp-route-trang="@(Model.TrangHienTai - 1)"
                           asp-route-timKiem="@Model.TimKiem"
                           asp-route-maChuyenNganh="@Model.MaChuyenNganh"
                           asp-route-maLoaiTaiLieu="@Model.MaLoaiTaiLieu"
                           asp-route-sapXep="@Model.SapXep">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    </li>
                }

                @for (int i = Math.Max(1, Model.TrangHienTai - 2); i <= Math.Min(Model.TongSoTrang, Model.TrangHienTai + 2); i++)
                {
                    <li class="page-item @(i == Model.TrangHienTai ? "active" : "")">
                        <a class="page-link" asp-action="Index" 
                           asp-route-trang="@i"
                           asp-route-timKiem="@Model.TimKiem"
                           asp-route-maChuyenNganh="@Model.MaChuyenNganh"
                           asp-route-maLoaiTaiLieu="@Model.MaLoaiTaiLieu"
                           asp-route-sapXep="@Model.SapXep">
                            @i
                        </a>
                    </li>
                }

                @if (Model.TrangHienTai < Model.TongSoTrang)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" 
                           asp-route-trang="@(Model.TrangHienTai + 1)"
                           asp-route-timKiem="@Model.TimKiem"
                           asp-route-maChuyenNganh="@Model.MaChuyenNganh"
                           asp-route-maLoaiTaiLieu="@Model.MaLoaiTaiLieu"
                           asp-route-sapXep="@Model.SapXep">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>

<style>
.document-card {
    transition: transform 0.2s;
}

.document-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}

.card-title {
    font-size: 1rem;
    font-weight: 600;
}
</style>
