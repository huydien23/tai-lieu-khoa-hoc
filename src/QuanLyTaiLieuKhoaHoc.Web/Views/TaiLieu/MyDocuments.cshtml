@model QuanLyTaiLieuKhoaHoc.Web.Models.ViewModels.TaiLieuListViewModel
@{
    ViewData["Title"] = "Tài liệu của tôi";
}

<div class="container py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
            <li class="breadcrumb-item active">Tài liệu của tôi</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-user-files me-2"></i>Tài liệu của tôi
        </h2>
        <a href="/TaiLieu/Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Thêm tài liệu mới
        </a>
    </div>

    @if (Model.DanhSachTaiLieu.Any())
    {
        <div class="row">
            @foreach (var item in Model.DanhSachTaiLieu)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <span class="badge @GetTrangThaiBadgeClass(item.TrangThai)">
                                    @GetTrangThaiText(item.TrangThai)
                                </span>
                                <div class="dropdown">
                                    <button class="btn btn-link btn-sm" type="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-ellipsis-v"></i>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="/TaiLieu/Details/@item.MaTaiLieu">
                                                <i class="fas fa-eye me-2"></i>Xem chi tiết
                                            </a></li>
                                        <li><a class="dropdown-item" href="/TaiLieu/Edit/@item.MaTaiLieu">
                                                <i class="fas fa-edit me-2"></i>Chỉnh sửa
                                            </a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item text-danger" href="/TaiLieu/Delete/@item.MaTaiLieu">
                                                <i class="fas fa-trash me-2"></i>Xóa
                                            </a></li>
                                    </ul>
                                </div>
                            </div>

                            <h5 class="card-title">
                                <a href="/TaiLieu/Details/@item.MaTaiLieu" class="text-decoration-none">
                                    @item.TenTaiLieu
                                </a>
                            </h5>

                            <p class="card-text text-muted small">
                                @if (!string.IsNullOrEmpty(item.MoTa) && item.MoTa.Length > 100)
                                {
                                    @(item.MoTa.Substring(0, 100) + "...")
                                }
                                else
                                {
                                    @item.MoTa
                                }
                            </p>

                            <div class="small text-muted mb-2">
                                <div><i class="fas fa-graduation-cap me-1"></i>@item.TenChuyenNganh</div>
                                <div><i class="fas fa-file-alt me-1"></i>@item.TenLoaiTaiLieu</div>
                                <div><i class="fas fa-calendar me-1"></i>@item.NgayTaiLen.ToString("dd/MM/yyyy")</div>
                                <div><i class="fas fa-download me-1"></i>@item.LuotTai lượt tải</div>
                            </div>
                        </div>

                        <div class="card-footer bg-transparent">
                            <div class="d-flex justify-content-between">
                                <a href="/TaiLieu/Details/@item.MaTaiLieu" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-eye me-1"></i>Chi tiết
                                </a>
                                <a href="/TaiLieu/Edit/@item.MaTaiLieu" class="btn btn-outline-success btn-sm">
                                    <i class="fas fa-edit me-1"></i>Sửa
                                </a>
                                @if (item.TrangThai == 1) // DaDuyet
                                {
                                    <a href="/TaiLieu/Download/@item.MaTaiLieu" class="btn btn-outline-info btn-sm">
                                        <i class="fas fa-download me-1"></i>Tải
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Phân trang -->
        @if (Model.TongSoTrang > 1)
        {
            <nav aria-label="Phân trang tài liệu">
                <ul class="pagination justify-content-center">
                    @if (Model.TrangHienTai > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="/TaiLieu/MyDocuments?trang=@(Model.TrangHienTai - 1)">Trước</a>
                        </li>
                    }

                    @for (int i = Math.Max(1, Model.TrangHienTai - 2); i <= Math.Min(Model.TongSoTrang, Model.TrangHienTai + 2); i++)
                    {
                        <li class="page-item @(i == Model.TrangHienTai ? "active" : "")">
                            <a class="page-link" href="/TaiLieu/MyDocuments?trang=@i">@i</a>
                        </li>
                    }

                    @if (Model.TrangHienTai < Model.TongSoTrang)
                    {
                        <li class="page-item">
                            <a class="page-link" href="/TaiLieu/MyDocuments?trang=@(Model.TrangHienTai + 1)">Sau</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-file-alt fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">Chưa có tài liệu nào</h4>
            <p class="text-muted">Bạn chưa tải lên tài liệu nào. Hãy bắt đầu chia sẻ kiến thức của mình!</p>
            <a href="/TaiLieu/Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Thêm tài liệu đầu tiên
            </a>
        </div>
    }
</div>

@functions {
    private string GetTrangThaiBadgeClass(int trangThai)
    {
        return trangThai switch
        {
            0 => "bg-warning text-dark", // ChoDuyet
            1 => "bg-success",           // DaDuyet
            2 => "bg-danger",            // TuChoi
            3 => "bg-secondary",         // An
            _ => "bg-secondary"
        };
    }

    private string GetTrangThaiText(int trangThai)
    {
        return trangThai switch
        {
            0 => "Chờ duyệt",
            1 => "Đã duyệt",
            2 => "Bị từ chối",
            3 => "Đã ẩn",
            _ => "Không xác định"
        };
    }
}
