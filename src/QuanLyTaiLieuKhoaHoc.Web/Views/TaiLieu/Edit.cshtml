@model QuanLyTaiLieuKhoaHoc.Web.Models.ViewModels.TaiLieuViewModel
@{
    ViewData["Title"] = "Chỉnh sửa tài liệu";
}

<div class="container py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
            <li class="breadcrumb-item"><a href="/TaiLieu">Tài liệu</a></li>
            <li class="breadcrumb-item"><a href="/TaiLieu/Details/@Model.MaTaiLieu">@Model.TenTaiLieu</a></li>
            <li class="breadcrumb-item active">Chỉnh sửa</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-edit me-2"></i>Chỉnh sửa tài liệu
                    </h3>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data" asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="MaTaiLieu" />

                        <div class="mb-3">
                            <label asp-for="TenTaiLieu" class="form-label">Tên tài liệu <span class="text-danger">*</span></label>
                            <input asp-for="TenTaiLieu" class="form-control" placeholder="Nhập tên tài liệu..." />
                            <span asp-validation-for="TenTaiLieu" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MoTa" class="form-label">Mô tả <span class="text-danger">*</span></label>
                            <textarea asp-for="MoTa" class="form-control" rows="4" placeholder="Mô tả chi tiết về nội dung tài liệu..."></textarea>
                            <span asp-validation-for="MoTa" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="MaChuyenNganh" class="form-label">Chuyên ngành <span class="text-danger">*</span></label>
                                    <select asp-for="MaChuyenNganh" class="form-select">
                                        <option value="">-- Chọn chuyên ngành --</option>
                                        @if (ViewBag.ChuyenNganh != null)
                                        {
                                            @foreach (var item in ViewBag.ChuyenNganh as List<SelectListItem>)
                                            {
                                                <option value="@item.Value" selected="@(item.Value == Model.MaChuyenNganh.ToString())">@item.Text</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="MaChuyenNganh" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="MaLoaiTaiLieu" class="form-label">Loại tài liệu <span class="text-danger">*</span></label>
                                    <select asp-for="MaLoaiTaiLieu" class="form-select">
                                        <option value="">-- Chọn loại tài liệu --</option>
                                        @if (ViewBag.LoaiTaiLieu != null)
                                        {
                                            @foreach (var item in ViewBag.LoaiTaiLieu as List<SelectListItem>)
                                            {
                                                <option value="@item.Value" selected="@(item.Value == Model.MaLoaiTaiLieu.ToString())">@item.Text</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="MaLoaiTaiLieu" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">File hiện tại</label>
                            <div class="alert alert-light">
                                <i class="fas fa-file me-2"></i>@Model.DuongDanFile
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FileTaiLieu" class="form-label">Thay đổi file (tùy chọn)</label>
                            <input asp-for="FileTaiLieu" type="file" class="form-control" accept=".pdf,.doc,.docx,.ppt,.pptx,.xls,.xlsx,.txt" />
                            <div class="form-text">
                                Để trống nếu không muốn thay đổi file. Chấp nhận các định dạng: PDF, DOC, DOCX, PPT, PPTX, XLS, XLSX, TXT. Tối đa 50MB.
                            </div>
                            <span asp-validation-for="FileTaiLieu" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="/TaiLieu/Details/@Model.MaTaiLieu" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Preview file name when selected
        document.querySelector('input[type="file"]').addEventListener('change', function (e) {
            const fileName = e.target.files[0]?.name;
            if (fileName) {
                const feedback = document.createElement('div');
                feedback.className = 'form-text text-success';
                feedback.innerHTML = `<i class="fas fa-file me-1"></i>Sẽ thay thế bằng: ${fileName}`;

                // Remove previous feedback
                const existing = e.target.parentNode.querySelector('.text-success');
                if (existing) existing.remove();

                e.target.parentNode.appendChild(feedback);
            }
        });

        // Form validation
        document.querySelector('form').addEventListener('submit', function (e) {
            const fileInput = document.querySelector('input[type="file"]');
            const file = fileInput.files[0];

            if (file && file.size > 50 * 1024 * 1024) { // 50MB
                e.preventDefault();
                alert('File quá lớn! Vui lòng chọn file nhỏ hơn 50MB.');
                return false;
            }
        });
    </script>
}
