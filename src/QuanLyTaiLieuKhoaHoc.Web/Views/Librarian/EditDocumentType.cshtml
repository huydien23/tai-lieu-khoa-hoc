@model QuanLyTaiLieuKhoaHoc.Web.Models.LoaiTaiLieu

@{
    ViewData["Title"] = "Chỉnh sửa loại tài liệu";
}

<div class="content-header">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="mb-0">
            <i class="fas fa-edit me-2 text-primary"></i>
            Chỉnh sửa loại tài liệu
        </h2>
        <a asp-action="ManageDocumentTypes" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Quay lại danh sách
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>
                    Thông tin loại tài liệu
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="EditDocumentType" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <input asp-for="MaLoaiTaiLieu" type="hidden" />
                    <input asp-for="NgayTao" type="hidden" />
                    
                    <div class="mb-4">
                        <label asp-for="TenLoaiTaiLieu" class="form-label fw-semibold">
                            <i class="fas fa-tag me-1"></i>
                            Tên loại tài liệu <span class="text-danger">*</span>
                        </label>
                        <input asp-for="TenLoaiTaiLieu" class="form-control" placeholder="Nhập tên loại tài liệu..." />
                        <span asp-validation-for="TenLoaiTaiLieu" class="text-danger small"></span>
                        <div class="form-text">
                            <i class="fas fa-info-circle me-1"></i>
                            Tên loại tài liệu phải rõ ràng và dễ hiểu.
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="MoTa" class="form-label fw-semibold">
                            <i class="fas fa-align-left me-1"></i>
                            Mô tả
                        </label>
                        <textarea asp-for="MoTa" class="form-control" rows="4" 
                                  placeholder="Nhập mô tả chi tiết về loại tài liệu này..."></textarea>
                        <span asp-validation-for="MoTa" class="text-danger small"></span>
                        <div class="form-text">
                            <i class="fas fa-info-circle me-1"></i>
                            Mô tả ngắn gọn về đặc điểm và mục đích sử dụng của loại tài liệu này.
                        </div>
                    </div>

                    <div class="mb-4">
                        <div class="form-check">
                            <input asp-for="TrangThaiHoatDong" class="form-check-input" type="checkbox" />
                            <label asp-for="TrangThaiHoatDong" class="form-check-label fw-semibold">
                                <i class="fas fa-toggle-on me-1 text-success"></i>
                                Kích hoạt loại tài liệu này
                            </label>
                        </div>
                        <div class="form-text">
                            <i class="fas fa-info-circle me-1"></i>
                            Loại tài liệu được kích hoạt sẽ hiển thị trong danh sách khi thêm tài liệu mới.
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i>Cập nhật
                        </button>
                        <a asp-action="ManageDocumentTypes" class="btn btn-secondary">
                            <i class="fas fa-times me-1"></i>Hủy
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="fas fa-chart-bar me-2"></i>
                    Thống kê sử dụng
                </h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-12">
                        <div class="border rounded p-3 mb-3">
                            <div class="text-primary fs-4 fw-bold">@(Model.TaiLieu?.Count ?? 0)</div>
                            <small class="text-muted">Tài liệu thuộc loại này</small>
                        </div>
                    </div>
                </div>
                
                <div class="mb-3">
                    <small class="text-muted d-block mb-2">
                        <i class="fas fa-calendar me-1"></i>
                        <strong>Ngày tạo:</strong> @Model.NgayTao.ToString("dd/MM/yyyy HH:mm")
                    </small>
                </div>
                
                @if ((Model.TaiLieu?.Count ?? 0) > 0)
                {
                    <div class="alert alert-warning small" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Lưu ý:</strong> Loại tài liệu này đang được sử dụng bởi @(Model.TaiLieu!.Count) tài liệu. 
                        Việc vô hiệu hóa có thể ảnh hưởng đến việc hiển thị và tìm kiếm các tài liệu này.
                    </div>
                }
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="fas fa-history me-2"></i>
                    Lịch sử thay đổi
                </h5>
            </div>
            <div class="card-body">
                <div class="timeline">
                    <div class="timeline-item">
                        <div class="timeline-marker bg-success"></div>
                        <div class="timeline-content">
                            <small class="text-muted">@Model.NgayTao.ToString("dd/MM/yyyy HH:mm")</small>
                            <div class="small">Tạo loại tài liệu</div>
                        </div>
                    </div>
                </div>
                
                <small class="text-muted">
                    <i class="fas fa-info-circle me-1"></i>
                    Lịch sử chi tiết sẽ được ghi lại sau mỗi lần chỉnh sửa.
                </small>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="fas fa-cogs me-2"></i>
                    Thao tác nhanh
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <form asp-action="ToggleDocumentTypeStatus" method="post">
                        <input type="hidden" name="id" value="@Model.MaLoaiTaiLieu" />
                        @if (Model.TrangThaiHoatDong)
                        {
                            <button type="submit" class="btn btn-outline-warning btn-sm w-100" 
                                    onclick="return confirm('Bạn có chắc chắn muốn vô hiệu hóa loại tài liệu này?')">
                                <i class="fas fa-ban me-1"></i>Vô hiệu hóa
                            </button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-outline-success btn-sm w-100" 
                                    onclick="return confirm('Bạn có chắc chắn muốn kích hoạt loại tài liệu này?')">
                                <i class="fas fa-check me-1"></i>Kích hoạt
                            </button>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Tự động focus vào ô đầu tiên
        document.getElementById('TenLoaiTaiLieu').focus();
        
        // Hiển thị cảnh báo khi có tài liệu đang sử dụng
        @if ((Model.TaiLieu?.Count ?? 0) > 0)
        {
            <text>
            document.querySelector('input[name="TrangThaiHoatDong"]').addEventListener('change', function() {
                if (!this.checked) {
                    if (!confirm('Loại tài liệu này đang được sử dụng bởi @(Model.TaiLieu!.Count) tài liệu. Bạn có chắc chắn muốn vô hiệu hóa?')) {
                        this.checked = true;
                    }
                }
            });
            </text>
        }
    </script>
    
    <style>
        .timeline {
            position: relative;
            padding-left: 30px;
        }
        
        .timeline-item {
            position: relative;
            margin-bottom: 20px;
        }
        
        .timeline-marker {
            position: absolute;
            left: -35px;
            top: 5px;
            width: 10px;
            height: 10px;
            border-radius: 50%;
        }
        
        .timeline::before {
            content: '';
            position: absolute;
            left: -31px;
            top: 0;
            bottom: 0;
            width: 2px;
            background-color: #dee2e6;
        }
    </style>
}
