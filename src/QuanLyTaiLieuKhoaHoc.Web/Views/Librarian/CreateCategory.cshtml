@model QuanLyTaiLieuKhoaHoc.Web.Models.ChuyenNganh

@{
    ViewData["Title"] = "Thêm chuyên ngành mới";
    Layout = "_LayoutLibrarian";
}

<div class="page-header">
    <div class="d-flex align-items-center">
        <a asp-action="ManageCategories" class="btn btn-outline-secondary me-3">
            <i class="fas fa-arrow-left"></i>
        </a>
        <h1 class="page-title mb-0">
            <i class="fas fa-plus me-2"></i>
            Thêm chuyên ngành mới
        </h1>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Thông tin chuyên ngành</h3>
            </div>
            <div class="card-body">
                <form asp-action="CreateCategory" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="TenChuyenNganh" class="form-label required">Tên chuyên ngành</label>
                        <input asp-for="TenChuyenNganh" class="form-control" placeholder="Nhập tên chuyên ngành" />
                        <span asp-validation-for="TenChuyenNganh" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MoTa" class="form-label">Mô tả</label>
                        <textarea asp-for="MoTa" class="form-control" rows="4" 
                                  placeholder="Nhập mô tả về chuyên ngành (tùy chọn)"></textarea>
                        <span asp-validation-for="MoTa" class="text-danger"></span>
                        <div class="form-text">Mô tả chi tiết về chuyên ngành này</div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="TrangThaiHoatDong" class="form-check-input" type="checkbox" checked />
                            <label asp-for="TrangThaiHoatDong" class="form-check-label">
                                Kích hoạt ngay sau khi tạo
                            </label>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i>
                            Lưu chuyên ngành
                        </button>
                        <a asp-action="ManageCategories" class="btn btn-secondary">
                            <i class="fas fa-times me-1"></i>
                            Hủy
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
.page-header {
    margin-bottom: 1.5rem;
}

.page-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--primary-color);
}

.card {
    border: none;
    box-shadow: var(--card-shadow);
}

.card-header {
    background-color: var(--light-gray);
    border-bottom: 1px solid var(--border-color);
}

.required::after {
    content: " *";
    color: var(--danger-color);
}

.form-control:focus {
    border-color: var(--primary-color);
    box-shadow: 0 0 0 0.2rem rgba(var(--primary-color-rgb), 0.25);
}

.btn-primary {
    background-color: var(--primary-color);
    border-color: var(--primary-color);
}

.btn-primary:hover {
    background-color: var(--primary-dark);
    border-color: var(--primary-dark);
}
</style>
