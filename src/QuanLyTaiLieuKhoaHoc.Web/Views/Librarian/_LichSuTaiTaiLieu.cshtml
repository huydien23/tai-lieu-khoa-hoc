@model IEnumerable<QuanLyTaiLieuKhoaHoc.Web.Models.LichSuTaiTaiLieu>

<div class="card shadow rounded-4">
    <div class="card-header bg-gradient-primary text-white rounded-top-4">
        <h5 class="mb-0">
            <i class="fas fa-download me-2"></i>
            Lịch sử tải tài liệu gần đây
        </h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-primary text-center align-middle">
                    <tr>
                        <th style="width: 50px;">#</th>
                        <th>Người tải</th>
                        <th>Email</th>
                        <th>Tài liệu</th>
                        <th>Thời gian tải</th>
                        <th>Địa chỉ IP</th>
                    </tr>
                </thead>
                <tbody>
                @if (Model != null && Model.Any())
                {
                    int stt = 1;
                    foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <td>@stt</td>
                            <td>@item.NguoiDung?.HoTen</td>
                            <td>@item.NguoiDung?.Email</td>
                            <td>@item.TaiLieu?.TenTaiLieu</td>
                            <td>@item.ThoiGianTai.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@item.DiaChiIP</td>
                        </tr>
                        stt++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted">Chưa có dữ liệu tải tài liệu.</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
<style>
    .table-primary {
        background: linear-gradient(45deg, #0d6efd, #6610f2);
        color: #fff;
    }
    .card-header.bg-gradient-primary {
        background: linear-gradient(45deg, #0d6efd, #6610f2) !important;
        color: #fff;
    }
    .card.shadow {
        box-shadow: 0 4px 24px 0 rgba(0,0,0,0.10);
    }
    .table-hover tbody tr:hover {
        background-color: #e9f0fb;
        transition: background 0.2s;
    }
    .table th, .table td {
        vertical-align: middle;
    }
</style> 