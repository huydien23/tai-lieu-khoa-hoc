@model QuanLyTaiLieuKhoaHoc.Web.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard Thủ thư";
}

<!-- Dashboard Header -->
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="h2 fw-bold mb-2">
                <i class="fas fa-book-reader me-3 text-primary"></i>
                Dashboard Thủ thư
            </h1>
            <p class="text-muted mb-0">Quản lý và giám sát tài liệu khoa học</p>
        </div>
        <div class="page-actions">
            <a href="@Url.Action("ManageDocuments")" class="btn btn-primary me-2">
                <i class="fas fa-tasks me-2"></i>Quản lý tài liệu
            </a>
            <a href="@Url.Action("ManageUsers")" class="btn btn-outline-primary">
                <i class="fas fa-users me-2"></i>Quản lý người dùng
            </a>
        </div>
    </div>
</div>

<!-- Key Statistics -->
<div class="row g-4 mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="stats-card">
            <div class="stats-icon text-primary">
                <i class="fas fa-book-open"></i>
            </div>
            <div class="stats-number">@Model.TongSoTaiLieu</div>
            <div class="stats-label">Tổng tài liệu</div>
            <small class="text-success">
                <i class="fas fa-arrow-up me-1"></i>@Model.TaiLieuMoiTrongThang mới tháng này
            </small>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="stats-card">
            <div class="stats-icon text-success">
                <i class="fas fa-users"></i>
            </div>
            <div class="stats-number">@Model.TongSoNguoiDung</div>
            <div class="stats-label">Người dùng</div>
            <small class="text-info">
                <i class="fas fa-info-circle me-1"></i>Đã đăng ký
            </small>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="stats-card">
            <div class="stats-icon text-warning">
                <i class="fas fa-download"></i>
            </div>
            <div class="stats-number">@Model.TongSoLuotTai</div>
            <div class="stats-label">Lượt tải</div>
            <small class="text-success">
                <i class="fas fa-chart-line me-1"></i>Tổng cộng
            </small>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="stats-card">
            <div class="stats-icon text-info">
                <i class="fas fa-calendar-plus"></i>
            </div>
            <div class="stats-number">@Model.TaiLieuMoiTrongThang</div>
            <div class="stats-label">Mới tháng này</div>
            <small class="text-primary">
                <i class="fas fa-calendar me-1"></i>@DateTime.Now.ToString("MM/yyyy")
            </small>
        </div>
    </div>
</div>

<!-- Content Row -->
<div class="row">
    <!-- Recent Documents -->
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-white border-0 py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">
                        <i class="fas fa-clock text-primary me-2"></i>
                        Tài liệu mới nhất
                    </h5>
                    <a href="@Url.Action("ManageDocuments")" class="btn btn-outline-primary btn-sm">
                        Xem tất cả
                    </a>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="border-0 ps-4">Tài liệu</th>
                                <th class="border-0">Tác giả</th>
                                <th class="border-0">Chuyên ngành</th>
                                <th class="border-0">Ngày tải</th>
                                <th class="border-0">Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.TaiLieuMoiNhat?.Any() == true)
                            {
                                @foreach (var taiLieu in Model.TaiLieuMoiNhat.Take(8))
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center">
                                                <div class="document-icon me-3">
                                                    <i class="fas fa-file-pdf text-danger"></i>
                                                </div>
                                                <div>
                                                    <div class="fw-semibold">@taiLieu.TenTaiLieu</div>
                                                    <small class="text-muted">@taiLieu.TenLoaiTaiLieu</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="text-dark">@taiLieu.TenNguoiTaiLen</div>
                                        </td>
                                        <td>
                                            <span class="badge bg-light text-dark">
                                                @taiLieu.TenChuyenNganh
                                            </span>
                                        </td>
                                        <td class="text-muted">
                                            @taiLieu.NgayTaiLen.ToString("dd/MM/yyyy")
                                        </td>
                                        <td>
                                            @switch (taiLieu.TrangThai)
                                            {
                                                case 0: // ChoDuyet
                                                    <span class="badge bg-warning">Chờ duyệt</span>
                                                    break;
                                                case 1: // DaDuyet
                                                    <span class="badge bg-success">Đã duyệt</span>
                                                    break;
                                                case 2: // TuChoi
                                                    <span class="badge bg-danger">Từ chối</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-secondary">Không xác định</span>
                                                    break;
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center py-4 text-muted">
                                        <i class="fas fa-folder-open fa-2x mb-3"></i>
                                        <br>Chưa có tài liệu nào
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Charts -->
    <div class="col-lg-4">
        <!-- Documents by Specialty -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="mb-0 fw-bold">
                    <i class="fas fa-chart-pie text-primary me-2"></i>
                    Theo chuyên ngành
                </h5>
            </div>
            <div class="card-body">
                @if (Model.ThongKeTheoChuyenNganh?.Any() == true)
                {
                    @foreach (var item in Model.ThongKeTheoChuyenNganh.Take(5))
                    {
                        <div class="progress-item mb-3">
                            <div class="d-flex justify-content-between mb-1">
                                <span class="text-dark fw-medium">@item.Key</span>
                                <span class="text-muted">@item.Value</span>
                            </div>
                            <div class="progress" style="height: 6px;">
                                <div class="progress-bar bg-primary" style="width: @((double)item.Value / Model.TongSoTaiLieu * 100)%"></div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-chart-pie fa-2x mb-2"></i>
                        <br>Chưa có dữ liệu
                    </div>
                }
            </div>
        </div>

        <!-- Documents by Type -->
        <div class="card shadow-sm">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="mb-0 fw-bold">
                    <i class="fas fa-chart-bar text-success me-2"></i>
                    Theo loại tài liệu
                </h5>
            </div>
            <div class="card-body">
                @if (Model.ThongKeTheoLoaiTaiLieu?.Any() == true)
                {
                    @foreach (var item in Model.ThongKeTheoLoaiTaiLieu)
                    {
                        <div class="progress-item mb-3">
                            <div class="d-flex justify-content-between mb-1">
                                <span class="text-dark fw-medium">@item.Key</span>
                                <span class="text-muted">@item.Value</span>
                            </div>
                            <div class="progress" style="height: 6px;">
                                <div class="progress-bar bg-success" style="width: @((double)item.Value / Model.TongSoTaiLieu * 100)%"></div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-chart-bar fa-2x mb-2"></i>
                        <br>Chưa có dữ liệu
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
.page-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 15px;
    padding: 2rem;
    margin-bottom: 2rem;
    color: white;
}

.page-header h1 {
    color: white !important;
}

.page-header .text-muted {
    color: rgba(255, 255, 255, 0.8) !important;
}

.stats-card {
    background: white;
    border-radius: 15px;
    padding: 1.5rem;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
    border: 1px solid #f1f3f4;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    position: relative;
    overflow: hidden;
}

.stats-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
}

.stats-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #667eea, #764ba2);
}

.stats-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
}

.stats-number {
    font-size: 2.5rem;
    font-weight: 700;
    color: #2d3748;
    margin-bottom: 0.5rem;
}

.stats-label {
    font-size: 0.875rem;
    color: #718096;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 0.75rem;
}

.document-icon {
    width: 40px;
    height: 40px;
    background: #f8f9ff;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
}

.progress-item .progress {
    background-color: #f1f3f4;
    border-radius: 10px;
}

.progress-item .progress-bar {
    border-radius: 10px;
}

.card {
    border: none;
    border-radius: 15px;
}

.card-header {
    border-radius: 15px 15px 0 0 !important;
}

.table th {
    font-weight: 600;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: #4a5568;
}

.badge {
    font-weight: 500;
    padding: 0.375rem 0.75rem;
    font-size: 0.75rem;
}
</style>
