@model IEnumerable<QuanLyTaiLieuKhoaHoc.Web.Models.ChuyenNganh>

@{
    ViewData["Title"] = "Quản lý Chuyên ngành";
    Layout = "_LayoutLibrarian";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="page-title">
            <i class="fas fa-graduation-cap me-2"></i>
            Quản lý Chuyên ngành
        </h1>
        <a asp-action="CreateCategory" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>
            Thêm chuyên ngành mới
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Danh sách chuyên ngành</h3>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Tên chuyên ngành</th>
                            <th>Mô tả</th>
                            <th>Số tài liệu</th>
                            <th>Số người dùng</th>
                            <th>Ngày tạo</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{int index = 1;}
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@index</td>
                                <td>
                                    <strong>@item.TenChuyenNganh</strong>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.MoTa))
                                    {
                                        <span class="text-muted">@(item.MoTa.Length > 100 ? item.MoTa.Substring(0, 100) + "..." : item.MoTa)</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">Chưa có mô tả</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-info">@item.TaiLieu.Count</span>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@item.NguoiDung.Count</span>
                                </td>
                                <td>
                                    <small class="text-muted">@item.NgayTao.ToString("dd/MM/yyyy")</small>
                                </td>
                                <td>
                                    @if (item.TrangThaiHoatDong)
                                    {
                                        <span class="badge bg-success">Hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Vô hiệu hóa</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="EditCategory" asp-route-id="@item.MaChuyenNganh" 
                                           class="btn btn-sm btn-outline-primary" title="Chỉnh sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        
                                        <form asp-action="ToggleCategoryStatus" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@item.MaChuyenNganh" />
                                            @if (item.TrangThaiHoatDong)
                                            {
                                                <button type="submit" class="btn btn-sm btn-outline-warning" 
                                                        title="Vô hiệu hóa"
                                                        onclick="return confirm('Bạn có chắc chắn muốn vô hiệu hóa chuyên ngành này?');">
                                                    <i class="fas fa-pause"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="submit" class="btn btn-sm btn-outline-success" 
                                                        title="Kích hoạt"
                                                        onclick="return confirm('Bạn có chắc chắn muốn kích hoạt chuyên ngành này?');">
                                                    <i class="fas fa-play"></i>
                                                </button>
                                            }
                                        </form>

                                        <button type="button" class="btn btn-sm btn-outline-danger" 
                                                title="Xóa" onclick="deleteCategory(@item.MaChuyenNganh, '@item.TenChuyenNganh')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                            index++;
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="fas fa-graduation-cap fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">Chưa có chuyên ngành nào</h5>
                <p class="text-muted">Hãy thêm chuyên ngành đầu tiên để bắt đầu quản lý.</p>
                <a asp-action="CreateCategory" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>
                    Thêm chuyên ngành mới
                </a>
            </div>
        }
    </div>
</div>

<style>
.page-header {
    margin-bottom: 1.5rem;
}

.page-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--primary-color);
}

.card {
    border: none;
    box-shadow: var(--card-shadow);
}

.card-header {
    background-color: var(--light-gray);
    border-bottom: 1px solid var(--border-color);
}

.table th {
    background-color: var(--light-gray);
    font-weight: 600;
    color: var(--text-color);
    border-top: none;
}

.btn-group .btn {
    margin-right: 2px;
}

</style>

<script>
function deleteCategory(id, name) {
    if (confirm(`Bạn có chắc chắn muốn xóa chuyên ngành "${name}"?\n\nLưu ý: Chỉ có thể xóa khi chuyên ngành không còn tài liệu hoặc người dùng nào.`)) {
        $.ajax({
            url: '@Url.Action("DeleteCategory")',
            type: 'POST',
            data: { id: id },
            success: function (response) {
                if (response.success) {
                    toastr.success(response.message);
                    setTimeout(function () {
                        location.reload();
                    }, 1000);
                } else {
                    toastr.error(response.message);
                }
            },
            error: function (xhr, status, error) {
                toastr.error('Có lỗi xảy ra: ' + error);
            }
        });
    }
}
</script>
