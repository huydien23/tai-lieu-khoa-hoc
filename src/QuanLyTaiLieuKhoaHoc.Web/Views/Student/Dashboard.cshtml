                    <div class="card-header-custom">
                        <h6 class="mb-0">
                            <i class="fas fa-history me-2"></i>
                            Lịch sử mượn/trả
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Tài liệu</th>
                                        <th>Ngày mượn</th>
                                        <th>Ngày trả</th>
                                        <th>Trạng thái</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            <div class="fw-medium">Hệ điều hành Linux</div>
                                            <small class="text-muted">PDF - 2.8 MB</small>
                                        </td>
                                        <td>20/12/2024</td>
                                        <td>28/12/2024</td>
                                        <td><span class="badge bg-success">Đã trả</span></td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <div class="fw-medium">Mạng máy tính</div>
                                            <small class="text-muted">PDF - 3.5 MB</small>
                                        </td>
                                        <td>15/12/2024</td>
                                        <td>25/12/2024</td>
                                        <td><span class="badge bg-success">Đã trả</span></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recommendations Tab -->
            <div class="tab-pane fade" id="v-pills-recommendations" role="tabpanel">
                <div class="card-custom">
                    <div class="card-header-custom">
                        <h6 class="mb-0">
                            <i class="fas fa-lightbulb me-2"></i>
                            Tài liệu đề xuất
                        </h6>
                    </div>
                    <div class="card-body">
                        <p class="text-muted">Dựa trên lịch sử đọc và sở thích của bạn</p>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="recommendation-card">
                                    <div class="rec-icon">
                                        <i class="fas fa-file-alt text-primary"></i>
                                    </div>
