@section Scripts {
<script>
    $(document).ready(function() {
        // Quick search functionality
        $('#studentQuickSearch').on('keypress', function(e) {
            if (e.which === 13) {
                performStudentSearch();
            }
        });
        
        $('.search-container .btn').on('click', function() {
            performStudentSearch();
        });
        
        function performStudentSearch() {
            var searchTerm = $('#studentQuickSearch').val().trim();
            var docType = $('#documentType').val();
            var subject = $('#subject').val();
            
            if (searchTerm) {
                var params = new URLSearchParams({
                    q: searchTerm,
                    type: docType,
                    subject: subject
                });
                window.location.href = '/Student/TimKiemTaiLieu?' + params.toString();
            }
        }
        
        // Bookmark functionality
        $('.btn-outline-warning').on('click', function() {
            var $this = $(this);
            var $icon = $this.find('i');
            
            if ($icon.hasClass('fas')) {
                $icon.removeClass('fas').addClass('far');
                AppUtils.showToast('Đã bỏ khỏi danh sách yêu thích', 'info');
            } else {
                $icon.removeClass('far').addClass('fas');
                AppUtils.showToast('Đã thêm vào danh sách yêu thích', 'success');
            }
        });
        
        // Progress animation
        $('.progress-bar').each(function() {
            var $this = $(this);
            var width = $this.attr('style').match(/width:\s*(\d+)%/)[1];
            $this.css('width', '0%');
            
            setTimeout(function() {
                $this.animate({ width: width + '%' }, 1000);
            }, 500);
        });
        
        // Study time tracker (mock)
        var studyTime = 0;
        setInterval(function() {
            studyTime++;
            // Update study time if needed
        }, 60000); // Every minute
    });
</script>
}
