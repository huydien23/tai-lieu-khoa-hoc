<!-- Borrow Request Modal -->
<div class="modal fade" id="borrowRequestModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-hand-paper me-2"></i>Yêu cầu mượn tài liệu
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label class="form-label">Tên tài liệu</label>
                        <input type="text" class="form-control" placeholder="Nhập tên tài liệu cần mượn">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Thời gian mượn</label>
                        <select class="form-select">
                            <option value="7">7 ngày</option>
                            <option value="14" selected>14 ngày</option>
                            <option value="30">30 ngày</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Lý do mượn</label>
                        <textarea class="form-control" rows="3"
                            placeholder="Mô tả mục đích sử dụng tài liệu"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary">
                    <i class="fas fa-paper-plane me-2"></i>Gửi yêu cầu
                </button>
            </div>
        </div>
    </div>
</div>

