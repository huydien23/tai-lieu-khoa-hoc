@{
    ViewData["Title"] = "Dashboard Sinh viên";
    Layout = "_Layout";
}

<!-- Dashboard Header -->
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="h2 fw-bold mb-2">
                <i class="fas fa-graduation-cap me-3 text-primary"></i>
                Dashboard Sinh viên
            </h1>
            <p class="text-muted mb-0">Khám phá tài liệu học tập và nghiên cứu</p>
        </div>
        <div class="page-actions">
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#borrowRequestModal">
                <i class="fas fa-hand-paper me-2"></i>Yêu cầu mượn
            </button>
        </div>
    </div>
</div>

<!-- Key Statistics -->
<div class="row g-4 mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="stats-card">
            <div class="stats-icon text-primary">
                <i class="fas fa-book-open"></i>
            </div>
            <div class="stats-number">5</div>
            <div class="stats-label">Đang mượn</div>
            <small class="text-muted">
                <i class="fas fa-calendar me-1"></i>Còn 7 ngày
            </small>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="stats-card">
            <div class="stats-icon text-success">
                <i class="fas fa-download"></i>
            </div>
            <div class="stats-number">18</div>
            <div class="stats-label">Đã tải xuống</div>
            <small class="text-success">
                <i class="fas fa-arrow-up me-1"></i>+3 tuần này
            </small>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="stats-card">
            <div class="stats-icon text-info">
                <i class="fas fa-star"></i>
            </div>
            <div class="stats-number">8</div>
            <div class="stats-label">Yêu thích</div>
            <small class="text-muted">
                <i class="fas fa-heart me-1"></i>Đã lưu
            </small>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="stats-card">
            <div class="stats-icon text-warning">
                <i class="fas fa-clock"></i>
            </div>
            <div class="stats-number">32</div>
            <div class="stats-label">Giờ đọc</div>
            <small class="text-muted">
                <i class="fas fa-calendar-week me-1"></i>Tuần này
            </small>
        </div>
    </div>
</div>

<!-- Dashboard Content with Tab Layout -->
<div class="row g-4">
    <!-- Tab Navigation (Left) -->
    <div class="col-lg-3">
        <div class="card-custom">
            <div class="card-header-custom">
                <h6 class="mb-0">
                    <i class="fas fa-layer-group me-2"></i>
                    Học tập
                </h6>
            </div>
            <div class="card-body p-0">
                <div class="nav flex-column nav-pills dashboard-nav" id="v-pills-tab" role="tablist">
                    <button class="nav-link active" id="v-pills-overview-tab" data-bs-toggle="pill"
                        data-bs-target="#v-pills-overview" type="button" role="tab">
                        <i class="fas fa-chart-pie me-2"></i>Tổng quan
                    </button>
                    <button class="nav-link" id="v-pills-borrowed-tab" data-bs-toggle="pill"
                        data-bs-target="#v-pills-borrowed" type="button" role="tab">
                        <i class="fas fa-book me-2"></i>Đang mượn
                    </button>
                    <button class="nav-link" id="v-pills-favorites-tab" data-bs-toggle="pill"
                        data-bs-target="#v-pills-favorites" type="button" role="tab">
                        <i class="fas fa-star me-2"></i>Yêu thích
                    </button>
                    <button class="nav-link" id="v-pills-history-tab" data-bs-toggle="pill"
                        data-bs-target="#v-pills-history" type="button" role="tab">
                        <i class="fas fa-history me-2"></i>Lịch sử
                    </button>
                    <button class="nav-link" id="v-pills-recommendations-tab" data-bs-toggle="pill"
                        data-bs-target="#v-pills-recommendations" type="button" role="tab">
                        <i class="fas fa-lightbulb me-2"></i>Đề xuất
                    </button>
                    <button class="nav-link" id="v-pills-settings-tab" data-bs-toggle="pill"
                        data-bs-target="#v-pills-settings" type="button" role="tab">
                        <i class="fas fa-cog me-2"></i>Cài đặt tài khoản
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Tab Content (Right) -->
    <div class="col-lg-9">
        <div class="tab-content" id="v-pills-tabContent">
            <!-- Account Settings Tab Content (moved here) -->
            <div class="tab-pane fade" id="v-pills-settings" role="tabpanel">
                <div class="card-custom">
                    <div class="card-header-custom">
                        <h6 class="mb-0">
                            <i class="fas fa-cog me-2"></i>
                            Cài đặt tài khoản
                        </h6>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="mb-3">
                                <label class="form-label">Họ tên</label>
                                <input type="text" class="form-control" placeholder="Nhập họ tên mới">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Mật khẩu hiện tại</label>
                                <input type="password" class="form-control" placeholder="Nhập mật khẩu hiện tại">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Mật khẩu mới</label>
                                <input type="password" class="form-control" placeholder="Nhập mật khẩu mới">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Nhập lại mật khẩu mới</label>
                                <input type="password" class="form-control" placeholder="Nhập lại mật khẩu mới">
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Lưu thay đổi
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Overview Tab -->
            <div class="tab-pane fade show active" id="v-pills-overview" role="tabpanel">
                <div class="row g-4">
                    <!-- Study Progress -->
                    <div class="col-12">
                        <div class="card-custom">
                            <div class="card-header-custom">
                                <h6 class="mb-0">
                                    <i class="fas fa-chart-line me-2"></i>
                                    Tiến độ học tập
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-md-4">
                                        <div class="text-center">
                                            <div class="progress-circle">
                                                <div class="progress-value">75%</div>
                                            </div>
                                            <div class="mt-2">
                                                <div class="fw-medium">Kỳ học hiện tại</div>
                                                <small class="text-muted">15/20 tài liệu</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-8">
                                        <h6>Môn học đang theo dõi</h6>
                                        <div class="subject-list">
                                            <div class="subject-item">
                                                <span class="subject-name">Lập trình Web</span>
                                                <span class="badge bg-success">5/5 tài liệu</span>
                                            </div>
                                            <div class="subject-item">
                                                <span class="subject-name">Cơ sở dữ liệu</span>
                                                <span class="badge bg-warning">3/4 tài liệu</span>
                                            </div>
                                            <div class="subject-item">
                                                <span class="subject-name">Mạng máy tính</span>
                                                <span class="badge bg-info">2/3 tài liệu</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Quick Actions -->
                    <div class="col-12">
                        <div class="card-custom">
                            <div class="card-header-custom">
                                <h6 class="mb-0">
                                    <i class="fas fa-bolt me-2"></i>
                                    Thao tác nhanh
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-md-3">
                                        <a href="#" class="btn btn-outline-primary w-100">
                                            <i class="fas fa-search me-2"></i>Tìm tài liệu
                                        </a>
                                    </div>
                                    <div class="col-md-3">
                                        <button class="btn btn-outline-success w-100" data-bs-toggle="modal"
                                            data-bs-target="#borrowRequestModal">
                                            <i class="fas fa-hand-paper me-2"></i>Mượn tài liệu
                                        </button>
                                    </div>
                                    <div class="col-md-3">
                                        <a href="#" class="btn btn-outline-info w-100">
                                            <i class="fas fa-star me-2"></i>Xem yêu thích
                                        </a>
                                    </div>
                                    <div class="col-md-3">
                                        <a href="#" class="btn btn-outline-warning w-100">
                                            <i class="fas fa-history me-2"></i>Xem lịch sử
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Borrowed Documents Tab -->
            <div class="tab-pane fade" id="v-pills-borrowed" role="tabpanel">
                <div class="card-custom">
                    <div class="card-header-custom d-flex justify-content-between align-items-center">
                        <h6 class="mb-0">
                            <i class="fas fa-book me-2"></i>
                            Tài liệu đang mượn
                        </h6>
                        <span class="badge bg-primary">5 tài liệu</span>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Bạn có <strong>2 tài liệu</strong> sắp đến hạn trả (trong 3 ngày)
                        </div>

                        <div class="borrowed-list">
                            <div class="borrowed-item">
                                <div class="borrowed-info">
                                    <h6 class="borrowed-title">Lập trình Web nâng cao</h6>
                                    <p class="borrowed-meta">Mượn ngày: 01/01/2025 • Hạn trả: 15/01/2025</p>
                                </div>
                                <div class="borrowed-status">
                                    <span class="badge bg-warning">Sắp hết hạn</span>
                                    <button class="btn btn-sm btn-outline-success ms-2">
                                        <i class="fas fa-undo me-1"></i>Gia hạn
                                    </button>
                                </div>
                            </div>

                            <div class="borrowed-item">
                                <div class="borrowed-info">
                                    <h6 class="borrowed-title">Cơ sở dữ liệu Oracle</h6>
                                    <p class="borrowed-meta">Mượn ngày: 28/12/2024 • Hạn trả: 11/01/2025</p>
                                </div>
                                <div class="borrowed-status">
                                    <span class="badge bg-success">Còn thời gian</span>
                                    <button class="btn btn-sm btn-outline-primary ms-2">
                                        <i class="fas fa-eye me-1"></i>Xem
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Favorites Tab -->
            <div class="tab-pane fade" id="v-pills-favorites" role="tabpanel">
                <div class="card-custom">
                    <div class="card-header-custom">
                        <h6 class="mb-0">
                            <i class="fas fa-star me-2"></i>
                            Tài liệu yêu thích
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="document-card">
                                    <div class="document-icon">
                                        <i class="fas fa-file-pdf text-danger"></i>
                                    </div>
                                    <div class="document-info">
                                        <h6 class="document-title">Thuật toán và cấu trúc dữ liệu</h6>
                                        <p class="document-meta">PDF • 4.1 MB • TS. Lê Văn C</p>
                                        <div class="document-actions">
                                            <button class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye me-1"></i>Xem
                                            </button>
                                            <button class="btn btn-sm btn-outline-success">
                                                <i class="fas fa-download me-1"></i>Tải
                                            </button>
                                            <button class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-heart-broken me-1"></i>Bỏ thích
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- History Tab -->
            <div class="tab-pane fade" id="v-pills-history" role="tabpanel">
                <div class="card-custom">
                    <div class="card-header-custom">
                        <h6 class="mb-0">
                            <i class="fas fa-history me-2"></i>
                            Lịch sử mượn/trả
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Tài liệu</th>
                                        <th>Ngày mượn</th>
                                        <th>Ngày trả</th>
                                        <th>Trạng thái</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            <div class="fw-medium">Hệ điều hành Linux</div>
                                            <small class="text-muted">PDF - 2.8 MB</small>
                                        </td>
                                        <td>20/12/2024</td>
                                        <td>28/12/2024</td>
                                        <td><span class="badge bg-success">Đã trả</span></td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <div class="fw-medium">Mạng máy tính</div>
                                            <small class="text-muted">PDF - 3.5 MB</small>
                                        </td>
                                        <td>15/12/2024</td>
                                        <td>25/12/2024</td>
                                        <td><span class="badge bg-success">Đã trả</span></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recommendations Tab -->
            <div class="tab-pane fade" id="v-pills-recommendations" role="tabpanel">
                <div class="card-custom">
                    <div class="card-header-custom">
                        <h6 class="mb-0">
                            <i class="fas fa-lightbulb me-2"></i>
                            Tài liệu đề xuất
                        </h6>
                    </div>
                    <div class="card-body">
                        <p class="text-muted">Dựa trên lịch sử đọc và sở thích của bạn</p>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="recommendation-card">
                                    <div class="rec-icon">
                                        <i class="fas fa-file-alt text-primary"></i>
                                    </div>
                                    <div class="rec-info">
                                        <h6>Machine Learning cơ bản</h6>
                                        <p class="text-muted small">Phù hợp với môn học hiện tại của bạn</p>
                                        <button class="btn btn-sm btn-primary">
                                            <i class="fas fa-eye me-1"></i>Xem ngay
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
