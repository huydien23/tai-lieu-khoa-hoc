@model QuanLyTaiLieuKhoaHoc.Web.Models.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard Sinh viên";
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/student-dashboard.css" />
}

<!-- Modern Dashboard Header -->
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
            <div class="header-icon me-4">
                <i class="fas fa-graduation-cap"></i>
            </div>
            <div>
                <h1 class="mb-2">
                    Dashboard Sinh viên
                </h1>
                <p class="text-muted mb-0">Khám phá tài liệu học tập và nghiên cứu</p>
            </div>
        </div>
        <div class="header-actions d-none d-md-flex">
            <div class="current-time me-3">
                <i class="fas fa-clock me-2"></i>
                <span id="currentTime"></span>
            </div>
            <div class="user-info">
                <span class="user-name">@User.Identity?.Name</span>
            </div>
        </div>
    </div>
</div>

<!-- Modern Key Statistics -->
<div class="row g-4 mb-4">
    <div class="col-lg-2 col-md-4 col-sm-6">
        <div class="stats-card" data-aos="fade-up" data-aos-delay="100">
            <div class="stats-icon text-info">
                <i class="fas fa-heart"></i>
            </div>
            <div class="stats-number" data-count="@Model.SoLuongYeuThich">0</div>
            <div class="stats-label">YÊU THÍCH</div>
        </div>
    </div>
    <div class="col-lg-2 col-md-4 col-sm-6">
        <div class="stats-card" data-aos="fade-up" data-aos-delay="200">
            <div class="stats-icon text-warning">
                <i class="fas fa-hourglass-half"></i>
            </div>
            <div class="stats-number" data-count="@Model.SoPhieuChoDuyet">0</div>
            <div class="stats-label">CHỜ DUYỆT</div>
        </div>
    </div>
    <div class="col-lg-2 col-md-4 col-sm-6">
        <div class="stats-card" data-aos="fade-up" data-aos-delay="300">
            <div class="stats-icon text-primary">
                <i class="fas fa-book"></i>
            </div>
            <div class="stats-number" data-count="@Model.SoPhieuDangMuon">0</div>
            <div class="stats-label">ĐANG MƯỢN</div>
        </div>
    </div>
    <div class="col-lg-2 col-md-4 col-sm-6">
        <div class="stats-card" data-aos="fade-up" data-aos-delay="400">
            <div class="stats-icon text-danger">
                <i class="fas fa-times-circle"></i>
            </div>
            <div class="stats-number" data-count="@Model.SoPhieuTuChoi">0</div>
            <div class="stats-label">TỪ CHỐI</div>
        </div>
    </div>
    <div class="col-lg-2 col-md-4 col-sm-6">
        <div class="stats-card" data-aos="fade-up" data-aos-delay="500">
            <div class="stats-icon text-success">
                <i class="fas fa-download"></i>
            </div>
            <div class="stats-number" data-count="@Model.SoLuotTaiXuong">0</div>
            <div class="stats-label">LƯỢT TẢI XUỐNG</div>
        </div>
    </div>
    <div class="col-lg-2 col-md-4 col-sm-6">
        <div class="stats-card" data-aos="fade-up" data-aos-delay="600">
            <div class="stats-icon text-secondary">
                <i class="fas fa-check-circle"></i>
            </div>
            <div class="stats-number" data-count="@Model.SoPhieuDaTra">0</div>
            <div class="stats-label">ĐÃ TRẢ</div>
        </div>
    </div>
    <div class="col-lg-2 col-md-4 col-sm-6">
        <div class="stats-card" id="quaHanCard" style="display: none;" data-aos="fade-up" data-aos-delay="700">
            <div class="stats-icon text-danger">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <div class="stats-number" id="soTaiLieuQuaHan" data-count="0">0</div>
            <div class="stats-label">QUÁ HẠN</div>
        </div>
    </div>
</div>

<!-- Dashboard Content with Tab Layout -->
<div class="row g-4">
    <!-- Modern Sidebar Navigation -->
    <div class="col-lg-3">
        <div class="card-custom" data-aos="fade-right" data-aos-delay="100">
            <div class="card-header-custom">
                <h6 class="mb-0">
                    <i class="fas fa-layer-group me-2"></i>
                    Học tập
                </h6>
            </div>
            <div class="card-body p-0">
                <div class="nav flex-column nav-pills dashboard-nav" id="v-pills-tab" role="tablist">
                    <button class="nav-link active" id="v-pills-overview-tab" data-bs-toggle="pill"
                        data-bs-target="#v-pills-overview" type="button" role="tab">
                        <i class="fas fa-chart-pie"></i>
                        <span class="menu-text">Tổng quan</span>
                    </button>
                    <button class="nav-link" id="v-pills-borrowreturn-tab" data-bs-toggle="pill"
                        data-bs-target="#v-pills-borrowreturn" type="button" role="tab">
                        <i class="fas fa-book-reader"></i>
                        <span class="menu-text">Mượn/Trả tài liệu</span>
                    </button>
                    <button class="nav-link" id="v-pills-overdue-tab" data-bs-toggle="pill"
                        data-bs-target="#v-pills-overdue" type="button" role="tab">
                        <i class="fas fa-exclamation-triangle"></i>
                        <span class="menu-text">Tài liệu quá hạn</span>
                        <span id="overdueBadge" class="badge bg-danger ms-auto" style="display: none;">0</span>
                    </button>
                    <button class="nav-link" id="v-pills-favorites-tab" data-bs-toggle="pill"
                        data-bs-target="#v-pills-favorites" type="button" role="tab">
                        <i class="fas fa-star"></i>
                        <span class="menu-text">Yêu thích</span>
                    </button>
                    <button class="nav-link" id="v-pills-profile-tab" data-bs-toggle="pill"
                        data-bs-target="#v-pills-profile" type="button" role="tab">
                        <i class="fas fa-user"></i>
                        <span class="menu-text">Thông tin tài khoản</span>
                    </button>
                    <button class="nav-link" id="v-pills-settings-tab" data-bs-toggle="pill"
                        data-bs-target="#v-pills-settings" type="button" role="tab">
                        <i class="fas fa-cog"></i>
                        <span class="menu-text">Cài đặt tài khoản</span>
                    </button>
                    <button class="nav-link" id="v-pills-downloads-tab" data-bs-toggle="pill"
                        data-bs-target="#v-pills-downloads" type="button" role="tab">
                        <i class="fas fa-download"></i>
                        <span class="menu-text">Tài liệu đã tải</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <!-- Modern Tab Content -->
    <div class="col-lg-9">
        <div class="tab-content" id="v-pills-tabContent" data-aos="fade-left" data-aos-delay="200">

        <!-- Profile Tab -->
            <div class="tab-pane fade" id="v-pills-profile" role="tabpanel">
                <div class="card-custom">
                    <div class="card-header-custom">
                        <h6 class="mb-0">
                            <i class="fas fa-id-card me-2"></i>
                            Thông tin tài khoản
                        </h6>
                    </div>
                    <div class="card-body">
                        @await Html.PartialAsync("~/Views/Student/Profile.cshtml", ViewBag.CurrentUser as QuanLyTaiLieuKhoaHoc.Web.Models.NguoiDung)
                    </div>
                </div>
            </div>
            
            <!-- Account Settings Tab Content -->
            <div class="tab-pane fade" id="v-pills-settings" role="tabpanel">
                <div class="card-custom">
                    <div class="card-header-custom">
                        <h6 class="mb-0">
                            <i class="fas fa-cog me-2"></i>
                            Cài đặt tài khoản
                        </h6>
                    </div>
                    <div class="card-body">
                        <form asp-action="UpdateUser" asp-controller="Student" method="post">
                            @Html.AntiForgeryToken()
                            <div class="mb-3">
                                <label class="form-label">Họ tên</label>
                                <input type="text" class="form-control" name="HoTen" placeholder="Nhập họ tên mới" value="@((ViewBag.CurrentUser as QuanLyTaiLieuKhoaHoc.Web.Models.NguoiDung)?.HoTen)">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Mật khẩu hiện tại</label>
                                <input type="password" class="form-control" name="MatKhauHienTai" placeholder="Nhập mật khẩu hiện tại">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Mật khẩu mới</label>
                                <input type="password" class="form-control" name="MatKhauMoi" placeholder="Nhập mật khẩu mới">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Nhập lại mật khẩu mới</label>
                                <input type="password" class="form-control" name="NhapLaiMatKhauMoi" placeholder="Nhập lại mật khẩu mới">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Mã số</label>
                                <input type="text" class="form-control" name="MaSo" placeholder="Nhập mã số mới" value="@((ViewBag.CurrentUser as QuanLyTaiLieuKhoaHoc.Web.Models.NguoiDung)?.MaSo)">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Số điện thoại</label>
                                <input type="text" class="form-control" name="SoDienThoai" placeholder="Nhập số điện thoại mới" value="@((ViewBag.CurrentUser as QuanLyTaiLieuKhoaHoc.Web.Models.NguoiDung)?.SoDienThoai)">
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Lưu thay đổi
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Modern Overview Tab -->
            <div class="tab-pane fade show active" id="v-pills-overview" role="tabpanel">
                <!-- Modern Tài liệu đang mượn Section -->
                <div class="col-12">
                    <div class="card-custom" data-aos="zoom-in" data-aos-delay="400">
                        <div class="card-header-custom">
                            <h6 class="mb-0">
                                <i class="fas fa-book me-2"></i>
                                Tài liệu đang mượn
                            </h6>
                        </div>
                        <div class="card-body">
                            @if (Model.TaiLieuDangMuon != null && Model.TaiLieuDangMuon.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Mã phiếu</th>
                                                <th>Tài liệu</th>
                                                <th>Ngày mượn</th>
                                                <th>Ngày trả dự kiến</th>
                                                <th>Thao tác</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        @foreach (var phieu in Model.TaiLieuDangMuon)
                                        {
                                            <tr class="table-row-hover">
                                                <td>
                                                    <span class="badge bg-secondary">#@phieu.MaPhieu</span>
                                                </td>
                                                <td>
                                                    <div class="document-info">
                                                        <strong class="document-title">@phieu.TaiLieu?.TenTaiLieu</strong>
                                                        @if (!string.IsNullOrEmpty(phieu.TaiLieu?.TacGia))
                                                        {
                                                            <div class="document-meta">Tác giả: @phieu.TaiLieu.TacGia</div>
                                                        }
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="date-info">
                                                        <span class="date-value">@phieu.NgayMuon.ToString("dd/MM/yyyy")</span>
                                                        <div class="time-value">@phieu.NgayMuon.ToString("HH:mm")</div>
                                                    </div>
                                                </td>
                                                <td>
                                                    @if (phieu.NgayTraDuKien.HasValue)
                                                    {
                                                        <div class="date-info">
                                                            <span class="date-value text-info">@phieu.NgayTraDuKien.Value.ToString("dd/MM/yyyy")</span>
                                                            <div class="time-value text-muted">Dự kiến trả</div>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">-</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (phieu.TaiLieu != null)
                                                    {
                                                        <a href="/TaiLieu/Details/@phieu.TaiLieu.MaTaiLieu" 
                                                           class="btn btn-sm btn-outline-primary action-btn" 
                                                           title="Xem chi tiết tài liệu">
                                                            <i class="fas fa-eye me-1"></i>
                                                            <span>Xem</span>
                                                        </a>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="empty-state">
                                    <div class="empty-icon">
                                        <i class="fas fa-book-open"></i>
                                    </div>
                                    <h5>Chưa có tài liệu đang mượn</h5>
                                    <p>Bạn chưa mượn tài liệu nào hoặc đã trả hết.</p>
                                    <a href="/TaiLieu" class="btn btn-primary empty-action-btn">
                                        <i class="fas fa-search me-2"></i>
                                        <span>Tìm tài liệu để mượn</span>
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <!-- Favorites Tab -->
            <div class="tab-pane fade" id="v-pills-favorites" role="tabpanel">
    <div class="card-custom">
        <div class="card-header-custom">
            <h6 id="yeuthich" class="mb-0">
                <i class="fas fa-star me-2"></i>
                Tài liệu yêu thích
            </h6>
        </div>
        <div class="card-body">
            <div class="row g-3">
                @if (Model.TaiLieuYeuThich != null && Model.TaiLieuYeuThich.Any())
        {
            foreach (var item in Model.TaiLieuYeuThich)
            {
                <div class="col-md-6">
                    <div class="document-card">
                        <div class="document-icon">
                            <i class="fas fa-file-pdf text-danger"></i>
                        </div>
                        <div class="document-info">
                            @if (item.TaiLieu != null)
                            {
                                <h6 class="document-title">@item.TaiLieu.TenTaiLieu</h6>
                            }
                            else
                            {
                                <h6 class="document-title">Không rõ tên tài liệu</h6>
                            }
                            <p class="document-meta">
                                @(item.TaiLieu?.LoaiFile?.ToUpper() ?? "FILE") • 
                                @((item.TaiLieu?.KichThuocFile ?? 0) >= 1024 ? $"{Math.Round((item.TaiLieu?.KichThuocFile ?? 0) / 1024.0, 1)} MB" : $"{item.TaiLieu?.KichThuocFile ?? 0} KB") • 
                                @item.TaiLieu?.TacGia 
                            </p>
                            <div class="document-actions">
                                <a href="/TaiLieu/Details/@item.MaTaiLieu" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye me-1"></i>Xem
                                </a>
                            <form asp-action="BoYeuThich" asp-controller="TaiLieu" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-heart-broken me-1"></i>Bỏ thích
                                </button>
                            </form>

                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-muted ms-2 mt-2">Bạn chưa có tài liệu yêu thích nào.</p>
        }
            </div>
        </div>
    </div>
</div>

            <!-- Mượn/Trả tài liệu Tab -->
            <div class="tab-pane fade" id="v-pills-borrowreturn" role="tabpanel">
                @await Html.PartialAsync("_ManageBorrowReturnPartial", Model.PhieuMuonTra)
            </div>
            
            <!-- Tài liệu quá hạn Tab -->
            <div class="tab-pane fade" id="v-pills-overdue" role="tabpanel">
                <div class="card-custom">
                    <div class="card-header-custom">
                        <h6 class="mb-0">
                            <i class="fas fa-exclamation-triangle me-2 text-warning"></i>
                            Tài liệu quá hạn của tôi
                        </h6>
                    </div>
                    <div class="card-body">
                        <div id="overdueContent">
                            <div class="text-center py-4">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                                <p class="mt-2 text-muted">Đang tải danh sách tài liệu quá hạn...</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Tài liệu đã tải Tab -->
            <div class="tab-pane fade" id="v-pills-downloads" role="tabpanel">
                <div class="card-custom">
                    <div class="card-header-custom">
                        <h6 class="mb-0">
                            <i class="fas fa-download me-2"></i>
                            Lịch sử tải tài liệu
                        </h6>
                    </div>
                    <div class="card-body">
                        @if (Model.LichSuTaiXuong != null && Model.LichSuTaiXuong.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Tài liệu</th>
                                            <th>Thời gian tải</th>
                                            <th>Trạng thái</th>
                                            <th>Thao tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.LichSuTaiXuong)
                                        {
                                            <tr>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <div class="me-3">
                                                            <i class="fas fa-file-pdf text-danger fa-lg"></i>
                                                        </div>
                                                        <div>
                                                            <strong>@item.TaiLieu?.TenTaiLieu</strong>
                                                            @if (!string.IsNullOrEmpty(item.TaiLieu?.TacGia))
                                                            {
                                                                <br><small class="text-muted">Tác giả: @item.TaiLieu.TacGia</small>
                                                            }
                                                            @if (item.TaiLieu != null)
                                                            {
                                                                <br><small class="text-muted">
                                                                    @(item.TaiLieu.LoaiFile?.ToUpper() ?? "FILE") • 
                                                                    @(item.TaiLieu.KichThuocFile >= 1024 ? $"{Math.Round(item.TaiLieu.KichThuocFile / 1024.0, 1)} MB" : $"{item.TaiLieu.KichThuocFile} KB")
                                                                </small>
                                                            }
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div>
                                                        <span class="text-primary fw-medium">@item.ThoiGianTai.ToString("dd/MM/yyyy")</span>
                                                        <br><small class="text-muted">@item.ThoiGianTai.ToString("HH:mm:ss")</small>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div>
                                                        @{
                                                            var trangThaiClass = item.TrangThai switch
                                                            {
                                                                "Thành công" => "text-success",
                                                                "Đang tải" => "text-warning",
                                                                "Lỗi" => "text-danger",
                                                                _ => "text-muted"
                                                            };
                                                            var trangThaiIcon = item.TrangThai switch
                                                            {
                                                                "Thành công" => "fas fa-check-circle",
                                                                "Đang tải" => "fas fa-clock",
                                                                "Lỗi" => "fas fa-exclamation-circle",
                                                                _ => "fas fa-info-circle"
                                                            };
                                                        }
                                                        <span class="@trangThaiClass fw-medium">
                                                            <i class="@trangThaiIcon me-1"></i>@item.TrangThai
                                                        </span>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="d-flex gap-1">
                                                        @if (item.TaiLieu != null)
                                                        {
                                                            <a href="/TaiLieu/Details/@item.TaiLieu.MaTaiLieu" 
                                                               class="btn btn-sm btn-outline-primary" 
                                                               title="Xem chi tiết tài liệu">
                                                                <i class="fas fa-eye me-1"></i>Xem
                                                            </a>
                                                        }
                                                        <button class="btn btn-sm btn-outline-secondary" 
                                                                onclick="deleteDownloadHistory(@item.MaLichSu)" 
                                                                title="Xóa khỏi lịch sử">
                                                            <i class="fas fa-trash me-1"></i>Xóa
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="fas fa-download fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">Chưa có lịch sử tải tài liệu</h5>
                                <p class="text-muted">Bạn chưa tải xuống tài liệu nào.</p>
                                <a href="/TaiLieu" class="btn btn-primary">
                                    <i class="fas fa-search me-2"></i>Tìm tài liệu để tải
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Modern Dashboard JavaScript
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize modern dashboard features
        initializeDashboard();
        
        // Chờ jQuery load
        function waitForJQuery(callback) {
            if (typeof $ !== 'undefined') {
                callback();
            } else {
                setTimeout(function() {
                    waitForJQuery(callback);
                }, 50);
            }
        }

        waitForJQuery(function() {
            // Kiểm tra tài liệu quá hạn khi trang load
            checkTaiLieuQuaHan();
            
            // Load nội dung tài liệu quá hạn khi click vào tab
            $('#v-pills-overdue-tab').on('click', function() {
                loadOverdueContent();
            });
        });
    });

    // Initialize modern dashboard features
    function initializeDashboard() {
        // Update current time
        updateCurrentTime();
        setInterval(updateCurrentTime, 1000);
        
        // Animate statistics counters
        animateCounters();
        
        // Initialize AOS animations
        if (typeof AOS !== 'undefined') {
            AOS.init({
                duration: 800,
                easing: 'ease-in-out',
                once: true,
                offset: 100
            });
        }
    }

    // Update current time display
    function updateCurrentTime() {
        const now = new Date();
        const timeString = now.toLocaleTimeString('vi-VN', {
            hour: '2-digit',
            minute: '2-digit',
            second: '2-digit'
        });
        const dateString = now.toLocaleDateString('vi-VN', {
            day: '2-digit',
            month: '2-digit',
            year: 'numeric'
        });
        
        const timeElement = document.getElementById('currentTime');
        if (timeElement) {
            timeElement.textContent = `${dateString} ${timeString}`;
        }
    }

    // Animate statistics counters
    function animateCounters() {
        const counters = document.querySelectorAll('.stats-number[data-count]');
        
        counters.forEach(counter => {
            const target = parseInt(counter.getAttribute('data-count'));
            const duration = 2000; // 2 seconds
            const step = target / (duration / 16); // 60fps
            let current = 0;
            
            const timer = setInterval(() => {
                current += step;
                if (current >= target) {
                    current = target;
                    clearInterval(timer);
                }
                counter.textContent = Math.floor(current);
            }, 16);
        });
    }

    function checkTaiLieuQuaHan() {
        if (typeof $ === 'undefined') {
            setTimeout(checkTaiLieuQuaHan, 100);
            return;
        }
        
        $.get('/PhieuMuonTra/GetSoTaiLieuQuaHanCuaToi', function(data) {
            if (data.soLuong > 0) {
                $('#soTaiLieuQuaHan').text(data.soLuong);
                $('#quaHanCard').show();
                $('#overdueBadge').text(data.soLuong).show();
                
                // Thêm class để làm nổi bật
                $('#quaHanCard').addClass('pulse-animation');
            } else {
                $('#quaHanCard').hide();
                $('#overdueBadge').hide();
            }
        });
    }

    function loadOverdueContent() {
        if (typeof $ === 'undefined') {
            return;
        }
        
        $('#overdueContent').html(`
            <div class="text-center py-4">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-2 text-muted">Đang tải danh sách tài liệu quá hạn...</p>
            </div>
        `);
        
        $.get('/PhieuMuonTra/TaiLieuQuaHanCuaToi', function(data) {
            // Extract table content from the response
            var parser = new DOMParser();
            var doc = parser.parseFromString(data, 'text/html');
            var tableContent = doc.querySelector('.table-responsive');
            
            if (tableContent) {
                $('#overdueContent').html(tableContent.outerHTML);
            } else {
                $('#overdueContent').html(`
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle"></i>
                        Không có tài liệu nào quá hạn trả!
                    </div>
                `);
            }
        }).fail(function() {
            $('#overdueContent').html(`
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle"></i>
                    Có lỗi xảy ra khi tải danh sách tài liệu quá hạn!
                </div>
            `);
        });
    }

    function deleteDownloadHistory(maLichSu) {
        if (confirm('Bạn chắc chắn muốn xóa lịch sử tải này khỏi danh sách?\n\nLưu ý: Hành động này không thể hoàn tác.')) {
            // Lấy token từ form hoặc meta tag
            let token = '';
            if (typeof $ !== 'undefined') {
                token = $('input[name="__RequestVerificationToken"]').val();
            } else {
                const tokenElement = document.querySelector('input[name="__RequestVerificationToken"]');
                if (tokenElement) {
                    token = tokenElement.value;
                }
            }
            
            fetch('/Student/DeleteDownloadHistory', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': token
                },
                body: JSON.stringify({ maLichSu })
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    // Tạo alert thành công
                    const alertHtml = `
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            Xóa lịch sử tải thành công!
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    `;
                    
                    // Tìm container để hiển thị alert
                    const container = document.querySelector('.card-body');
                    if (container) {
                        container.insertAdjacentHTML('afterbegin', alertHtml);
                        
                        // Tự động ẩn sau 3 giây
                        setTimeout(() => {
                            const alert = container.querySelector('.alert');
                            if (alert) {
                                alert.remove();
                            }
                        }, 3000);
                    }
                    
                    setTimeout(() => location.reload(), 1500);
                } else {
                    // Tạo alert lỗi
                    const alertHtml = `
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            ${data.message || 'Có lỗi xảy ra khi xóa lịch sử tải.'}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    `;
                    
                    const container = document.querySelector('.card-body');
                    if (container) {
                        container.insertAdjacentHTML('afterbegin', alertHtml);
                        
                        setTimeout(() => {
                            const alert = container.querySelector('.alert');
                            if (alert) {
                                alert.remove();
                            }
                        }, 5000);
                    }
                }
            })
            .catch(error => {
                const alertHtml = `
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Có lỗi xảy ra khi kết nối với máy chủ.
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                `;
                
                const container = document.querySelector('.card-body');
                if (container) {
                    container.insertAdjacentHTML('afterbegin', alertHtml);
                    
                    setTimeout(() => {
                        const alert = container.querySelector('.alert');
                        if (alert) {
                            alert.remove();
                        }
                    }, 5000);
                }
            });
        }
    }
</script>
