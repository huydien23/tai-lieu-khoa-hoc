@model QuanLyTaiLieuKhoaHoc.Web.Models.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard Sinh viên";
    Layout = "_Layout";
}

<!-- Dashboard Header -->
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="h2 fw-bold mb-2">
                <i class="fas fa-graduation-cap me-3 text-primary"></i>
                Dashboard Sinh viên
            </h1>
            <p class="text-muted mb-0">Khám phá tài liệu học tập và nghiên cứu</p>
        </div>
    </div>
</div>

<!-- Key Statistics (chỉ giữ lại các thống kê phù hợp) -->
<div class="row g-4 mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="stats-card">
            <div class="stats-icon text-info"><i class="fas fa-heart"></i></div>
            <div class="stats-number">@Model.SoLuongYeuThich</div>
            <div class="stats-label">Yêu thích</div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="stats-card">
            <div class="stats-icon text-warning"><i class="fas fa-hourglass-half"></i></div>
            <div class="stats-number">@Model.SoPhieuChoDuyet</div>
            <div class="stats-label">Chờ duyệt</div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="stats-card">
            <div class="stats-icon text-primary"><i class="fas fa-book"></i></div>
            <div class="stats-number">@Model.SoPhieuDangMuon</div>
            <div class="stats-label">Đang mượn</div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="stats-card">
            <div class="stats-icon text-danger"><i class="fas fa-times-circle"></i></div>
            <div class="stats-number">@Model.SoPhieuTuChoi</div>
            <div class="stats-label">Từ chối</div>
        </div>
    </div>
</div>

<!-- Dashboard Content with Tab Layout -->
<div class="row g-4">
    <!-- Tab Navigation (Left) -->
    <div class="col-lg-3">
        <div class="card-custom">
            <div class="card-header-custom">
                <h6 class="mb-0">
                    <i class="fas fa-layer-group me-2"></i>
                    Học tập
                </h6>
            </div>
            <div class="card-body p-0">
                <div class="nav flex-column nav-pills dashboard-nav" id="v-pills-tab" role="tablist">
                    <button class="nav-link active" id="v-pills-overview-tab" data-bs-toggle="pill"
                        data-bs-target="#v-pills-overview" type="button" role="tab">
                        <i class="fas fa-chart-pie me-2"></i>Tổng quan
                    </button>
                    <button class="nav-link" id="v-pills-favorites-tab" data-bs-toggle="pill"
                        data-bs-target="#v-pills-favorites" type="button" role="tab">
                        <i class="fas fa-star me-2"></i>Yêu thích
                    </button>
                    <button class="nav-link" id="v-pills-profile-tab" data-bs-toggle="pill"
                        data-bs-target="#v-pills-profile" type="button" role="tab">
                        <i class="fas fa-star me-2"></i>Thông tin tài khoản
                    </button>
                    <button class="nav-link" id="v-pills-settings-tab" data-bs-toggle="pill"
                        data-bs-target="#v-pills-settings" type="button" role="tab">
                        <i class="fas fa-cog me-2"></i>Cài đặt tài khoản
                    </button>
                </div>
            </div>
        </div>
    </div>
    <!-- Tab Content (Right) -->
    <div class="col-lg-9">
        <div class="tab-content" id="v-pills-tabContent">

        <!-- Profile Tab -->
            <div class="tab-pane fade" id="v-pills-profile" role="tabpanel">
                <div class="card-custom">
                    <div class="card-header-custom">
                        <h6 class="mb-0">
                            <i class="fas fa-id-card me-2"></i>
                            Thông tin tài khoản
                        </h6>
                    </div>
                    <div class="card-body">
                        @await Html.PartialAsync("~/Views/Student/Profile.cshtml", ViewBag.CurrentUser as QuanLyTaiLieuKhoaHoc.Web.Models.NguoiDung)
                    </div>
                </div>
            </div>
            
            <!-- Account Settings Tab Content -->
            <div class="tab-pane fade" id="v-pills-settings" role="tabpanel">
                <div class="card-custom">
                    <div class="card-header-custom">
                        <h6 class="mb-0">
                            <i class="fas fa-cog me-2"></i>
                            Cài đặt tài khoản
                        </h6>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="mb-3">
                                <label class="form-label">Họ tên</label>
                                <input type="text" class="form-control" placeholder="Nhập họ tên mới">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Mật khẩu hiện tại</label>
                                <input type="password" class="form-control" placeholder="Nhập mật khẩu hiện tại">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Mật khẩu mới</label>
                                <input type="password" class="form-control" placeholder="Nhập mật khẩu mới">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Nhập lại mật khẩu mới</label>
                                <input type="password" class="form-control" placeholder="Nhập lại mật khẩu mới">
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Lưu thay đổi
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Overview Tab -->
            <div class="tab-pane fade show active" id="v-pills-overview" role="tabpanel">
                <div class="row g-4">
                    <!-- Study Progress -->                                
                    <div class="col-12">
                        <div class="card-custom">
                            <div class="card-header-custom">
                                <h6 class="mb-0">
                                    <i class="fas fa-bolt me-2"></i>
                                    Thao tác nhanh
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-md-4">
                                        <a href="@Url.Action("Index", "TaiLieu")" class="btn btn-outline-primary w-100">
                                            <i class="fas fa-search me-2"></i>Tìm tài liệu
                                        </a>
                                    </div>
                                    <div class="col-md-4">
                                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-info w-100">
                                            <i class="fas fa-star me-2"></i>Trang chủ
                                        </a>
                                    </div>
                                    <div class="col-md-4">
                                        <a href="@Url.Action("Index", "TaiLieu")" class="btn btn-outline-warning w-100">
                                            <i class="fas fa-lightbulb me-2"></i>Tài liệu đề xuất
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Favorites Tab -->
            <div class="tab-pane fade" id="v-pills-favorites" role="tabpanel">
    <div class="card-custom">
        <div class="card-header-custom">
            <h6 id="yeuthich" class="mb-0">
                <i class="fas fa-star me-2"></i>
                Tài liệu yêu thích
            </h6>
        </div>
        <div class="card-body">
            <div class="row g-3">
                @if (Model.TaiLieuYeuThich != null && Model.TaiLieuYeuThich.Any())
        {
            foreach (var item in Model.TaiLieuYeuThich)
            {
                <div class="col-md-6">
                    <div class="document-card">
                        <div class="document-icon">
                            <i class="fas fa-file-pdf text-danger"></i>
                        </div>
                        <div class="document-info">
                            @if (item.TaiLieu != null)
                            {
                                <h6 class="document-title">@item.TaiLieu.TenTaiLieu</h6>
                            }
                            else
                            {
                                <h6 class="document-title">Không rõ tên tài liệu</h6>
                            }
                            <p class="document-meta">
                                @(item.TaiLieu?.LoaiFile?.ToUpper() ?? "FILE") • 
                                @(Math.Round((item.TaiLieu?.KichThuocFile ?? 0) / 1024.0, 1)) MB • 
                                @item.TaiLieu?.TacGia 
                            </p>
                            <div class="document-actions">
                                <a href="/TaiLieu/Details/@item.MaTaiLieu" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye me-1"></i>Xem
                                </a>
                            <form asp-action="BoYeuThich" asp-controller="TaiLieu" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-heart-broken me-1"></i>Bỏ thích
                                </button>
                            </form>

                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-muted ms-2 mt-2">Bạn chưa có tài liệu yêu thích nào.</p>
        }
            </div>
        </div>
    </div>
</div>

            
        </div>
    </div>
</div>
