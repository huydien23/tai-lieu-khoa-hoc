@model QuanLyTaiLieuKhoaHoc.Web.Models.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard Sinh viên";
    Layout = "_Layout";
}

<!-- Dashboard Header -->
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="h2 fw-bold mb-2">
                <i class="fas fa-graduation-cap me-3 text-primary"></i>
                Dashboard Sinh viên
            </h1>
            <p class="text-muted mb-0">Khám phá tài liệu học tập và nghiên cứu</p>
        </div>
    </div>
</div>

<!-- Key Statistics (chỉ giữ lại các thống kê phù hợp) -->
<div class="row g-4 mb-4">
    <div class="col-xl-2 col-md-4">
        <div class="stats-card">
            <div class="stats-icon text-info"><i class="fas fa-heart"></i></div>
            <div class="stats-number">@Model.SoLuongYeuThich</div>
            <div class="stats-label">Yêu thích</div>
        </div>
    </div>
    <div class="col-xl-2 col-md-4">
        <div class="stats-card">
            <div class="stats-icon text-warning"><i class="fas fa-hourglass-half"></i></div>
            <div class="stats-number">@Model.SoPhieuChoDuyet</div>
            <div class="stats-label">Chờ duyệt</div>
        </div>
    </div>
    <div class="col-xl-2 col-md-4">
        <div class="stats-card">
            <div class="stats-icon text-primary"><i class="fas fa-book"></i></div>
            <div class="stats-number">@Model.SoPhieuDangMuon</div>
            <div class="stats-label">Đang mượn</div>
        </div>
    </div>
    <div class="col-xl-2 col-md-4">
        <div class="stats-card">
            <div class="stats-icon text-danger"><i class="fas fa-times-circle"></i></div>
            <div class="stats-number">@Model.SoPhieuTuChoi</div>
            <div class="stats-label">Từ chối</div>
        </div>
    </div>
    <div class="col-xl-2 col-md-4">
        <div class="stats-card">
            <div class="stats-icon text-success"><i class="fas fa-download"></i></div>
            <div class="stats-number">@Model.SoLuotTaiXuong</div>
            <div class="stats-label">Lượt tải xuống</div>
        </div>
    </div>
</div>

<!-- Dashboard Content with Tab Layout -->
<div class="row g-4">
    <!-- Tab Navigation (Left) -->
    <div class="col-lg-3">
        <div class="card-custom">
            <div class="card-header-custom">
                <h6 class="mb-0">
                    <i class="fas fa-layer-group me-2"></i>
                    Học tập
                </h6>
            </div>
            <div class="card-body p-0">
                <div class="nav flex-column nav-pills dashboard-nav" id="v-pills-tab" role="tablist">
                    <button class="nav-link active" id="v-pills-overview-tab" data-bs-toggle="pill"
                        data-bs-target="#v-pills-overview" type="button" role="tab">
                        <i class="fas fa-chart-pie me-2"></i>Tổng quan
                    </button>
                    <button class="nav-link" id="v-pills-borrowreturn-tab" data-bs-toggle="pill"
                        data-bs-target="#v-pills-borrowreturn" type="button" role="tab">
                        <i class="fas fa-book-reader me-2"></i>Mượn/Trả tài liệu
                    </button>
                    <button class="nav-link" id="v-pills-favorites-tab" data-bs-toggle="pill"
                        data-bs-target="#v-pills-favorites" type="button" role="tab">
                        <i class="fas fa-star me-2"></i>Yêu thích
                    </button>
                    <button class="nav-link" id="v-pills-profile-tab" data-bs-toggle="pill"
                        data-bs-target="#v-pills-profile" type="button" role="tab">
                        <i class="fas fa-star me-2"></i>Thông tin tài khoản
                    </button>
                    <button class="nav-link" id="v-pills-settings-tab" data-bs-toggle="pill"
                        data-bs-target="#v-pills-settings" type="button" role="tab">
                        <i class="fas fa-cog me-2"></i>Cài đặt tài khoản
                    </button>
                    <button class="nav-link" id="v-pills-downloads-tab" data-bs-toggle="pill"
                        data-bs-target="#v-pills-downloads" type="button" role="tab">
                        <i class="fas fa-download me-2"></i>Tài liệu đã tải
                    </button>
                </div>
            </div>
        </div>
    </div>
    <!-- Tab Content (Right) -->
    <div class="col-lg-9">
        <div class="tab-content" id="v-pills-tabContent">

        <!-- Profile Tab -->
            <div class="tab-pane fade" id="v-pills-profile" role="tabpanel">
                <div class="card-custom">
                    <div class="card-header-custom">
                        <h6 class="mb-0">
                            <i class="fas fa-id-card me-2"></i>
                            Thông tin tài khoản
                        </h6>
                    </div>
                    <div class="card-body">
                        @await Html.PartialAsync("~/Views/Student/Profile.cshtml", ViewBag.CurrentUser as QuanLyTaiLieuKhoaHoc.Web.Models.NguoiDung)
                    </div>
                </div>
            </div>
            
            <!-- Account Settings Tab Content -->
            <div class="tab-pane fade" id="v-pills-settings" role="tabpanel">
                <div class="card-custom">
                    <div class="card-header-custom">
                        <h6 class="mb-0">
                            <i class="fas fa-cog me-2"></i>
                            Cài đặt tài khoản
                        </h6>
                    </div>
                    <div class="card-body">
                        <form asp-action="UpdateUser" asp-controller="Student" method="post">
                            @Html.AntiForgeryToken()
                            <div class="mb-3">
                                <label class="form-label">Họ tên</label>
                                <input type="text" class="form-control" name="HoTen" placeholder="Nhập họ tên mới" value="@((ViewBag.CurrentUser as QuanLyTaiLieuKhoaHoc.Web.Models.NguoiDung)?.HoTen)">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Mật khẩu hiện tại</label>
                                <input type="password" class="form-control" name="MatKhauHienTai" placeholder="Nhập mật khẩu hiện tại">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Mật khẩu mới</label>
                                <input type="password" class="form-control" name="MatKhauMoi" placeholder="Nhập mật khẩu mới">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Nhập lại mật khẩu mới</label>
                                <input type="password" class="form-control" name="NhapLaiMatKhauMoi" placeholder="Nhập lại mật khẩu mới">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Mã số</label>
                                <input type="text" class="form-control" name="MaSo" placeholder="Nhập mã số mới" value="@((ViewBag.CurrentUser as QuanLyTaiLieuKhoaHoc.Web.Models.NguoiDung)?.MaSo)">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Số điện thoại</label>
                                <input type="text" class="form-control" name="SoDienThoai" placeholder="Nhập số điện thoại mới" value="@((ViewBag.CurrentUser as QuanLyTaiLieuKhoaHoc.Web.Models.NguoiDung)?.SoDienThoai)">
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Lưu thay đổi
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Overview Tab -->
            <div class="tab-pane fade show active" id="v-pills-overview" role="tabpanel">
                <div class="row g-4">
                    <!-- Study Progress -->                                
                    <div class="col-12">
                        <div class="card-custom">
                            <div class="card-header-custom">
                                <h6 class="mb-0">
                                    <i class="fas fa-bolt me-2"></i>
                                    Thao tác nhanh
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-md-4">
                                        <a href="@Url.Action("Index", "TaiLieu")" class="btn btn-outline-primary w-100">
                                            <i class="fas fa-search me-2"></i>Tìm tài liệu
                                        </a>
                                    </div>
                                    <div class="col-md-4">
                                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-info w-100">
                                            <i class="fas fa-star me-2"></i>Trang chủ
                                        </a>
                                    </div>
                                    <div class="col-md-4">
                                        <a href="@Url.Action("Index", "TaiLieu")" class="btn btn-outline-warning w-100">
                                            <i class="fas fa-lightbulb me-2"></i>Tài liệu đề xuất
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Tài liệu đang mượn -->
                <div class="col-12">
                    <div class="card-custom">
                        <div class="card-header-custom">
                            <h6 class="mb-0">
                                <i class="fas fa-book me-2"></i>
                                Tài liệu đang mượn
                            </h6>
                        </div>
                        <div class="card-body">
                            @if (Model.TaiLieuDangMuon != null && Model.TaiLieuDangMuon.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Mã phiếu</th>
                                                <th>Tài liệu</th>
                                                <th>Ngày mượn</th>
                                                <th>Ngày trả dự kiến</th>
                                                <th>Thao tác</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        @foreach (var phieu in Model.TaiLieuDangMuon)
                                        {
                                            <tr>
                                                <td><span class="badge bg-secondary">#@phieu.MaPhieu</span></td>
                                                <td>
                                                    <div>
                                                        <strong>@phieu.TaiLieu?.TenTaiLieu</strong>
                                                        @if (!string.IsNullOrEmpty(phieu.TaiLieu?.TacGia))
                                                        {
                                                            <br><small class="text-muted">Tác giả: @phieu.TaiLieu.TacGia</small>
                                                        }
                                                    </div>
                                                </td>
                                                <td>@phieu.NgayMuon.ToString("dd/MM/yyyy HH:mm")</td>
                                                <td>
                                                    @if (phieu.NgayTraDuKien.HasValue)
                                                    {
                                                        <span class="text-info">@phieu.NgayTraDuKien.Value.ToString("dd/MM/yyyy")</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">-</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (phieu.TaiLieu != null)
                                                    {
                                                        <a href="/TaiLieu/Details/@phieu.TaiLieu.MaTaiLieu" 
                                                           class="btn btn-sm btn-outline-primary" 
                                                           title="Xem chi tiết tài liệu">
                                                            <i class="fas fa-eye"></i> Xem
                                                        </a>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-4">
                                    <i class="fas fa-book-open fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted">Chưa có tài liệu đang mượn</h5>
                                    <p class="text-muted">Bạn chưa mượn tài liệu nào hoặc đã trả hết.</p>
                                    <a href="/TaiLieu" class="btn btn-primary">
                                        <i class="fas fa-search me-2"></i>Tìm tài liệu để mượn
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <!-- Favorites Tab -->
            <div class="tab-pane fade" id="v-pills-favorites" role="tabpanel">
    <div class="card-custom">
        <div class="card-header-custom">
            <h6 id="yeuthich" class="mb-0">
                <i class="fas fa-star me-2"></i>
                Tài liệu yêu thích
            </h6>
        </div>
        <div class="card-body">
            <div class="row g-3">
                @if (Model.TaiLieuYeuThich != null && Model.TaiLieuYeuThich.Any())
        {
            foreach (var item in Model.TaiLieuYeuThich)
            {
                <div class="col-md-6">
                    <div class="document-card">
                        <div class="document-icon">
                            <i class="fas fa-file-pdf text-danger"></i>
                        </div>
                        <div class="document-info">
                            @if (item.TaiLieu != null)
                            {
                                <h6 class="document-title">@item.TaiLieu.TenTaiLieu</h6>
                            }
                            else
                            {
                                <h6 class="document-title">Không rõ tên tài liệu</h6>
                            }
                            <p class="document-meta">
                                @(item.TaiLieu?.LoaiFile?.ToUpper() ?? "FILE") • 
                                @(Math.Round((item.TaiLieu?.KichThuocFile ?? 0) / 1024.0, 1)) MB • 
                                @item.TaiLieu?.TacGia 
                            </p>
                            <div class="document-actions">
                                <a href="/TaiLieu/Details/@item.MaTaiLieu" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye me-1"></i>Xem
                                </a>
                            <form asp-action="BoYeuThich" asp-controller="TaiLieu" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-heart-broken me-1"></i>Bỏ thích
                                </button>
                            </form>

                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-muted ms-2 mt-2">Bạn chưa có tài liệu yêu thích nào.</p>
        }
            </div>
        </div>
    </div>
</div>

            <!-- Mượn/Trả tài liệu Tab -->
            <div class="tab-pane fade" id="v-pills-borrowreturn" role="tabpanel">
                @await Html.PartialAsync("_ManageBorrowReturnPartial", Model.PhieuMuonTra)
            </div>
            <!-- Tài liệu đã tải Tab -->
            <div class="tab-pane fade" id="v-pills-downloads" role="tabpanel">
                <h2>Tài liệu đã tải</h2>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Tên tài liệu</th>
                            <th>Thời gian tải</th>
                            <th>Địa chỉ IP</th>
                            <th>Trình duyệt</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.LichSuTaiXuong)
                        {
                            <tr>
                                <td>@item.TaiLieu?.TenTaiLieu</td>
                                <td>@item.ThoiGianTai.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@item.DiaChiIP</td>
                                <td>@item.UserAgent</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
