<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hệ thống Quản lý Tài liệu Khoa học</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome 6 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&family=Inter:wght@300;400;500;600&display=swap"
        rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/app.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark navbar-custom fixed-top">
            <div class="container">
                <!-- Brand với animation -->
                <a class="navbar-brand fw-bold d-flex align-items-center" asp-area="" asp-controller="Home"
                    asp-action="Index">
                    <div class="icon-wrapper me-2" style="width: 2.5rem; height: 2.5rem; font-size: 1rem;">
                        <i class="fas fa-graduation-cap"></i>
                    </div>
                    <div class="d-flex flex-column">
                        <span class="d-none d-lg-inline fs-6 lh-1">Quản lý Tài liệu Khoa học</span>
                        <span class="d-lg-none fw-bold">QLTL KH</span>
                        <small class="d-none d-xl-inline text-white-50" style="font-size: 0.7rem;">Digital Library
                            System</small>
                    </div>
                </a>

                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <!-- Main Navigation -->
                    <ul class="navbar-nav me-auto ms-lg-4">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-2"></i>Trang chủ
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-book me-2"></i>Tài liệu
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="TaiLieu" asp-action="Index">
                                        <i class="fas fa-list me-2"></i>Danh sách tài liệu
                                    </a></li>
                                <li><a class="dropdown-item" href="#">
                                        <i class="fas fa-star me-2"></i>Tài liệu nổi bật
                                    </a></li>
                                <li><a class="dropdown-item" href="#">
                                        <i class="fas fa-clock me-2"></i>Mới cập nhật
                                    </a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="TimKiem" asp-action="Index">
                                <i class="fas fa-search me-2"></i>Tìm kiếm nâng cao
                            </a>
                        </li>
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <main class="main-content">
        <!-- Alerts/Messages - Full width -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="container">
                <div class="alert alert-success-custom alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="container">
                <div class="alert alert-danger-custom alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        }

        <!-- Main content -->
        @RenderBody()
    </main>

    <footer class="footer-custom bg-light mt-5">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-6">
                    <h6 class="footer-title mb-3">
                        <i class="fas fa-graduation-cap me-2"></i>
                        Hệ thống Quản lý Tài liệu Khoa học
                    </h6>
                    <p class="text-muted small mb-2">
                        Ứng dụng hỗ trợ quản lý và tìm kiếm tài liệu khoa học một cách hiệu quả.
                    </p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="text-muted small mb-1">
                        © 2025 - Trường Đại học ABC
                    </p>
                    <p class="text-muted small mb-0">
                        <i class="fas fa-code me-1"></i>
                        Made with <i class="fas fa-heart text-danger"></i> in Vietnam
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <!-- Custom JavaScript -->
    <script src="~/js/app.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>

