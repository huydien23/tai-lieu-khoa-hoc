@using Microsoft.AspNetCore.Identity
@using QuanLyTaiLieuKhoaHoc.Web.Models
@inject SignInManager<NguoiDung> SignInManager
@inject UserManager<NguoiDung> UserManager

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hệ thống Quản lý Tài liệu Khoa học</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome 6 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap"
        rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/app.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/document-grid.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/huong-dan.css" asp-append-version="true" />
    
    <!-- AOS Animation Library -->
    <link rel="stylesheet" href="https://unpkg.com/aos@2.3.1/dist/aos.css" />
    
    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    <header class="fixed-top">
        <!-- Top Bar - University Info -->
        <div class="top-bar bg-dark text-white py-2">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-university me-2 text-primary"></i>
                            <span class="small">Trường Đại học Nam Cần Thơ</span>
                            <span class="mx-2">|</span>
                            <span class="small">Hệ thống Quản lý Tài liệu Khoa học</span>
                        </div>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <div class="d-flex align-items-center justify-content-md-end">
                            <span class="small me-3">
                                <i class="fas fa-calendar-alt me-1"></i>
                                @DateTime.Now.ToString("dd/MM/yyyy")
                            </span>
                            <span class="small">
                                <i class="fas fa-clock me-1"></i>
                                @DateTime.Now.ToString("HH:mm")
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Navigation -->
        <nav class="navbar navbar-expand-lg navbar-dark navbar-custom">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <div class="d-flex align-items-center">
                        <div class="brand-icon me-3">
                            <i class="fas fa-graduation-cap"></i>
                        </div>
                        <div class="brand-text">
                            <div class="brand-title">Quản lý Tài liệu Khoa học</div>
                            <div class="brand-subtitle d-none d-md-block">Nam Can Tho University</div>
                        </div>
                    </div>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Trang chủ
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="TaiLieu" asp-action="Index">
                                <i class="fas fa-book me-1"></i>Tài liệu
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-search me-1"></i>Tìm kiếm
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-area="" asp-controller="TaiLieu" asp-action="Index"><i class="fas fa-search me-2"></i>Tìm kiếm nâng cao</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="TaiLieu" asp-action="Index" asp-route-sapXep="chuyen_nganh"><i class="fas fa-tags me-2"></i>Theo chuyên ngành</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="TaiLieu" asp-action="Index" asp-route-sapXep="luot_tai_desc"><i class="fas fa-star me-2"></i>Tài liệu phổ biến</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="HuongDan">
                                <i class="fas fa-info-circle me-1"></i>Hướng dẫn
                            </a>
                        </li>
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <main class="main-content">
        <div class="container">
            <!-- Alerts/Messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success-custom alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger-custom alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Thông báo tài liệu quá hạn cho người dùng đã đăng nhập -->
            @if (SignInManager.IsSignedIn(User))
            {
                <div id="thongBaoQuaHan" class="alert alert-warning alert-dismissible fade show" role="alert" style="display: none;">
                    <i class="fas fa-clock me-2"></i>
                    <strong>Thông báo:</strong> Bạn có <span id="soTaiLieuQuaHanUser">0</span> tài liệu quá hạn trả. 
                    <a href="@Url.Action("TaiLieuQuaHanCuaToi", "PhieuMuonTra")" class="alert-link">Xem chi tiết</a>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Main content -->
            @RenderBody()
        </div>
    </main>

    <!-- Enhanced Footer -->
    <footer class="footer-custom">
        <div class="footer-main py-5">
            <div class="container">
                <div class="row">
                    <!-- University Info -->
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="footer-section">
                            <div class="footer-brand mb-3">
                                <div class="d-flex align-items-center mb-2">
                                    <div class="footer-icon me-3">
                                        <i class="fas fa-graduation-cap"></i>
                                    </div>
                                    <div>
                                        <h5 class="footer-title mb-0">Hệ thống Quản lý Tài liệu Khoa học</h5>
                                        <p class="footer-subtitle mb-0">Nam Can Tho University</p>
                                    </div>
                                </div>
                            </div>
                            <p class="footer-description">
                                Website hỗ trợ quản lý và tìm kiếm tài liệu khoa học một cách hiệu quả, 
                                phục vụ cho việc học tập và nghiên cứu của sinh viên, giảng viên.
                            </p>
                            <div class="footer-contact">
                                <div class="contact-item">
                                    <i class="fas fa-map-marker-alt me-2"></i>
                                    <span>123 Đường ABC, Quận XYZ, TP. Cần Thơ</span>
                                </div>
                                <div class="contact-item">
                                    <i class="fas fa-phone me-2"></i>
                                    <span>0292.3.xxx.xxx</span>
                                </div>
                                <div class="contact-item">
                                    <i class="fas fa-envelope me-2"></i>
                                    <span>thuvien@nctu.edu.vn</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Quick Links -->
                    <div class="col-lg-2 col-md-6 mb-4">
                        <div class="footer-section">
                            <h6 class="footer-heading">Liên kết nhanh</h6>
                                                         <ul class="footer-links">
                                 <li><a asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-angle-right me-2"></i>Trang chủ</a></li>
                                 <li><a asp-area="" asp-controller="TaiLieu" asp-action="Index"><i class="fas fa-angle-right me-2"></i>Tài liệu</a></li>
                                 <li><a asp-area="" asp-controller="TaiLieu" asp-action="Index"><i class="fas fa-angle-right me-2"></i>Tìm kiếm</a></li>
                                 <li><a asp-area="" asp-controller="Home" asp-action="HuongDan"><i class="fas fa-angle-right me-2"></i>Hướng dẫn</a></li>
                                 <li><a href="#contact"><i class="fas fa-angle-right me-2"></i>Liên hệ</a></li>
                             </ul>
                        </div>
                    </div>

                    <!-- Categories -->
                    <div class="col-lg-2 col-md-6 mb-4">
                        <div class="footer-section">
                            <h6 class="footer-heading">Chuyên ngành</h6>
                            <ul class="footer-links">
                                <li><a href="#"><i class="fas fa-angle-right me-2"></i>Công nghệ thông tin</a></li>
                                <li><a href="#"><i class="fas fa-angle-right me-2"></i>Kinh tế</a></li>
                                <li><a href="#"><i class="fas fa-angle-right me-2"></i>Nông nghiệp</a></li>
                                <li><a href="#"><i class="fas fa-angle-right me-2"></i>Y tế</a></li>
                                <li><a href="#"><i class="fas fa-angle-right me-2"></i>Giáo dục</a></li>
                            </ul>
                        </div>
                    </div>

                    <!-- Support & Social -->
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="footer-section">
                            <h6 class="footer-heading">Hỗ trợ & Liên hệ</h6>
                            <div class="footer-support mb-3">
                                <p class="mb-2">
                                    <i class="fas fa-headset me-2 text-primary"></i>
                                    <strong>Hỗ trợ kỹ thuật:</strong>
                                </p>
                                <p class="mb-2">Thời gian làm việc: 7:30 - 17:00 (Thứ 2 - Thứ 6)</p>
                                <p class="mb-3">Email: support@nctu.edu.vn</p>
                            </div>
                            
                            <div class="footer-social">
                                <h6 class="footer-heading mb-3">Kết nối với chúng tôi</h6>
                                <div class="social-links">
                                    <a href="#" class="social-link" title="Facebook">
                                        <i class="fab fa-facebook-f"></i>
                                    </a>
                                    <a href="#" class="social-link" title="YouTube">
                                        <i class="fab fa-youtube"></i>
                                    </a>
                                    <a href="#" class="social-link" title="LinkedIn">
                                        <i class="fab fa-linkedin-in"></i>
                                    </a>
                                    <a href="#" class="social-link" title="Email">
                                        <i class="fas fa-envelope"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer Bottom -->
        <div class="footer-bottom py-3">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <p class="mb-0 text-center text-md-start">
                            <i class="fas fa-copyright me-1"></i>
                            2025 - Trường Đại học Nam Cần Thơ. Tất cả quyền được bảo lưu.
                        </p>
                    </div>
                    <div class="col-md-6 text-center text-md-end">
                        <div class="footer-stats">
                            <span class="stat-item me-3">
                                <i class="fas fa-users me-1"></i>
                                <span id="userCount">1,234</span> người dùng
                            </span>
                            <span class="stat-item">
                                <i class="fas fa-book me-1"></i>
                                <span id="documentCount">5,678</span> tài liệu
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <!-- AOS Animation Library -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    
    <!-- Custom JavaScript -->
    <script src="~/js/app.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Kiểm tra tài liệu quá hạn cho người dùng
        $(document).ready(function() {
            @if (SignInManager.IsSignedIn(User))
            {
                <text>
                checkTaiLieuQuaHan();
                </text>
            }
            
            // Update footer stats
            updateFooterStats();
        });

        function checkTaiLieuQuaHan() {
            $.get('/PhieuMuonTra/GetSoTaiLieuQuaHanCuaToi', function(data) {
                if (data.soLuong > 0) {
                    $('#soTaiLieuQuaHanUser').text(data.soLuong);
                    $('#thongBaoQuaHan').show();
                }
            });
        }

        function updateFooterStats() {
            // Simulate real-time stats update
            setInterval(function() {
                $('#userCount').text(Math.floor(Math.random() * 2000) + 1000);
                $('#documentCount').text(Math.floor(Math.random() * 10000) + 5000);
            }, 30000); // Update every 30 seconds
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>

