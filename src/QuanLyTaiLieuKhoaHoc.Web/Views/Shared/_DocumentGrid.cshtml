@using QuanLyTaiLieuKhoaHoc.Web.Models.ViewModels
@model TaiLieuListViewModel

@if (Model.DanhSachTaiLieu.Any())
{
    <!-- Advanced Search Results Header -->
    <div class="search-results-header mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div class="results-summary">
                <h4 class="mb-1">
                    <i class="fas fa-search text-primary me-2"></i>
                    Tìm thấy <span class="text-primary fw-bold">@Model.TongSoTaiLieu</span> tài liệu
                </h4>
                @if (!string.IsNullOrEmpty(Model.TimKiem))
                {
                    <p class="text-muted mb-0">
                        Kết quả cho: <span class="badge bg-light text-dark">"@Model.TimKiem"</span>
                    </p>
                }
            </div>
            <div class="view-controls">
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-outline-primary active" id="gridView" title="Xem dạng lưới">
                        <i class="fas fa-th-large"></i>
                    </button>
                    <button type="button" class="btn btn-outline-primary" id="listView" title="Xem dạng danh sách">
                        <i class="fas fa-list"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modern Document Grid -->
    <div class="documents-grid-modern" id="documentsContainer">
        <div class="row g-4">
            @foreach (var taiLieu in Model.DanhSachTaiLieu)
            {
                <div class="col-xl-4 col-lg-6 col-md-6">
                    <div class="document-card-master">
                        <!-- Card Container with Glass Effect -->
                        <div class="card-container">
                            <!-- Header with Gradient and Pattern -->
                            <div class="card-header-master">
                                <div class="header-background">
                                    <div class="gradient-overlay"></div>
                                    <div class="pattern-overlay"></div>
                                </div>
                                
                                <!-- Document Type Badge -->
                                <div class="document-type-badge-master">
                                    <span class="badge-content">
                                        <i class="fas fa-file-alt me-1"></i>
                                        @taiLieu.TenLoaiTaiLieu
                                    </span>
                                </div>
                                
                                <!-- Quick Actions -->
                                <div class="quick-actions">
                                    <button class="btn-quick-action" title="Thêm vào yêu thích">
                                        <i class="far fa-heart"></i>
                                    </button>
                                    <button class="btn-quick-action" title="Chia sẻ">
                                        <i class="fas fa-share-alt"></i>
                                    </button>
                                </div>
                            </div>
                            
                            <!-- Card Content -->
                            <div class="card-content-master">
                                <!-- Document Icon and Title -->
                                <div class="document-header">
                                    <div class="document-icon-master">
                                        <div class="icon-wrapper">
                                            <i class="fas fa-file-alt"></i>
                                        </div>
                                    </div>
                                    <div class="document-info-master">
                                        <h5 class="document-title">@taiLieu.TenTaiLieu</h5>
                                        <p class="document-author">
                                            <i class="fas fa-user-circle me-1"></i>
                                            @taiLieu.TacGia
                                        </p>
                                    </div>
                                </div>
                                
                                <!-- Document Metadata -->
                                <div class="document-metadata">
                                    <div class="metadata-grid">
                                        <div class="metadata-item">
                                            <i class="fas fa-calendar-alt text-primary"></i>
                                            <span>@taiLieu.NgayTaiLen.ToString("dd/MM/yyyy")</span>
                                        </div>
                                        <div class="metadata-item">
                                            <i class="fas fa-book-reader text-success"></i>
                                            <span>@taiLieu.SoLuongDaMuon lượt mượn</span>
                                        </div>
                                        <div class="metadata-item">
                                            <i class="fas fa-graduation-cap text-info"></i>
                                            <span>@taiLieu.TenChuyenNganh</span>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Document Description -->
                                @if (!string.IsNullOrEmpty(taiLieu.MoTa))
                                {
                                    <div class="document-description-master">
                                        <p class="description-text">
                                            @(taiLieu.MoTa.Length > 100 ? taiLieu.MoTa.Substring(0, 100) + "..." : taiLieu.MoTa)
                                        </p>
                                    </div>
                                }
                                
                                <!-- Status and Rating -->
                                <div class="document-status-master">
                                    <div class="status-badge">
                                        @if (taiLieu.SoLuongConLai <= 0)
                                        {
                                            <span class="badge-status unavailable">
                                                <i class="fas fa-times-circle me-1"></i>
                                                Hết tài liệu
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge-status available">
                                                <i class="fas fa-check-circle me-1"></i>
                                                Còn @taiLieu.SoLuongConLai bản
                                            </span>
                                        }
                                    </div>
                                    <div class="rating-display">
                                        <div class="stars">
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="far fa-star"></i>
                                        </div>
                                        <span class="rating-text">4.0</span>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Card Footer with Actions -->
                            <div class="card-footer-master">
                                <div class="action-buttons">
                                    <a asp-controller="TaiLieu" asp-action="Details" asp-route-id="@taiLieu.MaTaiLieu"
                                       class="btn btn-primary-master" title="Xem chi tiết">
                                        <i class="fas fa-eye me-1"></i>
                                        Chi tiết
                                    </a>
                                    @if (User.Identity?.IsAuthenticated == true && (User.IsInRole("GiangVien") || User.IsInRole("SinhVien")) && taiLieu.ChoPhepTaiFile)
                                    {
                                        <a asp-controller="TaiLieu" asp-action="Download" asp-route-id="@taiLieu.MaTaiLieu"
                                           class="btn btn-success-master" title="Tải xuống">
                                            <i class="fas fa-download me-1"></i>
                                            Tải
                                        </a>
                                    }
                                </div>
                                
                                <!-- Document Stats -->
                                <div class="document-stats">
                                    <div class="stat-item">
                                        <i class="fas fa-eye text-muted"></i>
                                        <span>@(taiLieu.SoLuongDaMuon + 15)</span>
                                    </div>
                                    <div class="stat-item">
                                        <i class="fas fa-download text-muted"></i>
                                        <span>@(taiLieu.SoLuongDaMuon + 8)</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Enhanced Pagination -->
    @if (Model.TongSoTrang > 1)
    {
        <div class="pagination-modern mt-5">
            <nav aria-label="Phân trang">
                <ul class="pagination justify-content-center">
                    @if (Model.TrangHienTai > 1)
                    {
                        <li class="page-item">
                            <a class="page-link-modern" asp-action="Index" asp-controller="TaiLieu"
                               asp-route-trang="@(Model.TrangHienTai - 1)"
                               asp-route-timKiem="@Model.TimKiem"
                               asp-route-maChuyenNganh="@Model.MaChuyenNganh"
                               asp-route-maLoaiTaiLieu="@Model.MaLoaiTaiLieu"
                               asp-route-sapXep="@Model.SapXep">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        </li>
                    }

                    @for (int i = Math.Max(1, Model.TrangHienTai - 2); i <= Math.Min(Model.TongSoTrang, Model.TrangHienTai + 2); i++)
                    {
                        <li class="page-item @(i == Model.TrangHienTai ? "active" : "")">
                            <a class="page-link-modern" asp-action="Index" asp-controller="TaiLieu"
                               asp-route-trang="@i"
                               asp-route-timKiem="@Model.TimKiem"
                               asp-route-maChuyenNganh="@Model.MaChuyenNganh"
                               asp-route-maLoaiTaiLieu="@Model.MaLoaiTaiLieu"
                               asp-route-sapXep="@Model.SapXep">
                                @i
                            </a>
                        </li>
                    }

                    @if (Model.TrangHienTai < Model.TongSoTrang)
                    {
                        <li class="page-item">
                            <a class="page-link-modern" asp-action="Index" asp-controller="TaiLieu"
                               asp-route-trang="@(Model.TrangHienTai + 1)"
                               asp-route-timKiem="@Model.TimKiem"
                               asp-route-maChuyenNganh="@Model.MaChuyenNganh"
                               asp-route-maLoaiTaiLieu="@Model.MaLoaiTaiLieu"
                               asp-route-sapXep="@Model.SapXep">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    }
}
else
{
    <!-- Enhanced No Results -->
    <div class="no-results-master">
        <div class="no-results-content">
            <div class="no-results-icon">
                <i class="fas fa-search"></i>
            </div>
            <h3>Không tìm thấy tài liệu nào</h3>
            <p>Thử thay đổi điều kiện tìm kiếm hoặc bộ lọc để có kết quả phù hợp</p>
            <div class="no-results-actions">
                <a asp-action="Index" asp-controller="TaiLieu" class="btn btn-primary-master">
                    <i class="fas fa-refresh me-2"></i>
                    Xem tất cả tài liệu
                </a>
            </div>
        </div>
    </div>
}
