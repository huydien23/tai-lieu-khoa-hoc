@using QuanLyTaiLieuKhoaHoc.Web.Models.ViewModels
@model TaiLieuListViewModel

@if (Model.DanhSachTaiLieu.Any())
{
    <div class="row">
        @foreach (var taiLieu in Model.DanhSachTaiLieu)
        {
            <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card h-100 document-card">
                    <div class="card-header bg-primary text-white">
                        <h6 class="card-title mb-0">
                            <i class="fas fa-file-alt me-2"></i>
                            @taiLieu.TenTaiLieu
                        </h6>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            <small class="text-muted">
                                <i class="fas fa-user me-1"></i>@taiLieu.TacGia<br>
                                <i class="fas fa-calendar me-1"></i>@taiLieu.NgayTaiLen.ToString("dd/MM/yyyy")<br>
                                <i class="fas fa-book-reader me-1"></i>@taiLieu.LuotMuon lượt mượn<br>
                                <i class="fas fa-tag me-1"></i>@taiLieu.TenChuyenNganh
                            </small>
                        </p>
                        @if (!string.IsNullOrEmpty(taiLieu.MoTa))
                        {
                            <p class="card-text">
                                @(taiLieu.MoTa.Length > 100 ? taiLieu.MoTa.Substring(0, 100) + "..." : taiLieu.MoTa)
                            </p>
                        }
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">
                                <span class="badge bg-secondary">@taiLieu.TenLoaiTaiLieu</span>
                            </small>
                            <div class="btn-group btn-group-sm">
                                <a asp-controller="TaiLieu" asp-action="Details" asp-route-id="@taiLieu.MaTaiLieu" 
                                   class="btn btn-outline-primary" title="Xem chi tiết">
                                    <i class="fas fa-eye"></i>
                                </a>
                                @* Chỉ thủ thư/admin mới được tải tài liệu *@
                                @if (User.Identity?.IsAuthenticated == true && (User.IsInRole("GiangVien") || User.IsInRole("SinhVien")) && taiLieu.ChoPhepTaiFile)
                                {
                                    <a asp-controller="TaiLieu" asp-action="Download" asp-route-id="@taiLieu.MaTaiLieu" 
                                       class="btn btn-outline-success" title="Tải xuống">
                                        <i class="fas fa-download"></i>
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    @if (Model.TongSoTrang > 1)
    {
        <nav aria-label="Phân trang">
            <ul class="pagination justify-content-center">
                @if (Model.TrangHienTai > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-controller="TaiLieu"
                           asp-route-trang="@(Model.TrangHienTai - 1)"
                           asp-route-timKiem="@Model.TimKiem"
                           asp-route-maChuyenNganh="@Model.MaChuyenNganh"
                           asp-route-maLoaiTaiLieu="@Model.MaLoaiTaiLieu"
                           asp-route-sapXep="@Model.SapXep">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    </li>
                }

                @for (int i = Math.Max(1, Model.TrangHienTai - 2); i <= Math.Min(Model.TongSoTrang, Model.TrangHienTai + 2); i++)
                {
                    <li class="page-item @(i == Model.TrangHienTai ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-controller="TaiLieu"
                           asp-route-trang="@i"
                           asp-route-timKiem="@Model.TimKiem"
                           asp-route-maChuyenNganh="@Model.MaChuyenNganh"
                           asp-route-maLoaiTaiLieu="@Model.MaLoaiTaiLieu"
                           asp-route-sapXep="@Model.SapXep">
                            @i
                        </a>
                    </li>
                }

                @if (Model.TrangHienTai < Model.TongSoTrang)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-controller="TaiLieu"
                           asp-route-trang="@(Model.TrangHienTai + 1)"
                           asp-route-timKiem="@Model.TimKiem"
                           asp-route-maChuyenNganh="@Model.MaChuyenNganh"
                           asp-route-maLoaiTaiLieu="@Model.MaLoaiTaiLieu"
                           asp-route-sapXep="@Model.SapXep">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }
}
else
{
    <div class="text-center py-5">
        <i class="fas fa-search fa-3x text-muted mb-3"></i>
        <h4 class="text-muted">Không tìm thấy tài liệu nào</h4>
        <p class="text-muted">Thử thay đổi điều kiện tìm kiếm hoặc bộ lọc</p>
    </div>
}

<style>
    .document-card {
        transition: transform 0.2s;
    }

    .document-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .card-title {
        font-size: 1rem;
        font-weight: 600;
    }
</style>
