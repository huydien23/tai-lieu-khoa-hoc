@using QuanLyTaiLieuKhoaHoc.Web.Models.ViewModels
@model TaiLieuListViewModel

@if (Model.DanhSachTaiLieu.Any())
{
    <div class="row">
        @foreach (var taiLieu in Model.DanhSachTaiLieu)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm rounded-4 h-100 document-card border-0">
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex align-items-center mb-2">
                            <i class="fas fa-file-alt fs-4 text-primary me-2"></i>
                            <h5 class="card-title mb-0 flex-grow-1">@taiLieu.TenTaiLieu</h5>
                        </div>
                        <ul class="list-unstyled small text-muted mb-2">
                            <li><i class="fas fa-user me-1"></i> @taiLieu.TacGia</li>
                            <li><i class="fas fa-calendar me-1"></i> @taiLieu.NgayTaiLen.ToString("dd/MM/yyyy")</li>
                            <li><i class="fas fa-book-reader me-1"></i> @taiLieu.LuotMuon lượt mượn</li>
                            <li><i class="fas fa-tag me-1"></i> @taiLieu.TenChuyenNganh</li>
                        </ul>
                        @if (!string.IsNullOrEmpty(taiLieu.MoTa))
                        {
                            <p class="card-text flex-grow-1">@(taiLieu.MoTa.Length > 100 ? taiLieu.MoTa.Substring(0, 100) + "..." : taiLieu.MoTa)</p>
                        }
                        <div class="d-flex justify-content-between align-items-center mt-auto">
                            <span class="badge bg-info text-dark px-3 py-2">@taiLieu.TenLoaiTaiLieu</span>
                            <div>
                                <a asp-controller="TaiLieu" asp-action="Details" asp-route-id="@taiLieu.MaTaiLieu"
                                   class="btn btn-primary btn-sm rounded-pill me-1" title="Xem chi tiết">
                                    <i class="fas fa-eye"></i>
                                </a>
                                @if (User.Identity?.IsAuthenticated == true && (User.IsInRole("GiangVien") || User.IsInRole("SinhVien")) && taiLieu.ChoPhepTaiFile)
                                {
                                    <a asp-controller="TaiLieu" asp-action="Download" asp-route-id="@taiLieu.MaTaiLieu"
                                       class="btn btn-success btn-sm rounded-pill" title="Tải xuống">
                                        <i class="fas fa-download"></i>
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    @if (Model.TongSoTrang > 1)
    {
        <nav aria-label="Phân trang">
            <ul class="pagination justify-content-center">
                @if (Model.TrangHienTai > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-controller="TaiLieu"
                           asp-route-trang="@(Model.TrangHienTai - 1)"
                           asp-route-timKiem="@Model.TimKiem"
                           asp-route-maChuyenNganh="@Model.MaChuyenNganh"
                           asp-route-maLoaiTaiLieu="@Model.MaLoaiTaiLieu"
                           asp-route-sapXep="@Model.SapXep">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    </li>
                }

                @for (int i = Math.Max(1, Model.TrangHienTai - 2); i <= Math.Min(Model.TongSoTrang, Model.TrangHienTai + 2); i++)
                {
                    <li class="page-item @(i == Model.TrangHienTai ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-controller="TaiLieu"
                           asp-route-trang="@i"
                           asp-route-timKiem="@Model.TimKiem"
                           asp-route-maChuyenNganh="@Model.MaChuyenNganh"
                           asp-route-maLoaiTaiLieu="@Model.MaLoaiTaiLieu"
                           asp-route-sapXep="@Model.SapXep">
                            @i
                        </a>
                    </li>
                }

                @if (Model.TrangHienTai < Model.TongSoTrang)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-controller="TaiLieu"
                           asp-route-trang="@(Model.TrangHienTai + 1)"
                           asp-route-timKiem="@Model.TimKiem"
                           asp-route-maChuyenNganh="@Model.MaChuyenNganh"
                           asp-route-maLoaiTaiLieu="@Model.MaLoaiTaiLieu"
                           asp-route-sapXep="@Model.SapXep">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }
}
else
{
    <div class="text-center py-5">
        <i class="fas fa-search fa-3x text-muted mb-3"></i>
        <h4 class="text-muted">Không tìm thấy tài liệu nào</h4>
        <p class="text-muted">Thử thay đổi điều kiện tìm kiếm hoặc bộ lọc</p>
    </div>
}

<style>
    .document-card {
        transition: box-shadow 0.2s, transform 0.2s;
    }

    .document-card:hover {
        box-shadow: 0 8px 32px rgba(30, 34, 90, 0.18) !important;
        transform: scale(1.02);
    }

    .card-title {
        font-size: 1.1rem;
        font-weight: 700;
        color: #1A237E;
    }

    .badge.bg-info {
        background: #e3f2fd !important;
        color: #1976d2 !important;
        font-weight: 600;
    }

    .btn-primary, .btn-success {
        font-weight: 600;
    }
</style>
