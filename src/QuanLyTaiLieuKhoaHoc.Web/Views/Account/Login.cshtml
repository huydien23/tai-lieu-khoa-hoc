@{
    ViewData["Title"] = "Đăng nhập";
    Layout = null; // Use separate layout for auth pages
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hệ thống Quản lý Tài liệu Khoa học</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome 6 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&family=Inter:wght@300;400;500;600&display=swap"
        rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/app.css" asp-append-version="true" />

    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .auth-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            max-width: 1000px;
            width: 100%;
            margin: 2rem;
        }

        .auth-left {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
            color: white;
            padding: 3rem;
            min-height: 600px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .auth-right {
            padding: 3rem;
            min-height: 600px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .form-floating-custom {
            position: relative;
            margin-bottom: 1.5rem;
        }

        .form-floating-custom input {
            width: 100%;
            padding: 1rem 1rem 1rem 3rem;
            border: 2px solid var(--border-color);
            border-radius: 12px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: rgba(255, 255, 255, 0.9);
        }

        .form-floating-custom input:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(37, 99, 235, 0.15);
            outline: none;
        }

        .form-floating-custom i {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-muted);
            z-index: 5;
        }

        .form-floating-custom input:focus+i {
            color: var(--primary-color);
        }

        .btn-login {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
            border: none;
            border-radius: 12px;
            padding: 1rem 2rem;
            font-weight: 600;
            color: white;
            transition: all 0.3s ease;
            width: 100%;
        }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(37, 99, 235, 0.3);
            color: white;
        }

        .role-selector {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 1rem;
            margin-bottom: 2rem;
        }

        .role-card {
            background: rgba(255, 255, 255, 0.1);
            border: 2px solid rgba(255, 255, 255, 0.2);
            border-radius: 12px;
            padding: 1rem;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .role-card:hover {
            background: rgba(255, 255, 255, 0.2);
            transform: translateY(-2px);
        }

        .role-card.active {
            background: rgba(255, 255, 255, 0.3);
            border-color: rgba(255, 255, 255, 0.8);
        }

        .role-card i {
            font-size: 2rem;
            margin-bottom: 0.5rem;
            display: block;
        }

        .floating-shapes {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: -1;
        }

        .shape {
            position: absolute;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            animation: float 6s ease-in-out infinite;
        }

        .shape:nth-child(1) {
            top: 20%;
            left: 20%;
            width: 60px;
            height: 60px;
            animation-delay: 0s;
        }

        .shape:nth-child(2) {
            top: 60%;
            right: 20%;
            width: 80px;
            height: 80px;
            animation-delay: 2s;
        }

        .shape:nth-child(3) {
            bottom: 20%;
            left: 30%;
            width: 40px;
            height: 40px;
            animation-delay: 4s;
        }

        @@keyframes float {

            0%,
            100% {
                transform: translateY(0px);
            }

            50% {
                transform: translateY(-20px);
            }
        }

        @@media (max-width: 768px) {
            .auth-container {
                margin: 1rem;
            }

            .auth-left,
            .auth-right {
                padding: 2rem;
                min-height: auto;
            }

            .role-selector {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>

<body>
    <!-- Floating shapes animation -->
    <div class="floating-shapes">
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
    </div>

    <div class="auth-container">
        <div class="row g-0">
            <!-- Left side - Branding -->
            <div class="col-lg-6">
                <div class="auth-left">
                    <div class="text-center mb-4">
                        <i class="fas fa-book-reader fa-4x mb-3"></i>
                        <h2 class="fw-bold mb-3">Hệ thống Quản lý<br>Tài liệu Khoa học</h2>
                        <p class="lead opacity-90">
                            Nền tảng hiện đại cho việc quản lý, tìm kiếm và chia sẻ tài liệu khoa học
                        </p>
                    </div>

                    <!-- Role selection -->
                    <div class="role-selector" id="roleSelector">
                        <div class="role-card" data-role="admin">
                            <i class="fas fa-user-shield"></i>
                            <div class="fw-medium">Thủ thư</div>
                            <small class="opacity-75">Quản lý toàn bộ</small>
                        </div>
                        <div class="role-card" data-role="lecturer">
                            <i class="fas fa-chalkboard-teacher"></i>
                            <div class="fw-medium">Giảng viên</div>
                            <small class="opacity-75">Tra cứu & thống kê</small>
                        </div>
                        <div class="role-card" data-role="student">
                            <i class="fas fa-user-graduate"></i>
                            <div class="fw-medium">Sinh viên</div>
                            <small class="opacity-75">Tìm kiếm tài liệu</small>
                        </div>
                    </div>

                    <div class="text-center">
                        <div class="d-flex align-items-center justify-content-center mb-3">
                            <div class="flex-grow-1 border-top opacity-25"></div>
                            <span class="mx-3 small opacity-75">Tính năng nổi bật</span>
                            <div class="flex-grow-1 border-top opacity-25"></div>
                        </div>

                        <div class="row text-center">
                            <div class="col-4">
                                <i class="fas fa-search fa-2x mb-2 opacity-75"></i>
                                <div class="small">Tìm kiếm thông minh</div>
                            </div>
                            <div class="col-4">
                                <i class="fas fa-chart-line fa-2x mb-2 opacity-75"></i>
                                <div class="small">Báo cáo trực quan</div>
                            </div>
                            <div class="col-4">
                                <i class="fas fa-mobile-alt fa-2x mb-2 opacity-75"></i>
                                <div class="small">Responsive design</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right side - Login form -->
            <div class="col-lg-6">
                <div class="auth-right">
                    <div class="text-center mb-4">
                        <h3 class="fw-bold text-primary-custom mb-2">Chào mừng trở lại!</h3>
                        <p class="text-muted">Đăng nhập để tiếp tục sử dụng hệ thống</p>
                    </div>

                    <!-- Login Form -->
                    <form id="loginForm" method="post" asp-action="Login">
                        <input type="hidden" id="selectedRole" name="Role" value="" />

                        <div class="form-floating-custom">
                            <input type="text" id="username" name="Username" placeholder="Tên đăng nhập" required>
                            <i class="fas fa-user"></i>
                        </div>

                        <div class="form-floating-custom">
                            <input type="password" id="password" name="Password" placeholder="Mật khẩu" required>
                            <i class="fas fa-lock"></i>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="rememberMe" name="RememberMe">
                                <label class="form-check-label text-muted" for="rememberMe">
                                    Ghi nhớ đăng nhập
                                </label>
                            </div>
                            <a href="/Account/ForgotPassword" class="text-decoration-none small">
                                Quên mật khẩu?
                            </a>
                        </div>

                        <button type="submit" class="btn btn-login mb-3" id="loginButton">
                            <i class="fas fa-sign-in-alt me-2"></i>
                            Đăng nhập
                        </button>

                        <div class="text-center">
                            <p class="text-muted small mb-3">
                                Chưa có tài khoản?
                                <a href="/Account/Register" class="text-decoration-none fw-medium">
                                    Đăng ký ngay
                                </a>
                            </p>

                            <!-- Quick login for demo -->
                            <div class="border-top pt-3">
                                <p class="text-muted small mb-2">Đăng nhập nhanh (Demo):</p>
                                <div class="d-flex gap-2 justify-content-center flex-wrap">
                                    <button type="button" class="btn btn-outline-primary btn-sm quick-login"
                                        data-username="thuthu" data-password="123456" data-role="admin">
                                        <i class="fas fa-user-shield me-1"></i>Thủ thư
                                    </button>
                                    <button type="button" class="btn btn-outline-success btn-sm quick-login"
                                        data-username="giangvien" data-password="123456" data-role="lecturer">
                                        <i class="fas fa-chalkboard-teacher me-1"></i>GV
                                    </button>
                                    <button type="button" class="btn btn-outline-info btn-sm quick-login"
                                        data-username="sinhvien" data-password="123456" data-role="student">
                                        <i class="fas fa-user-graduate me-1"></i>SV
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <script>
        $(document).ready(function () {
            // Role selection
            $('.role-card').on('click', function () {
                $('.role-card').removeClass('active');
                $(this).addClass('active');
                $('#selectedRole').val($(this).data('role'));

                // Update login button text based on role
                var roleText = $(this).find('.fw-medium').text();
                $('#loginButton').html(`<i class="fas fa-sign-in-alt me-2"></i>Đăng nhập với tư cách ${roleText}`);
            });

            // Quick login buttons
            $('.quick-login').on('click', function () {
                var username = $(this).data('username');
                var password = $(this).data('password');
                var role = $(this).data('role');

                $('#username').val(username);
                $('#password').val(password);
                $('#selectedRole').val(role);

                // Select corresponding role card
                $(`.role-card[data-role="${role}"]`).click();

                // Auto submit (for demo purposes)
                setTimeout(function () {
                    $('#loginForm').submit();
                }, 500);
            });

            // Form submission
            $('#loginForm').on('submit', function (e) {
                e.preventDefault();

                var selectedRole = $('#selectedRole').val();
                if (!selectedRole) {
                    alert('Vui lòng chọn vai trò đăng nhập');
                    return false;
                }

                // Show loading
                $('#loginButton').prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Đang đăng nhập...');

                // Simulate login process (replace with actual form submission)
                setTimeout(function () {
                    // For demo purposes, redirect based on role
                    switch (selectedRole) {
                        case 'admin':
                            window.location.href = '/Admin/Dashboard';
                            break;
                        case 'lecturer':
                            window.location.href = '/Lecturer/Dashboard';
                            break;
                        case 'student':
                            window.location.href = '/Student/Dashboard';
                            break;
                        default:
                            window.location.href = '/';
                    }
                }, 2000);
            });

            // Auto-select first role
            $('.role-card:first').click();

            // Add some interactive effects
            $('input').on('focus', function () {
                $(this).parent().addClass('focused');
            }).on('blur', function () {
                $(this).parent().removeClass('focused');
            });
        });
    </script>
</body>

</html>










