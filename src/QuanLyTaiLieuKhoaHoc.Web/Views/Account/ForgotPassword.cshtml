@{
    ViewData["Title"] = "Quên Mật khẩu";
}

<div class="auth-container">
    <div class="container-fluid">
        <div class="row min-vh-100">
            <!-- Left side - Forgot Password Form -->
            <div class="col-lg-6 d-flex align-items-center justify-content-center py-5">
                <div class="auth-form-container">
                    <div class="text-center mb-4">
                        <div class="auth-logo mb-3">
                            <i class="fas fa-key text-warning" style="font-size: 3rem;"></i>
                        </div>
                        <h2 class="fw-bold text-primary mb-2">Quên Mật khẩu?</h2>
                        <p class="text-muted">Nhập email của bạn để nhận hướng dẫn đặt lại mật khẩu</p>
                    </div>

                    <form asp-action="ForgotPassword" method="post" class="auth-form" novalidate>
                        <div class="form-floating mb-4">
                            <input type="email" class="form-control form-control-lg" id="email" name="email"
                                placeholder="Email" required>
                            <label for="email"><i class="fas fa-envelope me-2"></i>Địa chỉ Email</label>
                        </div>

                        <button type="submit" class="btn btn-warning btn-lg w-100 mb-4">
                            <i class="fas fa-paper-plane me-2"></i>Gửi Hướng dẫn
                        </button>

                        <div class="text-center">
                            <p class="mb-2">Nhớ lại mật khẩu?
                                <a asp-action="Login" class="text-primary fw-semibold">Đăng nhập</a>
                            </p>
                            <p class="mb-0">Chưa có tài khoản?
                                <a asp-action="Register" class="text-primary fw-semibold">Đăng ký ngay</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Right side - Help Information -->
            <div class="col-lg-6 auth-side-panel d-none d-lg-flex"
                style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <div class="auth-side-content">
                    <div class="text-center">
                        <h3 class="text-white fw-bold mb-4">Hỗ trợ Khôi phục</h3>
                        <div class="auth-features">
                            <div class="feature-item mb-4">
                                <div class="feature-icon mb-3">
                                    <i class="fas fa-shield-alt"></i>
                                </div>
                                <h5 class="text-white mb-2">Bảo mật Cao</h5>
                                <p class="text-white-50">Hệ thống bảo mật nhiều lớp đảm bảo an toàn thông tin</p>
                            </div>
                            <div class="feature-item mb-4">
                                <div class="feature-icon mb-3">
                                    <i class="fas fa-clock"></i>
                                </div>
                                <h5 class="text-white mb-2">Nhanh chóng</h5>
                                <p class="text-white-50">Email hướng dẫn sẽ được gửi trong vòng 5 phút</p>
                            </div>
                            <div class="feature-item">
                                <div class="feature-icon mb-3">
                                    <i class="fas fa-headset"></i>
                                </div>
                                <h5 class="text-white mb-2">Hỗ trợ 24/7</h5>
                                <p class="text-white-50">Liên hệ admin nếu cần hỗ trợ thêm</p>
                            </div>
                        </div>

                        <div class="mt-5 p-3 bg-white bg-opacity-10 rounded">
                            <h6 class="text-white mb-2">
                                <i class="fas fa-info-circle me-2"></i>Lưu ý
                            </h6>
                            <p class="text-white-50 small mb-0">
                                Nếu không nhận được email sau 10 phút, vui lòng kiểm tra thư mục spam hoặc liên hệ admin
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.auth-form').on('submit', function (e) {
                var email = $('#email').val();

                if (!isValidEmail(email)) {
                    showToast('Vui lòng nhập địa chỉ email hợp lệ', 'error');
                    e.preventDefault();
                    return;
                }

                showLoading('Đang gửi email...');
            });
        });

        function isValidEmail(email) {
            var emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
            return emailRegex.test(email);
        }
    </script>
}

                               
                 