@model QuanLyTaiLieuKhoaHoc.Web.Models.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký Tài khoản";
    Layout = null; // Use separate layout for auth pages
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hệ thống Quản lý Tài liệu Khoa học</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome 6 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/app.css" asp-append-version="true" />

    <style>
        body {
            background: linear-gradient(135deg, #F0F8FE 0%, #DEEFFB 25%, #5BA7D9 75%, #1C304F 100%);
            min-height: 100vh;
            font-family: 'Inter', sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1rem;
        }

        .auth-container {
            background: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(15px);
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(28, 48, 79, 0.15);
            overflow: hidden;
            max-width: 900px;
            width: 95%;
            margin: 2rem auto;
            border: 1px solid rgba(91, 167, 217, 0.1);
        }

        .auth-form-side {
            padding: 2rem;
            min-height: 500px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .auth-info-side {
            background: linear-gradient(135deg, #5BA7D9, #2E5A8A);
            color: white;
            padding: 2rem;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            overflow: hidden;
            min-height: 500px;
        }

        .auth-info-side::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="50" cy="50" r="1" fill="rgba(255,255,255,0.1)"/></svg>') repeat;
            animation: float 20s infinite linear;
        }

        @@keyframes float {
            0% {
                transform: translateX(0) translateY(0);
            }

            100% {
                transform: translateX(-100px) translateY(-100px);
            }
        }

        .auth-form-container {
            width: 100%;
            max-width: 450px;
        }

        .auth-logo {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, #5BA7D9, #2E5A8A);
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto;
            box-shadow: 0 8px 16px rgba(91, 167, 217, 0.3);
        }

        .auth-logo i {
            font-size: 1.5rem;
            color: white;
        }

        .form-floating>label {
            color: #64748b;
            font-weight: 500;
        }

        .form-control:focus {
            border-color: #5BA7D9;
            box-shadow: 0 0 0 0.2rem rgba(91, 167, 217, 0.25);
        }

        .btn-primary {
            background: linear-gradient(135deg, #5BA7D9, #2E5A8A);
            border: none;
            border-radius: 10px;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            letter-spacing: 0.025em;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, #2E5A8A, #1C304F);
            transform: translateY(-1px);
            box-shadow: 0 6px 12px rgba(91, 167, 217, 0.4);
        }

        .feature-item {
            padding: 1rem;
            border-radius: 12px;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            margin-bottom: 1rem;
            transition: transform 0.3s ease;
        }

        .feature-item:hover {
            transform: translateY(-2px);
        }

        .feature-icon {
            width: 40px;
            height: 40px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto;
        }

        .feature-icon i {
            font-size: 1rem;
            color: white;
        }

        .text-primary {
            color: #5BA7D9 !important;
        }

        .text-primary:hover {
            color: #2E5A8A !important;
        }

        @@media (max-width: 991.98px) {
            .auth-container {
                margin: 1rem;
                border-radius: 16px;
                width: 98%;
                max-width: 500px;
            }

            .auth-form-side {
                padding: 1.5rem;
            }

            .auth-info-side {
                display: none;
            }
        }
    </style>
</head>

<body>
    <div class="auth-container">
        <div class="row g-0">
            <!-- Left side - Registration Form -->
            <div class="col-lg-7 auth-form-side">
                <div class="auth-form-container">
                    <div class="text-center mb-4">
                        <div class="auth-logo mb-4">
                            <i class="fas fa-user-plus"></i>
                        </div>
                        <h2 class="fw-bold mb-2" style="color: #1C304F;">Tạo Tài khoản Mới</h2>
                        <p class="text-muted">Đăng ký để sử dụng hệ thống quản lý tài liệu khoa học</p>
                    </div>

                    <form asp-action="Register" method="post" class="auth-form" novalidate>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="HoTen" name="HoTen"
                                        placeholder="Họ tên" required>
                                    <label for="HoTen"><i class="fas fa-user me-2"></i>Họ tên</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="username" name="username"
                                        placeholder="Tên đăng nhập" required>
                                    <label for="username"><i class="fas fa-user me-2"></i>Tên đăng nhập</label>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="email" class="form-control" id="email" name="email" placeholder="Email"
                                        required>
                                    <label for="email"><i class="fas fa-envelope me-2"></i>Email</label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="maSo" name="maSo" placeholder="Mã số"
                                        required>
                                    <label for="maSo"><i class="fas fa-id-card me-2"></i>MSSV/GV</label>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="soDienThoai" name="soDienThoai"
                                        placeholder="Số điện thoại" required>
                                    <label for="soDienThoai"><i class="fas fa-phone me-2"></i>Số điện thoại</label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                 <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="chuyenNganh" name="chuyenNganh"
                                        placeholder="Chuyên ngành" required>
                                    <label for="chuyenNganh"><i class="fas fa-book me-2"></i>Chuyên ngành</label>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="password" class="form-control" id="password" name="password"
                                        placeholder="Mật khẩu" required>
                                    <label for="password"><i class="fas fa-lock me-2"></i>Mật khẩu</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="password" class="form-control" id="confirmPassword"
                                        name="confirmPassword" placeholder="Xác nhận mật khẩu" required>
                                    <label for="confirmPassword"><i class="fas fa-lock me-2"></i>Xác nhận mật
                                        khẩu</label>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold" style="color: #1C304F;">
                                <i class="fas fa-user-tag me-2"></i>Vai trò
                            </label>
                            <div class="role-selection">
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="role" id="student"
                                        value="student" checked>
                                    <label class="form-check-label" for="student">
                                        <i class="fas fa-graduation-cap me-1"></i>Sinh viên
                                    </label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="role" id="lecturer"
                                        value="lecturer">
                                    <label class="form-check-label" for="lecturer">
                                        <i class="fas fa-chalkboard-teacher me-1"></i>Giảng viên
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="form-check mb-4">
                            <input class="form-check-input" type="checkbox" id="agreeTerms" required>
                            <label class="form-check-label" for="agreeTerms">
                                Tôi đồng ý với <a href="#" class="text-primary text-decoration-none">Điều khoản sử
                                    dụng</a> và <a href="#" class="text-primary text-decoration-none">Chính sách bảo
                                    mật</a>
                            </label>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                            <i class="fas fa-user-plus me-2"></i>Tạo Tài khoản
                        </button>

                        <div class="text-center">
                            <p class="mb-0">Đã có tài khoản?
                                <a asp-action="Login" class="text-primary fw-semibold text-decoration-none">Đăng nhập
                                    ngay</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Right side - Information -->
            <div class="col-lg-5 auth-info-side d-none d-lg-flex">
                <div class="text-center position-relative">
                    <div class="mb-5">
                        <i class="fas fa-graduation-cap" style="font-size: 4rem; color: white; opacity: 0.9;"></i>
                    </div>
                    <h3 class="fw-bold mb-4">Hệ thống Quản lý<br>Tài liệu Khoa học</h3>
                    <p class="mb-5 opacity-75">Nền tảng hiện đại cho việc quản lý, tìm kiếm và chia sẻ tài liệu khoa học
                    </p>

                    <div class="auth-features">
                        <div class="feature-item">
                            <div class="feature-icon mb-3">
                                <i class="fas fa-book-open"></i>
                            </div>
                            <h6 class="fw-semibold mb-2">Thư viện Số</h6>
                            <p class="small opacity-75 mb-0">Truy cập hàng ngàn tài liệu khoa học chất lượng cao</p>
                        </div>
                        <div class="feature-item">
                            <div class="feature-icon mb-3">
                                <i class="fas fa-search"></i>
                            </div>
                            <h6 class="fw-semibold mb-2">Tìm kiếm Thông minh</h6>
                            <p class="small opacity-75 mb-0">Công cụ tìm kiếm mạnh mẽ với nhiều tiêu chí lọc</p>
                        </div>
                        <div class="feature-item">
                            <div class="feature-icon mb-3">
                                <i class="fas fa-chart-line"></i>
                            </div>
                            <h6 class="fw-semibold mb-2">Báo cáo Chi tiết</h6>
                            <p class="small opacity-75 mb-0">Thống kê và báo cáo toàn diện về hoạt động</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <!-- Custom JavaScript -->
    <script src="~/js/app.js" asp-append-version="true"></script>

    <script>
        $(document).ready(function () {
            // Form validation
            $('.auth-form').on('submit', function (e) {
                var isValid = true;
                var password = $('#password').val();
                var confirmPassword = $('#confirmPassword').val();

                // Check password match
                if (password !== confirmPassword) {
                    alert('Mật khẩu xác nhận không khớp');
                    e.preventDefault();
                    isValid = false;
                }

                // Check password strength
                if (password.length < 6) {
                    alert('Mật khẩu phải có ít nhất 6 ký tự');
                    e.preventDefault();
                    isValid = false;
                }

                // Check terms agreement
                if (!$('#agreeTerms').is(':checked')) {
                    alert('Vui lòng đồng ý với điều khoản sử dụng');
                    e.preventDefault();
                    isValid = false;
                }
            });

            // Password strength indicator
            $('#password').on('input', function () {
                var password = $(this).val();
                var strength = checkPasswordStrength(password);
                // Visual feedback can be added here
            });
        });

        function checkPasswordStrength(password) {
            var strength = 0;
            if (password.length >= 6) strength++;
            if (password.match(/[a-z]/)) strength++;
            if (password.match(/[A-Z]/)) strength++;
            if (password.match(/[0-9]/)) strength++;
            if (password.match(/[^a-zA-Z0-9]/)) strength++;
            return strength;
        }
    </script>
</body>

</html>