@{
    ViewData["Title"] = "Đăng nhập";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hệ thống Quản lý Tài liệu Khoa học</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome 6 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/app.css" asp-append-version="true" />

    <style>
        body {
            background: linear-gradient(135deg, #F0F8FE 0%, #DEEFFB 25%, #5BA7D9 75%, #1C304F 100%);
            min-height: 100vh;
            font-family: 'Inter', sans-serif;
            margin: 0;
            padding: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .auth-container {
            background: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(15px);
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(28, 48, 79, 0.15);
            overflow: hidden;
            max-width: 800px;
            width: 100%;
            border: 1px solid rgba(91, 167, 217, 0.1);
        }

        .auth-left {
            background: linear-gradient(135deg, #5BA7D9, #2E5A8A);
            color: white;
            padding: 2rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            position: relative;
            overflow: hidden;
            min-height: 450px;
        }

        .auth-left::before {
            content: '';
            position: absolute;
            top: -20%;
            right: -20%;
            width: 140%;
            height: 140%;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="50" cy="50" r="1" fill="rgba(255,255,255,0.1)"/></svg>') repeat;
            animation: float 20s infinite linear;
        }

        .auth-right {
            padding: 2rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
            min-height: 450px;
        }

        .auth-logo {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, #5BA7D9, #2E5A8A);
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
            box-shadow: 0 8px 16px rgba(91, 167, 217, 0.3);
        }

        .auth-logo i {
            font-size: 1.5rem;
            color: white;
        }

        .form-floating {
            margin-bottom: 1rem;
        }

        .form-control {
            border-radius: 10px;
            border: 2px solid #e2e8f0;
            padding: 0.75rem;
        }

        .form-control:focus {
            border-color: #5BA7D9;
            box-shadow: 0 0 0 0.2rem rgba(91, 167, 217, 0.25);
        }

        .btn-primary {
            background: linear-gradient(135deg, #5BA7D9, #2E5A8A);
            border: none;
            border-radius: 10px;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            transition: all 0.3s ease;
            width: 100%;
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, #2E5A8A, #1C304F);
            transform: translateY(-1px);
            box-shadow: 0 6px 12px rgba(91, 167, 217, 0.4);
        }

        .btn-outline-secondary {
            border-color: #e2e8f0;
            color: #64748b;
            border-radius: 8px;
            padding: 0.5rem 0.75rem;
            font-size: 0.875rem;
            transition: all 0.3s ease;
        }

        .btn-outline-secondary:hover {
            background-color: #f8fafc;
            border-color: #cbd5e1;
            color: #475569;
        }

        .feature-card {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            padding: 1rem;
            text-align: center;
            margin-bottom: 0.75rem;
            transition: transform 0.3s ease;
        }

        .feature-card:hover {
            transform: translateY(-2px);
        }

        .feature-card i {
            font-size: 1.5rem;
            margin-bottom: 0.5rem;
            opacity: 0.9;
        }

        .text-primary {
            color: #5BA7D9 !important;
        }

        .text-primary:hover {
            color: #2E5A8A !important;
        }

        @@keyframes float {
            0% {
                transform: translateX(0) translateY(0);
            }

            100% {
                transform: translateX(-50px) translateY(-50px);
            }
        }

        @@media (max-width: 991.98px) {
            .auth-container {
                max-width: 500px;
            }

            .auth-left {
                display: none;
            }
        }

        @@media (max-width: 576px) {
            body {
                padding: 0.5rem;
            }

            .auth-right {
                padding: 1.5rem;
            }
        }
    </style>
</head>

<body>
    <div class="auth-container">
        <div class="row g-0">
            <!-- Left side - Branding -->
            <div class="col-lg-5 auth-left d-none d-lg-flex">
                <div class="text-center position-relative">
                    <div class="mb-4">
                        <i class="fas fa-graduation-cap" style="font-size: 3rem; opacity: 0.9;"></i>
                    </div>
                    <h3 class="fw-bold mb-3">Hệ thống Quản lý<br>Tài liệu Khoa học</h3>
                    <p class="mb-4 opacity-75">Nền tảng hiện đại cho việc quản lý và tìm kiếm tài liệu khoa học</p>

                    <div class="feature-cards">
                        <div class="feature-card">
                            <i class="fas fa-search"></i>
                            <div class="small fw-medium">Tìm kiếm thông minh</div>
                        </div>
                        <div class="feature-card">
                            <i class="fas fa-chart-line"></i>
                            <div class="small fw-medium">Báo cáo trực quan</div>
                        </div>
                        <div class="feature-card">
                            <i class="fas fa-mobile-alt"></i>
                            <div class="small fw-medium">Responsive design</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right side - Login form -->
            <div class="col-lg-7 auth-right">
                <div class="login-form" style="max-width: 400px; margin: 0 auto;">
                    <div class="text-center mb-4">
                        <div class="auth-logo">
                            <i class="fas fa-graduation-cap"></i>
                        </div>
                        <h3 class="fw-bold mb-2" style="color: #1C304F;">Chào mừng trở lại!</h3>
                        <p class="text-muted">Đăng nhập để tiếp tục sử dụng hệ thống</p>
                    </div>

                    <!-- Login Form -->
                    <form id="loginForm" method="post" asp-action="Login">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="username" name="Username"
                                placeholder="Tên đăng nhập" required>
                            <label for="username"><i class="fas fa-user me-2"></i>Tên đăng nhập</label>
                        </div>

                        <div class="form-floating">
                            <input type="password" class="form-control" id="password" name="Password"
                                placeholder="Mật khẩu" required>
                            <label for="password"><i class="fas fa-lock me-2"></i>Mật khẩu</label>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="rememberMe" name="RememberMe">
                                <label class="form-check-label text-muted" for="rememberMe">
                                    Ghi nhớ đăng nhập
                                </label>
                            </div>
                            <a href="#" class="text-decoration-none small text-primary">Quên mật khẩu?</a>
                        </div>

                        <button type="submit" class="btn btn-primary mb-3">
                            <i class="fas fa-sign-in-alt me-2"></i>Đăng nhập
                        </button>

                        <div class="text-center">
                            <p class="text-muted small mb-3">
                                Chưa có tài khoản?
                                <a asp-action="Register" class="text-decoration-none fw-medium text-primary">
                                    Đăng ký ngay
                                </a>
                            </p>

                            <!-- Quick login for demo -->
                            <div class="border-top pt-3">
                                <p class="text-muted small mb-2">Đăng nhập nhanh (Demo):</p>
                                <div class="d-flex gap-2 justify-content-center flex-wrap">
                                    <button type="button" class="btn btn-outline-secondary btn-sm quick-login"
                                        data-username="thuthu" data-password="123456" data-role="admin">
                                        <i class="fas fa-user-shield me-1"></i>Thủ thư
                                    </button>
                                    <button type="button" class="btn btn-outline-secondary btn-sm quick-login"
                                        data-username="giangvien" data-password="123456" data-role="lecturer">
                                        <i class="fas fa-chalkboard-teacher me-1"></i>GV
                                    </button>
                                    <button type="button" class="btn btn-outline-secondary btn-sm quick-login"
                                        data-username="sinhvien" data-password="123456" data-role="student">
                                        <i class="fas fa-user-graduate me-1"></i>SV
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <script>
        $(document).ready(function () {
            // Quick login buttons
            $('.quick-login').on('click', function () {
                var username = $(this).data('username');
                var password = $(this).data('password');
                var role = $(this).data('role');

                $('#username').val(username);
                $('#password').val(password);

                // Add visual feedback
                $(this).html('<i class="fas fa-spinner fa-spin me-1"></i>Đang đăng nhập...');

                // Auto submit after delay
                setTimeout(function () {
                    // For demo purposes, redirect based on role
                    switch (role) {
                        case 'admin':
                            window.location.href = '/Admin/Dashboard';
                            break;
                        case 'lecturer':
                            window.location.href = '/Lecturer/Dashboard';
                            break;
                        case 'student':
                            window.location.href = '/Student/Dashboard';
                            break;
                        default:
                            window.location.href = '/';
                    }
                }, 1500);
            });

            // Form submission
            $('#loginForm').on('submit', function (e) {
                e.preventDefault();

                var username = $('#username').val();
                var password = $('#password').val();

                if (!username || !password) {
                    alert('Vui lòng nhập đầy đủ thông tin đăng nhập');
                    return false;
                }

                // Show loading
                $('button[type="submit"]').prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Đang đăng nhập...');

                // Simulate login process
                setTimeout(function () {
                    // Redirect to home page (replace with actual logic)
                    window.location.href = '/';
                }, 2000);
            });
        });
    </script>
</body>

</html>


           
       

           
       
               
           

               
           


                               
                               
